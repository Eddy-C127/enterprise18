<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.mail.push</field>
        <field name="model">res.config.settings</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='integration']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" groups="base.group_no_one">
                    <div class="o_setting_left_pane">
                        <field name="disable_redirect_firebase_dynamic_link"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="disable_redirect_firebase_dynamic_link"/>
                        <div class="text-muted">
                            If disabled, you won't be able to open external URL's in the Android/iOS mobile app (e.g. "View Task" button in email).
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
