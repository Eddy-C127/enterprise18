<?xml version="1.0" encoding="utf-8"?>

<templates xml:space="preserve">

    <t t-inherit="appointment.Calendar.calendar_link_buttons" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_appointment_calendar_group_buttons')]" position="attributes">
            <attribute name="t-if">appointments.length !== 0 || context_user_has_employee</attribute>
        </xpath>
        <xpath expr="//button[@id='select_availabilities']" position="after">
            <t t-if="context_user_has_employee">
                <button id="search_create_work_hours_appointment"
                    class="btn btn-secondary dropdown-item text-uppercase font-weigth-bold ps-3 o_appointment_button_link o_appointment_search_create_work_hours_appointment">
                    <span class="align-bottom">During Work Hours</span>
                </button>
            </t>
        </xpath>
    </t>
</templates>
