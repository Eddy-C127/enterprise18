<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="planning_repeat_slot_view_form" model="ir.ui.view">
        <field name="name">Repeat a Shift</field>
        <field name="model">planning.repeat.slot</field>
        <field name="arch" type="xml">
            <form string="Repeat Shift">
                <sheet>
                    <field name="planning_slot_id" invisible="1"/>
                    <group>
                        <group>
                            <label for="repeat_interval" />
                            <div class="o_row">
                                <field name="repeat_interval" class="oe_inline mr-1"/>
                                <field name="repeat_unit" class="width: 100%"/>
                            </div>
                        </group>
                        <group>
                            <field name="repeat_until" string="Until" class="oe_inline"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_repeat" string="OK" class="btn-primary" type="object" />
                    <button string="discard" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="planning_repeat_slot_action" model="ir.actions.act_window" >
        <field name="name">Repeat a Shift</field>
        <field name="res_model">planning.repeat.slot</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
