<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="planning_create_slot_view_form" model="ir.ui.view">
        <field name="name">planning.create.slot.form</field>
        <field name="model">planning.create.slot</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form string="Planning Form">
                <sheet string="Create Shift">
                    <group attrs="{ 'invisible': [['autocomplete_templates_ids', '=', []]]}">
                        <field name="shift_template_id" domain="[['id', 'in', autocomplete_templates_ids]]" context="{'planning_autocomplete_name': '1'}" widget="radio" limit="5"/>
                    </group>
                    <field name="autocomplete_templates_ids" invisible="1" />
                    <group>
                        <group>
                            <field name="employee_id" string="Assign To"/>
                            <field name="employee_tz_warning" class="text-warning" attrs="{ 'invisible': [['employee_tz_warning', '=', False]] }" />
                            <field name="role_id"/>
                        </group>
                        <group>
                            <field name="start_datetime"/>
                            <field name="end_datetime" />
                        </group>
                        <group>
                            <field name="allocated_hours" widget="float_time"/>
                            <field name="allocated_percentage"/>
                        </group>
                        <br />
                        <group>
                            <group class="o_row">
                                <field name="repeat"/>
                            </group>
                            <group class="o_row" attrs="{'invisible': [('repeat', '=', False)]}">
                                <label for="repeat_interval"/>
                                <div class="o_row">
                                    <field name="repeat_interval" string="" required="1" class="oe_inline"/>
                                    <field name="repeat_unit" string="" required="1" class="oe_inline"/>
                                </div>
                            </group>
                            <group class="o_row" attrs="{'invisible': [('repeat', '=', False)]}">
                                <field name="repeat_until"/>
                            </group>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_create_new" type="object" string="Save" class='btn-primary'/>
                    <button name="discard" string="Discard" class='btn-secondary' special="cancel"/>
                    <button name="action_save_as_template" class="oe_stat_button btn-secondary float-right" string="Save As Template" type="object" icon="fa-floppy-o"
                    />
                </footer>
            </form>
        </field>
    </record>

    <record id="planning_create_slot_action" model="ir.actions.act_window">
        <field name="name">Create Shifts</field>
        <field name="res_model">planning.create.slot</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
