<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="planning_tags_view_tree" model="ir.ui.view" >
        <field name="name">Tags</field>
        <field name="model">planning.tag</field>
        <field name="arch" type="xml">
            <tree editable="bottom" string="Tags" sample="1" multi_edit="1">
                <field name="name"/>
                <field name="color" widget="color_picker" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="planning_tag_action" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">planning.tag</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No tags found. Let's create one!
            </p>
            <p>
                Use tags to categorize your shifts.
            </p>
        </field>
    </record>

    <menuitem
        id="planning_menu_settings_tag"
        name="Tags"
        parent="planning_menu_settings"
        sequence="35"
        action="planning_tag_action"
        groups="planning.group_planning_manager"/>
</odoo>
