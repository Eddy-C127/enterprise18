<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="account_accountant.BankRecGlobalInfo" owl="1">
        <div t-if="state.journalId"
             class="text-nowrap d-flex ms-2 p-1 w-100"
             t-on-click="(ev) => this.actionOpenBankReconciliationReport()">
            <span class="flex-fill text-900 fs-4 pe-none">
                Balance:
            </span>
            <span class="btn btn-link fs-4 py-0"
                  t-esc="state.balance_amount"/>
        </div>
    </t>

</templates>
