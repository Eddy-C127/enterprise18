<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <t t-name="sale_subscription_dashboard.contract_modifications" owl="1">
        <div t-if="!contractModifications.length">
            <i>There is no subscription modification during this period.</i>
        </div>

        <div t-if="contractModifications.length" class="table-responsive o_list_view contract_modifications">
            <table class="o_list_table table table-hover table table-sm table-hover table-striped o_list_table_grouped o_table_dashboard">
                <tr>
                    <th/>
                    <th class=".o_subscription_nw">Date</th>
                    <th>Partner</th>
                    <th>Subscription</th>
                    <th>Template</th>
                    <th t-if="nCompanies &gt; 1">Company</th>
                    <th>Previous MRR</th>
                    <th>Current MRR</th>
                    <th>Delta</th>
                </tr>
                <tr t-foreach="contractModifications"
                    t-as="modification"
                    t-key="modification['type'] + modification['order_id'] + modification['create_date']"
                    class="o_subscription_row"
                    t-on-click="(e) => this.onClickModification(modification['order_id'], modification['model'])"
                >
                    <td><i t-att-class="getClass(modification['type'])"/></td>
                    <td><t t-out="modification['date'] or ''"/></td>
                    <td class="o_subscription_ellipsis"><t t-out="modification['partner'] or ''"/></td>
                    <td class="o_subscription_ellipsis"><t t-out="modification['subscription'] or ''"/></td>
                    <td class="o_subscription_ellipsis"><t t-out="modification['subscription_template'] or ''"/></td>
                    <td t-if="nCompanies &gt; 1"><t t-out="modification['company_name'] or ''"/></td>
                    <td><t t-out="formatMonetaryNumber(modification['previous_mrr'], state.currency_id)"/></td>
                    <td><t t-out="formatMonetaryNumber(modification['current_mrr'], state.currency_id)"/></td>
                    <td><span t-att-class="getColorClass(modification['diff'], 'up')"><t t-out="formatMonetaryNumber(modification['diff'], state.currency_id)"/></span></td>
                </tr>
            </table>
        </div>
    </t>
</odoo>
