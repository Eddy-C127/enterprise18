<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <t t-name="sale_subscription_dashboard.salesperson" owl="1">
        <div class="o_salesman_dashboard">
            <div t-if="salesperson &amp;&amp; salesperson['id']">
                <div class="salesman_name" t-att-id="'salesman_name_' + salesperson['id']">
                    <h1><t t-out="salesperson['name']"/></h1>
                </div>
                <div class="box">
                    <SalespersonSummary mrr="state.salespeople_statistics[salesperson.id].net_new" nrr="state.salespeople_statistics[salesperson.id].nrr" company_currency_id="currency_id"/>
                    <div t-ref="mrr_growth_salesperson" class="position-relative" id="mrr_growth_salesperson"/>
                </div>
                <div class="box">
                    <h2>Subscription Modifications</h2>
                    <p class="text-muted">Subscription modifications aggregate all modifications that happened in selected
                        period. Note that modifications happening on the same day can be grouped together
                        (e.g. two upsells occuring on the same day, or a subscription getting closed and re-opened on the
                        same day).</p>
                    <ContractModifications
                        salesperson="salesperson"
                        nCompanies="nCompanies"
                    />
                </div>
                <div class="box">
                    <h2>Non Recurring invoices</h2>
                    <p class="text-muted">List all invoices containing non-recurring sales and the amount of non-recurring
                        revenues in these invoices for this particular salesperson.</p>
                    <NRRInvoices 
                        salesperson="salesperson"
                        nCompanies="nCompanies"
                    />
                </div>
            </div>
        </div>
    </t>
</odoo>
