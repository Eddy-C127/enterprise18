<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <t t-name="sale_subscription_dashboard.stats_by_plan" owl="1">
        <table class="table table-striped">
            <tr>
                <th>Plan</th>
                <th># of Subscriptions</th>
                <th t-if="selectedStat != 'nb_contracts'"><t t-out="state.stat_types[selectedStat]['name']"/></th>
            </tr>
            <tr t-foreach="statsByPlanState.statsByPlanData" t-as="plan" t-key="plan['name']">
                <td><t t-out="plan['name']"/></td>
                <td><t t-out="plan['nb_customers']"/></td>
                <td t-if="selectedStat != 'nb_contracts'"><t t-out="formatNumber(plan['value'], state.currency_id)"/></td>
            </tr>
        </table>
    </t>
</odoo>
