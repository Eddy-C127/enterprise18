<?xml version="1.0"?>
<odoo>
    <record id="event_track_view_gantt" model="ir.ui.view">
        <field name="name">event.track.view.gantt</field>
        <field name="model">event.track</field>
        <field eval="2" name="priority"/>
        <field name="arch" type="xml">
            <gantt
                date_start="date"
                date_stop="date_end"
                string="Tracks"
                color="color"
                default_group_by="location_id"
                dynamic_range="1">
                <templates>
                    <div t-name="gantt-popover" class="container-fluid">
                        <div class="row no-gutters">
                            <div class="col">
                                <ul>
                                    <li><strong>Start Date: </strong> <t t-esc="date.format('YYYY-MM-DD HH:mm:ss')"/></li>
                                    <li t-if="partner_name"><strong>Proposed By: </strong> <t t-esc="partner_name"/></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </templates>
                <field name="partner_name"/>
            </gantt>
        </field>
    </record>

    <record id="event_view_form" model="ir.ui.view">
        <field name="name">event.event.view.form.inherit</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='track_count']/.." position='replace'>
                <field name="track_gantt_initial_date" invisible="1"/>
                <field name="track_gantt_scale" invisible="1"/>
                <button
                    name="%(website_event_track.action_event_track_from_event)d"
                    type="action"
                    class="oe_stat_button"
                    icon="fa-inbox"
                    context="{'default_date': date_begin, 'initialDate': track_gantt_initial_date, 'default_scale': track_gantt_scale}">
                    <field name="track_count" string="Tracks" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>

    <record model="ir.actions.act_window" id="website_event_track.action_event_track">
        <field name="view_mode">kanban,tree,form,calendar,graph,activity,gantt</field>
        <field name="context">{'default_scale': 'year', 'search_default_location': 1}</field>
    </record>

    <record model="ir.actions.act_window" id="website_event_track.action_event_track_from_event">
        <field name="view_mode">kanban,tree,form,calendar,graph,activity,gantt</field>
    </record>
</odoo>
