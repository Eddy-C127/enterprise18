<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
<!--   MULTI ACCOUNT DRAFT
    <record id="ebay_config_settings_tree" model="ir.ui.view">
      <field name="name">ebay.config.settings.tree</field>
      <field name="model">ebay.config.settings</field>
      <field name="arch" type="xml">
        <tree string="eBay Accounts">
          <field name="name"/>
          <field name="ebay_domain"/>
          <field name="active"/>
          <button name="sync_categories" type="object" string="Sync categories" class="oe_highlight"/>
          <button name="sync_policies" type="object" string="Sync policies" class="oe_highlight"/>
          <button name="sync_product_status" context="{'page_number':1}" type="object" string="Sync product status" class="oe_highlight"/>
        </tree>
      </field>
    </record>

    <record id="ebay_config_settings_form" model="ir.ui.view">
      <field name="name">ebay.config.settings.form</field>
      <field name="model">ebay.config.settings</field>
      <field name="arch" type="xml">
        <form string="eBay Account">
          <sheet>
            <div class="oe_title oe_left">
              <div class="oe_edit_only">
                <label for="name"/>
              </div>
              <h1>
                <field name="name"/>
              </h1>
            </div>
            <group>
              <group>
                <field name="active"/>
                <field name="ebay_domain"/>
                <field name="ebay_out_of_stock"/>
                <field name="ebay_app_id"/>
                <field name="ebay_cert_id"/>
                <field name="ebay_currency" options="{'no_create': True, 'no_open': True}"/>
                <field name="ebay_country" placeholder="US"/>
                <field name="ebay_zip_code"/>
              </group>
            </group>
            <div>
            <label for="ebay_token"/>
            <field name="ebay_token"/>
          </div>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_ebay_configuration" model="ir.actions.act_window">
      <field name="name">eBay Settings</field>
      <field name="res_model">ebay.config.settings</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_ebay_configuration" parent="base.menu_config" sequence="100" action="action_ebay_configuration"/> -->

    <record id="view_sale_ebay_settings" model="ir.ui.view">
      <field name="name">ebay.settings</field>
      <field name="model">sale.config.settings</field>
      <field name="inherit_id" ref="base_setup.view_sale_config_settings"/>
      <field name="arch" type="xml">
      <data>
        <div id="main" position="inside">
          <separator for="id" string="eBay Integration"/>
          <group>
            <label for="id" string="Configuration"/>
            <div>
              <div>
                <button name="sync_ebay_details" type="object" string="Sync countries and currencies" class="oe_highlight"/>
                <button name="sync_categories" type="object" string="Sync categories" class="oe_highlight"/>
                <button name="sync_policies" type="object" string="Sync policies" class="oe_highlight"/>
                <button name="button_sync_product_status" type="object" string="Sync product status" class="oe_highlight"/>
              </div>
              <div groups="base.group_multi_salesteams">
                <label for="ebay_sales_team"/>
                <field name="ebay_sales_team" class="oe_inline"/>
              </div>
              <div>
                <label for="ebay_currency"/>
                <field name="ebay_currency" class="oe_inline" options="{'no_create': True, 'no_open': True}"/>
              </div>
              <div>
                <label for="ebay_country"/>
                <field name="ebay_country" class="oe_inline" options="{'no_create': True, 'no_open': True}"/>
              </div>
              <div>
                <label for="ebay_zip_code"/>
                <field name="ebay_zip_code" class="oe_inline"/>
              </div>
              <div>
                <label for="ebay_domain"/>
                <field name="ebay_domain" class="oe_inline"/>
              </div>
              <div>
                <label for="ebay_site"/>
                <field name="ebay_site" class="oe_inline" options="{'no_create': True, 'no_open': True}"/>
              </div>
              <div>
                <label for="ebay_out_of_stock"/>
                <field name="ebay_out_of_stock" class="oe_inline"/>
              </div>
              <div>
                <label for="ebay_dev_id"/>
                <field name="ebay_dev_id" class="oe_inline"/>
              </div>
              <div attrs="{'invisible': [('ebay_domain','=', 'prod')]}">
                <div>
                  <label for="ebay_sandbox_token"/>
                  <field name="ebay_sandbox_token" class="oe_inline"/>
                </div>
                <div>
                  <label for="ebay_sandbox_app_id"/>
                  <field name="ebay_sandbox_app_id" class="oe_inline"/>
                </div>
                <div>
                  <label for="ebay_sandbox_cert_id"/>
                  <field name="ebay_sandbox_cert_id" class="oe_inline"/>
                </div>
              </div>
              <div attrs="{'invisible': [('ebay_domain','=', 'sand')]}">
                <div>
                  <label for="ebay_prod_token"/>
                  <field name="ebay_prod_token" class="oe_inline"/>
                </div>
                <div>
                  <label for="ebay_prod_app_id"/>
                  <field name="ebay_prod_app_id" class="oe_inline"/>
                </div>
                <div>
                  <label for="ebay_prod_cert_id"/>
                  <field name="ebay_prod_cert_id" class="oe_inline"/>
                </div>
              </div>
            </div>
          </group>
        </div>
      </data>
      </field>
    </record>

  </data>
</openerp>