<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="PartnerDetailsEdit" t-inherit="point_of_sale.PartnerDetailsEdit" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('partner-details-left')]" position="inside">
            <t t-if="pos.isChileanCompany()">
                <div class="partner-detail">
                    <span class="label">Identification Type</span>
                    <select class="detail" name="l10n_latam_identification_type_id"
                        t-on-change="captureChange"
                        t-att-class="{'border-red': missingFields.includes('l10n_latam_identification_type_id')}">
                       <t t-foreach="pos.l10n_latam_identification_types" t-as="l10n_latam_identification_type" t-key="l10n_latam_identification_type.id">
                           <option t-att-value="l10n_latam_identification_type.id"
                                    t-att-selected="props.partner.l10n_latam_identification_type_id ? (props.partner.l10n_latam_identification_type_id[0] ? ((l10n_latam_identification_type.id === props.partner.l10n_latam_identification_type_id[0]) ? true : undefined) : undefined) : undefined">
                               <t t-esc="l10n_latam_identification_type.name" />
                           </option>
                       </t>
                   </select>
                </div>
                <div class="partner-detail">
                    <span class="label">Tax Payer Type</span>
                    <select class="detail" name="l10n_cl_sii_taxpayer_type"
                        t-on-change="captureChange"
                        t-att-class="{'border-red': missingFields.includes('l10n_cl_sii_taxpayer_type')}">
                       <t t-foreach="pos.sii_taxpayer_types" t-as="sii_taxpayer_type" t-key="sii_taxpayer_type[0]">
                           <option t-att-value="sii_taxpayer_type[0]"
                                    t-att-selected="props.partner.l10n_cl_sii_taxpayer_type ? ((sii_taxpayer_type[0] === props.partner.l10n_cl_sii_taxpayer_type) ? true : undefined) : undefined">
                               <t t-esc="sii_taxpayer_type[1]" />
                           </option>
                       </t>
                   </select>
                </div>
                <div class="partner-detail">
                    <span class="label">Giro</span>
                    <input class="detail" name="l10n_cl_activity_description"
                           t-on-change="captureChange" t-att-value="props.partner.l10n_cl_activity_description || ''"
                           placeholder="Describe your activity here..."
                           t-att-class="{'border-red': missingFields.includes('l10n_cl_activity_description')}" />
                </div>
                <div class="partner-detail">
                    <span class="label">DTE Email</span>
                    <input class="detail" name="l10n_cl_dte_email" type="email"
                           t-on-change="captureChange" t-att-value="props.partner.l10n_cl_dte_email || ''"
                           t-att-class="{'border-red': missingFields.includes('l10n_cl_dte_email')}"/>
                </div>
            </t>
        </xpath>
    </t>
</templates>
