<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_forecast_create_wizard_view_form" model="ir.ui.view">
        <field name="name">project.forecast.form.in.gantt</field>
        <field name="model">project.forecast.create</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form string="Forecast Form">
                <sheet string="Project Forecast">
                    <group attrs="{ 'invisible': [['autocomplete_forecast_ids', '=', []]]}">
                        <field name="previous_forecast_id"
                            domain="[['id', 'in', autocomplete_forecast_ids]]"
                            context="{'forecast_autocomplete_name': '1'}"
                            widget="radio"
                            limit="5"
                            />
                    </group>
                    <field name="autocomplete_forecast_ids" invisible="1" />
                    <group>
                        <group>
                            <field name="employee_id" string="Assign To"/>
                            <field name="employee_tz_warning" class="text-warning" attrs="{ 'invisible': [['employee_tz_warning', '=', False]] }" />
                            <field name="project_id"
                                context="{'default_allow_forecast': True}"/>
                            <field name="task_id"
                                context="{'default_project_id': project_id}"/>
                        </group>
                        <group>
                            <field name="start_datetime"/>
                            <field name="end_datetime" />
                        </group>
                        <group>
                            <field name="resource_hours" widget="float_time"/>
                            <field name="resource_time" />
                        </group>
                        <br />
                        <group>
                                <group class="o_row">
                                    <field name="repeat" />
                                </group>
                                <group class="o_row" attrs="{'invisible': [('repeat', '=', False)]}">
                                        <label for="repeat_interval"/>
                                        <div class="o_row">
                                                <field name="repeat_interval" string="" required="1" class="oe_inline"/>
                                                <field name="repeat_unit" string="" required="1" class="oe_inline"/>
                                        </div>
                                </group>
                                <group class="o_row" attrs="{'invisible': [('repeat', '=', False)]}">
                                    <field name="repeat_until"/>
                                </group>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_create_new" type="object" string="Save" class='btn-primary'/>
                    <button name="discard" string="Discard" class='btn-secondary' special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>