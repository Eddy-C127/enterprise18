<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.project</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="50"/>
        <field name="inherit_id" ref="project.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='project_forecast_msg']" position="after">
                <div class="content-group" attrs="{'invisible': [('module_project_forecast', '=', False)]}">
                    <div class="row mt16">
                        <label for="forecast_generation_span_interval" class="col-4 col-lg-4 o_light_label" string="Rate of forecast generation"/>
                        <field name="forecast_generation_span_interval" class="oe_inline col-4 col-lg-2 mr-1"/> <field name="forecast_generation_span_uom" style="width: 100px; margin-right: 8px;"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
