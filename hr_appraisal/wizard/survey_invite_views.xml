<?xml version="1.0" encoding="utf-8"?>
<odoo><data>
    <record id="survey_invite_view_form" model="ir.ui.view">
        <field name="name">survey.invite.view.form.inherit.appraisal</field>
        <field name="model">survey.invite</field>
        <field name="inherit_id" ref="survey.survey_invite_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='survey_id']" position="after">
                <field name="appraisal_id" attrs="{
                    'invisible': [('appraisal_id', '=', False)],
                    'readonly': [('appraisal_id', '!=', False)],
                }"/>
            </xpath>
        </field>
    </record>
</data></odoo>
