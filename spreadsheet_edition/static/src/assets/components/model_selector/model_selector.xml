<?xml version="1.0" encoding="utf-8"?>
<templates>
    <t t-name="spreadsheet_edition.ModelSelector" owl="1">
        <div class="o_sp_input_dropdown" t-ref="autocomplete_container">
            <input t-if="env.isSmall"
                type="text"
                class="o_input"
                readonly=""
                t-att-value="state.autocompleteValue"
            />
            <AutoComplete t-else=""
                value="state.autocompleteValue"
                sources="sources"
                placeholder="placeholder"
                autoSelect="props.autoSelect"
                onSelect.bind="onSelect"
                onInput.bind="onInput"
                onChange.bind="onInput"
            />
            <a role="button" class="o_dropdown_button" draggable="false" />
        </div>
    </t>
</templates>
