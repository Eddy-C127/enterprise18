<?xml version="1.0" encoding="utf-8"?>
<templates>
    <t t-name="spreadsheet_edition.PivotDimension">
        <div class="border bg-white py-1 px-2 d-flex flex-row justify-content-between align-items-center">
            <span t-esc="props.dimension.displayName"/>
            <i class="btn fa fa-times pe-0" t-if="props.onRemoved" t-on-click="() => props.onRemoved(props.dimension)"/>
        </div>
    </t>
</templates>
