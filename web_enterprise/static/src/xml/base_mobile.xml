<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

<t t-name="StatusbarButtons">
    <div class="o_statusbar_buttons">
        <div class="btn-group">
            <a class="btn btn-sm btn-primary dropdown-toggle" href="#"
                data-toggle="dropdown" aria-expanded="false">Action</a>
            <ul class="dropdown-menu" role="menu"/>
        </div>
    </div>
</t>

<t t-name="FieldStatus.content.mobile">
    <button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-toggle="dropdown">
        <t t-if="status" t-esc="status.display_name"/>
    </button>
    <ul class="dropdown-menu o-status-more" role="menu">
        <li t-foreach="selection" t-as="i">
            <t t-call="FieldStatus.content.button"/>
        </li>
    </ul>
</t>

<t t-name="UserMenu.Mobile">
    <ul>
        <li><a href="#" data-menu="documentation">Documentation</a></li>
        <li><a href="#" data-menu="support">Support</a></li>
        <li><a href="#" data-menu="settings">Preferences</a></li>
        <li><a href="#" data-menu="account">My Odoo.com account</a></li>
        <li><a href="#" data-menu="logout">Log out</a></li>
        <li><a href="#" class="hidden" data-menu="shortcut">Add to Home Screen</a></li>
        <li><a href="#" class="hidden" data-menu="switch"> Switch/Add Account</a></li>
    </ul>
</t>

<t t-name="Menu.Mobile.TopBar">
    <div class="o_mobile_menu_container o_hidden"/>
</t>

<t t-name="Menu.Mobile.UserMenu">
    <div class="o_mobile_menu_top_bar">
        <div class="o_mobile_menu_top_bar_content ml16">
            <div class="o_mobile_menu_user_menu mt8 mb8">
                <img class="img-circle oe_mobile_menu_topbar_avatar mr8" t-att-src="'/web/image?model=res.users&amp;field=image_small&amp;id=' + session.uid"/>
                <span><t t-esc="session.name"/></span>
                <span t-if="enable_menu" class="o_user_menu_caret_icon dropup">
                    <span class="caret ml4"/>
                </span>
            </div>
        </div>
        <span class="fa fa-close o_mobile_menu_close pull-right mr16 mt16"/>
    </div>
    <div class="o_mobile_menu_content o_mobile_menu_darken">
        <div class="o_mobile_menu_app_menus o_mobile_menu_user_menus o_hidden mt16 mb16">
            <div t-if="session.user_companies" class="o_mobile_menu_user_companies">
                <label class="ml16">
                    <strong>COMPANIES</strong>
                </label>
                <t t-foreach="session.user_companies.allowed_companies" t-as="company">
                    <div t-attf-class="row o_mobile_menu_user_company #{session.user_companies.current_company[0] == company[0] ? 'active' : ''}" t-att-data-id="company[0]">
                        <div class="col-md-12">
                            <span class="fa fa-building-o mobile_menu_company_icon mr16"/>
                            <t t-esc="company[1]"/>
                        </div>
                    </div>
                </t>
            </div>
            <div class="o_mobile_menu_user_menu_items mt4 ml4"/>
        </div>
    </div>
</t>

<t t-name="Menu.Mobile.Sections">
    <div class="o_mobile_menu_app_menus mt16 mb16">
        <ul class="o_burger_menu_root">
            <t t-foreach="menu_items" t-as="menu">
                <t t-set="depth" t-value="1"/>
                <t t-if="!menu.children.length">
                    <t t-set="depth" t-value="-1"/>
                    <t t-call="Menu.link"/>
                </t>
                <t t-if="menu.children.length">
                    <li class="o_burger_menu_section">
                        <a href="#" t-att-class="'o_menu_entry_lvl_' + depth" t-att-data-menu-xmlid="menu.xmlid" data-toggle="dropdown" role="button" aria-expanded="false"><t t-esc="menu.name"/>
                            <span class="fa fa-chevron-right toggle_icon mt4 pull-right"/>
                        </a>
                        <ul class="o_mobile_menu_section_container">
                            <t t-foreach="menu.children" t-as="menu">
                                <t t-set="enable_multi_level_dropdown" t-value="true"/>
                                <t t-call="Menu.link"/>
                            </t>
                            <t t-set="depth" t-value="depth + 1"/>
                        </ul>
                    </li>
                </t>
            </t>
        </ul>
    </div>
</t>

</templates>
