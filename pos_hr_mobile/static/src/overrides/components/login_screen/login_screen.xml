<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="pos_hr_mobile.LoginScreen" t-inherit="pos_hr.LoginScreen" t-inherit-mode="extension">
        <xpath expr="//p[hasclass('login-barcode-text')]" position="replace">
            <p t-if="!hasMobileScanner" class="login-barcode-text">Scan your badge</p>
            <p t-else="" class="login-barcode-text">Tap to scan</p>
        </xpath>
        <xpath expr="//span[hasclass('mobile-scanner')]" position="attributes">
            <attribute name="t-on-click">open_mobile_scanner</attribute>
        </xpath>
    </t>
</templates>
