<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="pos_hr_mobile.LoginScreen" t-inherit="pos_hr.LoginScreen" t-inherit-mode="extension">
        <xpath expr="//span[hasclass('login-barcode-text')]" position="replace">
            <span t-if="!hasMobileScanner" class="login-barcode-text d-flex flex-grow-1 align-items-center">Scan your badge</span>
            <span t-else="" class="login-barcode-text d-flex flex-grow-1 align-items-center">Tap to scan</span>
        </xpath>
        <xpath expr="//button[hasclass('mobile-scanner')]" position="attributes">
            <attribute name="t-on-click">open_mobile_scanner</attribute>
        </xpath>
    </t>
</templates>
