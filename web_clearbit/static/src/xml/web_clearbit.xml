<?xml version="1.0" encoding="utf-8"?>
<templates>
    <t t-name="web_clearbit.dropdown">
        <div class="o_clearbit_dropdown_box">
            <ul class="dropdown-menu">
                <t t-foreach="suggestions" t-as="info">
                    <li t-attf-class="o_clearbit_suggestion #{info_index == 0 and 'active' or ''}" t-att-data-index="info_index">
                        <img class="o_clearbit_image" t-att-src="info['logo']" onerror="this.src='/web/static/src/img/placeholder.png'"/>
                        <div class="o_clearbit_info">
                            <div class="o_clearbit_name">
                                <t t-esc="info['name'] or '&#160;'" />
                            </div>
                            <div class="o_clearbit_domain">
                                <t t-esc="info['domain']" />
                            </div>
                        </div>
                    </li>
                </t>
            </ul>
        </div>
    </t>
</templates>
