<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_form" model="ir.ui.view">
        <field name="name">view.employee.form.inherit.hr.employee.billable.time.target</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <group name="application_group" position="inside">
                <field name="show_billing_rate_target" invisible="1"/>
                <span class="o_wrap_label" invisible="not show_billing_rate_target">
                    <label for="billing_rate_target" groups="hr_timesheet.group_hr_timesheet_approver"/>
                </span>
                <span class="d-flex w-50" name="billing_rate_target" invisible="not show_billing_rate_target">
                    <field name="billing_rate_target" widget="percentage" class="oe_inline" groups="hr_timesheet.group_hr_timesheet_approver"/>
                    <span class="ml4 w-100" groups="hr_timesheet.group_hr_timesheet_approver">per month</span>
                </span>
            </group>
        </field>
    </record>
</odoo>
