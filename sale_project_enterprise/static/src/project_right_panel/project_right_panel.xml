<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">

    <t t-inherit="project_enterprise.ProjectRightPanel" t-inherit-mode="extension" owl="1">
        <xpath expr="//t[@t-call='project.StatButtonsSection']" position="after">
            <t t-call="sale_project_enterprise.SalesSection"/>
        </xpath>
    </t>

    <t t-name="sale_project_enterprise.SalesSection" t-inherit="sale_project.SalesSection" t-inherit-mode="primary" owl="1">
        <xpath expr="//div[hasclass('o_rightpanel_title')]" position="before">
            <span t-on-click="_onClickSection"><i t-attf-class="fa {{section.sales.closed ? 'fa-caret-right' : 'fa-caret-down'}}"></i></span>
        </xpath>
        <xpath expr="//div[hasclass('o_rightpanel_header')]" position="attributes">
            <attribute name="t-on-click">_onClickSection</attribute>
        </xpath>
        <xpath expr="//div[hasclass('o_rightpanel_data')]" position="attributes">
            <attribute name="t-attf-class" separator=" " add="{{section.sales.closed ? 'o_rightpanel_hidden' : ''}}"/>
        </xpath>
    </t>

</templates>
