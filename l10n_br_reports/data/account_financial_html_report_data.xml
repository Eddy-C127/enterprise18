<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- BALANCE SHEET -->
    <record id="account_financial_report_br_balancesheet0" model="account.financial.html.report">
        <field name="name">Balanço Patrimonial</field>
        <field name="date_range" eval="False"/>
        <field name="analytic" eval="True"/>
        <field name="unfold_all_filter" eval="True"/>
        <field name="show_journal_filter" eval="True"/>
        <field name="parent_id" ref="l10n_br.account_reports_br_statements_menu"/>
        <field name="line_ids">
            <record id="account_financial_report_total_assets0" model="account.financial.html.report.line">
                <field name="name">ATIVO</field>
                <field name="code">BR_TA</field>
                <field name="control_domain" eval="[('account_id.internal_group', '=', 'asset')]"/>
                <field name="formulas">BR_CA + BR_PNCA</field>
                <field name="sequence" eval="10"/>
                <field name="level" eval="0"/>
                <field name="children_ids">
                    <record id="account_financial_report_current_assets_view0" model="account.financial.html.report.line">
                        <field name="name">ATIVO CIRCULANTE</field>
                        <field name="code">BR_CA</field>
                        <field name="control_domain" eval="[
                            ('account_id.account_type', 'in', ['asset_cash', 'asset_current', 'asset_prepayments', 'asset_receivable']),
                        ]"/>
                        <field name="formulas">BR_DI + BR_CRE + BR_EST + BR_DES + BR_BIO + BR_NCFS</field>
                        <field name="sequence" eval="10"/>
                        <field name="level" eval="1"/>
                        <field name="children_ids">
                            <record id="account_financial_report_disponibilidades" model="account.financial.html.report.line">
                                <field name="name">DISPONIBILIDADES</field>
                                <field name="code">BR_DI</field>
                                <field name="domain" eval="[('account_id.code', '=like', '1.01.01%')]"/>
                                <field name="groupby">account_id</field>
                                <field name="formulas">sum</field>
                                <field name="sequence" eval="10"/>
                                <field name="level" eval="2"/>
                            </record>
                            <record id="account_financial_report_creditos" model="account.financial.html.report.line">
                                <field name="name">CRÉDITOS</field>
                                <field name="code">BR_CRE</field>
                                <field name="domain" eval="[('account_id.code', '=like', '1.01.02%')]"/>
                                <field name="groupby">account_id</field>
                                <field name="formulas">sum</field>
                                <field name="sequence" eval="20"/>
                                <field name="level" eval="2"/>
                            </record>
                            <record id="account_financial_report_estoques" model="account.financial.html.report.line">
                                <field name="name">ESTOQUES</field>
                                <field name="code">BR_EST</field>
                                <field name="domain" eval="[('account_id.code', '=like', '1.01.03%')]"/>
                                <field name="groupby">account_id</field>
                                <field name="formulas">sum</field>
                                <field name="sequence" eval="30"/>
                                <field name="level" eval="2"/>
                            </record>
                            <record id="account_financial_report_despesas" model="account.financial.html.report.line">
                                <field name="name">DESPESAS DO EXERCÍCIO SEGUINTE</field>
                                <field name="code">BR_DES</field>
                                <field name="domain" eval="[('account_id.code', '=like', '1.01.05%')]"/>
                                <field name="groupby">account_id</field>
                                <field name="formulas">sum</field>
                                <field name="sequence" eval="40"/>
                                <field name="level" eval="2"/>
                            </record>
                            <record id="account_financial_report_bio_assets" model="account.financial.html.report.line">
                                <field name="name">ATIVO BIOLÓGICO - CIRCULANTE</field>
                                <field name="code">BR_BIO</field>
                                <field name="domain" eval="[('account_id.code', '=like', '1.01.10%')]"/>
                                <field name="groupby">account_id</field>
                                <field name="formulas">sum</field>
                                <field name="sequence" eval="50"/>
                                <field name="level" eval="2"/>
                            </record>
                            <record id="account_financial_report_noncurrent_assets_for_sale" model="account.financial.html.report.line">
                                <field name="name">ATIVO NÃO CIRCULANTE MANTIDO PARA VENDA</field>
                                <field name="code">BR_NCFS</field>
                                <field name="domain" eval="[('account_id.code', '=like', '1.01.11%')]"/>
                                <field name="groupby">account_id</field>
                                <field name="formulas">sum</field>
                                <field name="sequence" eval="60"/>
                                <field name="level" eval="2"/>
                            </record>
                        </field>
                    </record>
                    <record id="account_financial_report_non_current_assets_view0" model="account.financial.html.report.line">
                        <field name="name">ATIVO NÃO CIRCULANTE</field>
                        <field name="code">BR_PNCA</field>
                        <field name="control_domain" eval="[('account_id.account_type', 'in', ('asset_non_current', 'asset_fixed'))]"/>
                        <field name="groupby">account_id</field>
                        <field name="formulas">BR_RLP + BR_INV + BR_IMOB + BR_INT + BR_DIF</field>
                        <field name="sequence" eval="20"/>
                        <field name="level" eval="1"/>
                        <field name="children_ids">
                            <record id="account_financial_report_long_term" model="account.financial.html.report.line">
                                <field name="name">REALIZÁVEL A LONGO PRAZO</field>
                                <field name="code">BR_RLP</field>
                                <field name="domain" eval="[('account_id.code', '=like', '1.02.01%')]"/>
                                <field name="groupby">account_id</field>
                                <field name="formulas">sum</field>
                                <field name="sequence" eval="10"/>
                                <field name="level" eval="2"/>
                            </record>
                            <record id="account_financial_report_investments" model="account.financial.html.report.line">
                                <field name="name">INVESTIMENTOS</field>
                                <field name="code">BR_INV</field>
                                <field name="domain" eval="[('account_id.code', '=like', '1.02.02%')]"/>
                                <field name="groupby">account_id</field>
                                <field name="formulas">sum</field>
                                <field name="sequence" eval="20"/>
                                <field name="level" eval="2"/>
                            </record>
                            <record id="account_financial_report_immobilized" model="account.financial.html.report.line">
                                <field name="name">IMOBILIZADO</field>
                                <field name="code">BR_IMOB</field>
                                <field name="domain" eval="[('account_id.code', '=like', '1.02.03%')]"/>
                                <field name="groupby">account_id</field>
                                <field name="formulas">sum</field>
                                <field name="sequence" eval="30"/>
                                <field name="level" eval="2"/>
                            </record>
                            <record id="account_financial_report_intangible" model="account.financial.html.report.line">
                                <field name="name">INTANGÍVEL</field>
                                <field name="code">BR_INT</field>
                                <field name="domain" eval="[('account_id.code', '=like', '1.02.05%')]"/>
                                <field name="groupby">account_id</field>
                                <field name="formulas">sum</field>
                                <field name="sequence" eval="40"/>
                                <field name="level" eval="2"/>
                            </record>
                            <record id="account_financial_report_diferido" model="account.financial.html.report.line">
                                <field name="name">DIFERIDO</field>
                                <field name="code">BR_DIF</field>
                                <field name="domain" eval="[('account_id.code', '=like', '1.02.06%')]"/>
                                <field name="groupby">account_id</field>
                                <field name="formulas">sum</field>
                                <field name="sequence" eval="50"/>
                                <field name="level" eval="2"/>
                            </record>
                        </field>
                    </record>
                </field>
            </record>
            <record id="account_financial_report_liabilities_view0" model="account.financial.html.report.line">
                <field name="name">PASSIVO</field>
                <field name="code">BR_L</field>
                <field name="groupby">account_id</field>
                <field name="control_domain" eval="[
                    '|', ('account_id.internal_group', '=', 'equity'),
                    '|', ('account_id.internal_group', '=', 'income'),
                    '|', ('account_id.internal_group', '=', 'expense'),
                        ('account_id.internal_group', '=', 'liability')
                ]"/>
                <field name="formulas">BR_CL + BR_NC + BR_EQ + BR_LUCRO</field>
                <field name="sequence" eval="20"/>
                <field name="green_on_positive" eval="False"/>
                <field name="level" eval="0"/>
                <field name="children_ids">
                    <record id="account_financial_report_current_revenue" model="account.financial.html.report.line">
                        <field name="name">LUCRO DO ANO ATUAL</field>
                        <field name="code">BR_LUCRO</field>
                        <field name="domain" eval="[
                            '|', ('account_id.code', '=like', '3.01.01%'),
                            '|', ('account_id.code', '=like', '3.01.05%'),
                            '|', ('account_id.code', '=like', '3.02.01%'),
                            '|', ('account_id.code', '=like', '3.11.01%'),
                            '|', ('account_id.code', '=like', '3.11.05%'),
                            '|', ('account_id.code', '=like', '3.12.01%'),
                            ('account_id.code', '=like', '999%'),
                        ]"/>
                        <field name="groupby">account_id</field>
                        <field name="formulas">-sum</field>
                        <field name="sequence" eval="1"/>
                        <field name="special_date_changer">from_beginning</field>
                        <field name="level" eval="1"/>
                    </record>
                    <record id="account_financial_report_current_liabilities0" model="account.financial.html.report.line">
                        <field name="name">PASSIVO CIRCULANTE</field>
                        <field name="code">BR_CL</field>
                        <field name="control_domain" eval="[
                            ('account_id.account_type', 'in', ['liability_current', 'liability_credit_card', 'liability_payable'])
                        ]"/>
                        <field name="formulas">BR_CL1</field>
                        <field name="sequence" eval="10"/>
                        <field name="green_on_positive" eval="False"/>
                        <field name="level" eval="1"/>
                        <field name="children_ids">
                            <record id="account_financial_report_current_liabilities1" model="account.financial.html.report.line">
                                <field name="name">OBRIGAÇÕES DO CIRCULANTE</field>
                                <field name="code">BR_CL1</field>
                                <field name="domain" eval="[('account_id.code', '=like', '2.01%')]"/>
                                <field name="groupby">account_id</field>
                                <field name="formulas">-sum</field>
                                <field name="sequence" eval="10"/>
                                <field name="green_on_positive" eval="False"/>
                                <field name="level" eval="2"/>
                            </record>
                        </field>
                    </record>
                    <record id="account_financial_report_non_current_liabilities0" model="account.financial.html.report.line">
                        <field name="name">PASSIVO NÃO-CIRCULANTE</field>
                        <field name="code">BR_NC</field>
                        <field name="control_domain" eval="[('account_id.account_type', '=', 'liability_non_current')]"/>
                        <field name="groupby">account_id</field>
                        <field name="formulas">BR_LP</field>
                        <field name="sequence" eval="20"/>
                        <field name="green_on_positive" eval="False"/>
                        <field name="level" eval="1"/>
                        <field name="children_ids">
                            <record id="account_financial_report_non_current_liabilities1" model="account.financial.html.report.line">
                                <field name="name">OBRIGAÇÕES A LONGO PRAZO</field>
                                <field name="code">BR_LP</field>
                                <field name="domain" eval="[('account_id.code', '=like', '2.02%')]"/>
                                <field name="groupby">account_id</field>
                                <field name="formulas">-sum</field>
                                <field name="sequence" eval="10"/>
                                <field name="green_on_positive" eval="False"/>
                                <field name="level" eval="2"/>
                            </record>
                        </field>
                    </record>
                    <record id="account_financial_report_equity0" model="account.financial.html.report.line">
                        <field name="name">PATRIMÔNIO LÍQUIDO</field>
                        <field name="code">BR_EQ</field>
                        <field name="control_domain" eval="[('account_id.account_type', '=', 'equity')]"/>
                        <field name="formulas">BR_CAPITAL_SOCIAL + BR_RESERVAS + BR_AJ + BR_OC</field>
                        <field name="sequence" eval="30"/>
                        <field name="level" eval="1"/>
                        <field name="children_ids">
                            <record id="account_financial_share_capital" model="account.financial.html.report.line">
                                <field name="name">CAPITAL SOCIAL</field>
                                <field name="code">BR_CAPITAL_SOCIAL</field>
                                <field name="domain" eval="[('account_id.code', '=like', '2.03.01%')]"/>
                                <field name="groupby">account_id</field>
                                <field name="formulas">-sum</field>
                                <field name="sequence" eval="10"/>
                                <field name="level" eval="2"/>
                            </record>
                            <record id="account_financial_retained_earnings0" model="account.financial.html.report.line">
                                <field name="name">RESERVAS</field>
                                <field name="code">BR_RESERVAS</field>
                                <field name="domain" eval="[('account_id.code', '=like', '2.03.02%')]"/>
                                <field name="groupby">account_id</field>
                                <field name="formulas">-sum</field>
                                <field name="sequence" eval="20"/>
                                <field name="level" eval="2"/>
                            </record>
                            <record id="account_financial_ajustes" model="account.financial.html.report.line">
                                <field name="name">AJUSTES DE AVALIAÇÃO PATRIMONIAL</field>
                                <field name="code">BR_AJ</field>
                                <field name="domain" eval="[('account_id.code', '=like', '2.03.03%')]"/>
                                <field name="groupby">account_id</field>
                                <field name="formulas">-sum</field>
                                <field name="sequence" eval="30"/>
                                <field name="level" eval="2"/>
                            </record>
                            <record id="account_financial_outras_contas" model="account.financial.html.report.line">
                                <field name="name">OUTRAS CONTAS DO PATRIMÔNIO LÍQUIDO</field>
                                <field name="code">BR_OC</field>
                                <field name="domain" eval="[('account_id.code', '=like', '2.03.04%')]"/>
                                <field name="groupby">account_id</field>
                                <field name="formulas">-sum</field>
                                <field name="sequence" eval="40"/>
                                <field name="level" eval="2"/>
                            </record>
                        </field>
                    </record>
                </field>
            </record>
            <record id="account_financial_report_off_sheet" model="account.financial.html.report.line">
                <field name="name">CONTAS FORA DO BALANÇO PATRIMONIAL</field>
                <field name="code">BR_OS</field>
                <field name="domain" eval="[('account_id.account_type', '=', 'off_balance')]"/>
                <field name="control_domain" eval="[('account_id.internal_group', '=', 'off_balance')]"/>
                <field name="groupby">account_id</field>
                <field name="formulas">-sum</field>
                <field name="sequence" eval="40"/>
                <field name="level" eval="0"/>
                <field name="hide_if_empty" eval="1"/>
            </record>
        </field>
    </record>
    <record id="account_financial_report_net_assets0" model="account.financial.html.report.line">
        <field name="name">Ativos Líquidos</field>
        <field name="code">BR_NA</field>
        <field name="formulas">BR_TA - BR_L</field>
        <field name="sequence" eval="50"/>
        <field name="level" eval="0"/>
    </record>

    <!-- PROFIT AND LOSS STATEMENT -->
    <record id="account_financial_report_pnl_br" model="account.financial.html.report">
        <field name="name">Demonstração dos Resultados</field>
        <field name="unfold_all_filter" eval="True"/>
        <field name="parent_id" ref="l10n_br.account_reports_br_statements_menu"/>
        <field name="show_journal_filter" eval="True"/>
        <field name="country_id" ref="base.br"/>
        <field name="line_ids">
            <record id="account_financial_report_profit" model="account.financial.html.report.line">
                <field name="name">RESULTADO LÍQUIDO DO PERÍODO</field>
                <field name="code">BR_PROFIT</field>
                <field name="formulas">BR_RLAG + BR_CSLL_IRPJ + BR_RLAR + BR_CSLL_AR</field>
                <field name="control_domain" eval="[
                    '|', ('account_id.internal_group', '=', 'income'),
                    ('account_id.internal_group', '=', 'expense')
                ]"/>
                <field name="sequence" eval="10"/>
                <field name="level" eval="0"/>
                <field name="children_ids">
                    <record id="account_financial_report_pnl_resultado_geral" model="account.financial.html.report.line">
                        <field name="name">RESULTADO LÍQUIDO DO PERÍODO ANTES DO IRPJ E DA CSLL - ATIVIDADE GERAL</field>
                        <field name="code">BR_RLAG</field>
                        <field name="formulas">BR_ROAG + BR_PART_AG</field>
                        <field name="sequence" eval="10"/>
                        <field name="level" eval="1"/>
                        <field name="children_ids">
                            <record id="account_financial_resultado_ag" model="account.financial.html.report.line">
                                <field name="name">RESULTADO OPERACIONAL</field>
                                <field name="code">BR_ROAG</field>
                                <field name="domain" eval="[
                                    '|', ('account_id.code', '=like', '3.01.01%'),
                                    '|', ('account_id.code', '=like', '999001%'),
                                    ('account_id.code', '=like', '999002%')
                                ]"/>
                                <field name="groupby">account_id</field>
                                <field name="formulas">-sum</field>
                                <field name="sequence" eval="10"/>
                                <field name="level" eval="2"/>
                            </record>
                            <record id="account_financial_report_participacoes_ag" model="account.financial.html.report.line">
                                <field name="name">PARTICIPAÇÕES</field>
                                <field name="code">BR_PART_AG</field>
                                <field name="formulas">sum</field>
                                <field name="domain" eval="[('account_id.code', '=like', '3.01.05%')]"/>
                                <field name="groupby">account_id</field>
                                <field name="sequence" eval="20"/>
                                <field name="level" eval="2"/>
                            </record>
                        </field>
                    </record>
                    <record id="account_financial_report_csll_irpj" model="account.financial.html.report.line">
                        <field name="name">PROVISÃO PARA CSLL E IRPJ</field>
                        <field name="code">BR_CSLL_IRPJ</field>
                        <field name="domain" eval="[('account_id.code', '=like', '3.02%')]"/>
                        <field name="formulas">sum</field>
                        <field name="groupby">account_id</field>
                        <field name="sequence" eval="20"/>
                        <field name="level" eval="1"/>
                    </record>
                    <record id="account_financial_report_pnl_resultado_rural" model="account.financial.html.report.line">
                        <field name="name">RESULTADO LÍQUIDO DO PERÍODO ANTES DO IRPJ E DA CSLL - ATIVIDADE RURAL</field>
                        <field name="code">BR_RLAR</field>
                        <field name="formulas">BR_ROAR + BR_PART_AR</field>
                        <field name="level" eval="1"/>
                        <field name="sequence" eval="30"/>
                        <field name="children_ids">
                            <record id="account_financial_report_resultado_ar" model="account.financial.html.report.line">
                                <field name="name">RESULTADO OPERACIONAL DA ATIVIDADE RURAL</field>
                                <field name="code">BR_ROAR</field>
                                <field name="domain" eval="[('account_id.code', '=like', '3.11.01%')]"/>
                                <field name="formulas">-sum</field>
                                <field name="groupby">account_id</field>
                                <field name="sequence" eval="10"/>
                                <field name="level" eval="2"/>
                            </record>
                            <record id="account_financial_report_participacoes_ar" model="account.financial.html.report.line">
                                <field name="name">PARTICIPAÇÕES</field>
                                <field name="code">BR_PART_AR</field>
                                <field name="domain" eval="[('account_id.code', '=like', '3.11.05%')]"/>
                                <field name="formulas">sum</field>
                                <field name="groupby">account_id</field>
                                <field name="sequence" eval="20"/>
                                <field name="level" eval="2"/>
                            </record>
                        </field>
                    </record>
                    <record id="account_financial_report_csll_ar" model="account.financial.html.report.line">
                        <field name="name">PROVISÃO PARA CSLL (ATIVIDADE RURAL)</field>
                        <field name="code">BR_CSLL_AR</field>
                        <field name="domain" eval="[('account_id.code', '=like', '3.12%')]"/>
                        <field name="formulas">sum</field>
                        <field name="groupby">account_id</field>
                        <field name="sequence" eval="40"/>
                        <field name="level" eval="1"/>
                    </record>
                </field>
            </record>
        </field>
    </record>
    <record id="action_account_report_brpnl" model="ir.actions.client">
        <field name="name">Demonstração dos Resultados</field>
        <field name="tag">account_report</field>
        <field name="context" eval="{'model': 'account.financial.html.report', 'id': ref('account_financial_report_pnl_br')}"/>
    </record>
    <record id="account_financial_report_current_revenue" model="account.financial.html.report.line">
        <field name="action_id" ref="action_account_report_brpnl"/>
    </record>
</odoo>
