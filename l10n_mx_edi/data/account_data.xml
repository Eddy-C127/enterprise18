<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Actions update_pac_status for multi -->
        <record id="update_pac_status_server_action" model="ir.actions.server">
            <field name="name">Update PAC status</field>
            <field name="model_id" ref="account.model_account_invoice"/>
            <field name="code">
records.l10n_mx_edi_update_pac_status()
            </field>
        </record>

        <record id="update_pac_status_ir_values" model="ir.values">
            <field name="model_id" ref="account.model_account_invoice" />
            <field name="name">Update PAC status</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.server,' +str(ref('update_pac_status_server_action'))" />
            <field name="key">action</field>
            <field name="model">account.invoice</field>
        </record>
    </data>
</odoo>
