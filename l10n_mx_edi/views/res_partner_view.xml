<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_partner_form_inherit_l10n_mx_edi" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr=".//field[@name='street2']" position="after">
                    <field name="l10n_mx_edi_colony" placeholder="Colony..."/>
                    <field name="l10n_mx_edi_locality" placeholder="Locality..."/>
                </xpath>
                <xpath expr="//notebook[last()]" position="inside">
                    <page string="Addenda" attrs="{'invisible': [('is_company', '=', False)]}">
                        <group>
                            <field name="l10n_mx_edi_addenda"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
