<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="PartnerDetailsEdit" t-inherit="point_of_sale.PartnerDetailsEdit" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('partner-details-right')]" position="inside">
            <t t-if="this.partnerInfos.useLimit">
                <div class="partner-detail">
                    <span class="label credit-gestion">Due balance</span>
                    <span t-esc="env.pos.format_currency(this.partnerInfos.totalDue)" />
                </div>
                <div class="partner-detail">
                    <span class="label credit-gestion">Credit limit</span>
                    <span t-esc="env.pos.format_currency(this.partnerInfos.creditLimit)" />
                </div>
            </t>
        </xpath>
    </t>
</templates>
