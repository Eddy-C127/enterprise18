<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="ActionpadWidget" t-inherit="point_of_sale.ActionpadWidget" t-inherit-mode="extension" owl="1">
        <xpath expr="//button[hasclass('set-partner')]" position="replace">
            <button class="button set-partner" t-att-class="{'decentered': isLongName, 'partner-credit-limit-reached': this.partnerInfos.overDue and this.partnerInfos.useLimit}"
                    t-on-click="() => this.pos.selectPartner()">
                <t t-if="!env.isMobile"><i class="fa fa-user" role="img" aria-label="Customer" title="Customer" /></t>
                <t t-if="props.partner">
                    <t t-esc="props.partner.name" />
                    <i class="fa fa-warning" style="margin-left: 5px" t-if="this.partnerInfos.overDue and this.partnerInfos.useLimit" />
                </t>
                <t t-else="">
                    Customer
                </t>
            </button>
        </xpath>
    </t>
 </templates>
