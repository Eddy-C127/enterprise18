<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_settle_due.PaymentScreen" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('partner-button')]/div[hasclass('button')]" position="replace">
            <div class="button partner-due-balance-button"
                t-att-class="{ highlight: this.highlightPartnerBtn, 'credit-limit-warning': this.partnerInfos.overDue and this.partnerInfos.useLimit}"
                t-on-click="() => this.selectPartner(false, [])">
                <i class="fa fa-user" role="img" title="Customer" />
                <span class="partner-due-balance">
                    <t t-if="currentOrder.get_partner()">
                        <t t-esc="currentOrder.get_partner().name" />
                        <i class="fa fa-warning" style="margin-left: 5px" t-if="this.partnerInfos.overDue and this.partnerInfos.useLimit" />
                    </t>
                    <t t-if="!currentOrder.get_partner()">
                        Customer
                    </t>
                </span>
            </div>
        </xpath>
    </t>
 </templates>
