<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_settle_due.PartnerEditor" t-inherit="point_of_sale.PartnerEditor" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('partner-details-box')]" position="inside">
            <div class="partner-detail col">
                <label class="label form-label credit-gestion">Due balance</label>
                <input type="text" class="form-control" t-att-placeholder="env.utils.formatCurrency(partnerInfos.totalDue)" disabled="disabled"/> 
            </div>
            <t t-if="partnerInfos.useLimit">
                <div class="partner-detail col">
                    <label class="label form-label credit-gestion">Credit limit</label>
                    <input type="text" class="form-control" t-att-placeholder="env.utils.formatCurrency(partnerInfos.creditLimit)" disabled="disabled" />
                </div>
            </t>
        </xpath>
        <xpath expr="//t[@t-set-slot='footer']" position="inside">
            <button t-if="partnerInfos.totalDue" class="btn btn-outline-secondary" t-on-click="settleCustomerDue">
                Settle due accounts
            </button>
        </xpath>
    </t>
</templates>
