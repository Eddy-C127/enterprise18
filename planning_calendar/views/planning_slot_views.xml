<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="planning_view_form" model="ir.ui.view">
        <field name="model">planning.slot</field>
        <field name="inherit_id" ref="planning.planning_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <field name="calendar_event_id" invisible="1" />
                <field name="show_calendar_event" invisible="1" />
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button string="Meeting" class="oe_stat_button" icon="fa-calendar"
                        name="action_view_meeting" type="object" attrs="{'invisible': [('show_calendar_event', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
