<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
<t t-name="FieldBinaryTabletImageIot">
    <div class="o_field_image">
        <t t-if="widget.mode !== 'readonly'">
            <div>
                <t t-if="!widget.ip">
                    <div class="o_form_image_controls">
                        <button class="fa fa-pencil fa-lg pull-left o_select_file_button" title="Edit" aria-label="Edit"/>
                        <button class="fa fa-trash-o fa-lg pull-right o_clear_file_button" title="Clear" aria-label="Clear"/>

                        <span class="o_form_binary_progress">Uploading...</span>
                        <t t-call="HiddenInputFile">
                            <t t-set="image_only" t-value="true"/>
                            <t t-set="fileupload_id" t-value="widget.fileupload_id"/>
                        </t>
                    </div>
                    <div id="workorder_picture_button">
                        <button barcode_trigger="picture" class="btn btn-primary o_select_file_button">Take a Picture</button>
                    </div>
                </t>
                <t t-if="widget.ip">
                    <div id="workorder_picture_button">
                        <button barcode_trigger="picture" class="btn btn-primary o_button_take_picture">Take a Picture</button>
                    </div>
                </t>
            </div>
        </t>
    </div>
</t>
</templates>
