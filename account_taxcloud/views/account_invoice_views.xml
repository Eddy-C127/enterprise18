<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.actions.server" id="action_account_invoice_update_taxes">
        <field name="name">Update taxes with Taxcloud</field>
        <field name="model_id" ref="account.model_account_invoice"/>
        <field name="binding_model_id" ref="account.model_account_invoice" />
        <field name="state">code</field>
        <field name="code">
for invoice in records:
    invoice.validate_taxes_on_invoice()
        </field>
    </record>

    <record id="invoice_form_inherit" model="ir.ui.view">
        <field name="name">invoice.form.inherit</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <form position="inside">
                <field name="is_taxcloud" invisible="1"/>
                <field name="is_taxcloud_configured" invisible="1"/>
            </form>
            <field name="invoice_line_tax_ids" position="attributes">
                <attribute name="attrs">{'column_invisible': [('parent.is_taxcloud', '=', True)]}</attribute>
            </field>
            <field name="invoice_line_tax_ids" position="after">
                <field name="price_tax" attrs="{'column_invisible': [('parent.is_taxcloud', '=', False)]}"/>
            </field>
            <field name="tax_line_ids" position="attributes">
                <attribute name="attrs">{'invisible': [('is_taxcloud', '=', True)]}</attribute>
            </field>
            <div name="button_box" position="after">
                <div class="alert alert-info" role="alert"
                     attrs="{'invisible': ['|', ('is_taxcloud_configured', '=', True), ('is_taxcloud', '=', False)]}">
                    Please enter your Taxcloud credentials to compute tax rates automatically.
                    <a class="alert-link" href="/web#action=account.action_account_config" role="button">Go to Settings.</a>
                </div>
            </div>
        </field>
    </record>
</odoo>
