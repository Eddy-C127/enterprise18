<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_workorder_view_form_iot_inherit" model="ir.ui.view">
        <field name="name">mrp.workorder.view.form.inherit.iot</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp_workorder.mrp_workorder_view_form_tablet"/>
        <field name="arch" type="xml">
          <field name="note" position="after">
            <div class="o_row mb8" attrs="{'invisible': [('test_type', '!=', 'measure')]}">
              <Label for="measure"/>
              <field name="measure" widget="iot_realtime_value"/>
            </div>
          </field>
        </field>
    </record>
</odoo>
