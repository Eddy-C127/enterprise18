<?xml version="1.0" encoding="UTF-8"?>

<templates>
    <t t-name="GanttView">
        <div t-attf-class="o_gantt_view table-responsive chart_id_{{widget.chart_id}}">
        </div>
    </t>

    <t t-name="GanttView.buttons">
      <div class="o_gantt_button_dates" role="toolbar" aria-label="Main actions">
	<button class="o_gantt_button_left btn btn-primary" t-if="!isMobile" aria-label="Previous" title="Previous">
	  <span class="fa fa-arrow-left"/>
	</button>
	<button class="o_gantt_button_today btn btn-primary">
	  Today
	</button>
	<button class="o_gantt_button_right btn btn-primary" t-if="!isMobile" aria-label="Next" title="Next">
	  <span class="fa fa-arrow-right"/>
	</button>
      </div>
        <div class="btn-group" t-if="isMobile">
            <a role="button" class="btn btn-link dropdown-toggle" href="#" data-toggle="dropdown" aria-expanded="false"><span class="dropdown_gantt_content mr4">Month</span><i class="fa fa-caret-down" role="img" aria-label="Dropdown menu" title="Dropdown menu"></i></a>
            <ul class="dropdown-menu" role="menu">
                <li role="menuitem">
                    <a role="button" class="o_gantt_button_scale btn btn-sm btn-default" data-value="day">Day</a>
                </li>
                <li role="menuitem">
                    <a role="button" class="o_gantt_button_scale btn btn-sm btn-default" data-value="week">Week</a>
                </li>
                <li role="menuitem">
                    <a role="button" class="o_gantt_button_scale btn btn-sm btn-default active" data-value="month">Month</a>
                </li>
                <li role="menuitem">
                    <a role="button" class="o_gantt_button_scale btn btn-sm btn-default" data-value="year">Year</a>
                </li>
            </ul>
        </div>
        <div t-attf-class="btn-group" t-else="" role="toolbar" aria-label="Period">
            <button class="o_gantt_button_scale btn btn-sm btn-default" type="button" data-value="day">Day</button>
            <button class="o_gantt_button_scale btn btn-sm btn-default" type="button" data-value="week">Week</button>
            <button class="o_gantt_button_scale btn btn-sm btn-default" type="button" data-value="month">Month</button>
            <button class="o_gantt_button_scale btn btn-sm btn-default" type="button" data-value="year">Year</button>
        </div>
    </t>
</templates>
