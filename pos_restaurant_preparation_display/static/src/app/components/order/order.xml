<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
     <t t-name="pos_preparation_display.Order" t-inherit="pos_preparation_display.Order" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('o_pdis_stage')]" position="before">
            <div class="d-flex flex-wrap" t-if="this.props.order.table">
                <div class="o_pdis_table pe-1" t-esc="this.props.order.table.name" t-if="this.props.order.table.name" />
                <div class="o_pdis_seats ps-2" t-if="this.props.order.table.seats">
                    <i class="fa fa-users pe-1" aria-hidden="true"></i>
                    <span t-esc="this.props.order.table.seats" />
                </div>
            </div>
        </xpath>
    </t>
 </templates>
