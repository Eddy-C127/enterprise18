<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="knowledge_base_slides_card" inherit_id="website_helpdesk.knowledge_base">
        <xpath expr="//div[@id='o_knowledge_base_sections']" position="inside">
            <div class="col-lg-4 pt32 pb32 text-center o_colored_level" t-if="team.use_website_helpdesk_slides">
                <i class="fa fa-3x rounded bg-o-color-5 m-3 fa-mortar-board fa-3x rounded bg-o-color-5 m-3">â€‹</i>
                <h3>
                    <span style="font-weight: bolder; font-size: 18px;">Courses</span>
                </h3>
                <p>
                    <span style="font-size: 18px;">Level up your skills with training videos and tutorials</span>
                </p>
                <a href="/slides" class="btn btn-outline-primary" data-original-title="" title="">Take Courses</a>
            </div>
        </xpath>
    </template>

    <template id="search_result" name="Knowledge Base: Slides Search Result">
        <div class="pb8 w-100">
            <p class="mb-1 font-weight-bold text-800"><i class="fa fa-fw fa-mortar-board" title="eLearning" /> <a t-att-href="url" class="text-800"><t t-out="record.name" /></a></p>
            <div class="text-o-color-2" t-if="record.description and (record.is_preview or record.channel_id.is_member)"><t t-out="record.description" /></div>
            <p class="mb-1">
                <t t-foreach="record.tag_ids" t-as="tag">
                    <a t-attf-href="?{{ keep_query('*', tag=tag.name.lower()) }}" class="btn btn-outline-secondary btn-sm" t-out="tag.name"/>
                </t>
            </p>
            <p class="mb-1 text-o-color-2">
                <time t-field="record.date_published" t-options='{"format": "d MMM yyyy"}'/>, by <a t-attf-href="/profile/user/{{record.user_id.id}}" class="font-weight-bold"><t t-out="record.user_id.name" /></a>

                | <t t-out="record.total_views" /> Views
                | <t t-out="record.likes" /> Likes
                | <t t-out="record.comments_count" /> Comments
                | <i class="fa fa-folder-open-o" /> <a class="font-weight-bold" t-attf-href="{{record.channel_id.website_url}}" t-out="record.channel_id.name" />
            </p>
        </div>
    </template>

    <template id="channel_search_result" name="Knowledge Base: Slide Channel Search Result">
        <div class="pb8 w-100">
            <p class="mb-1 font-weight-bold text-800"><i class="fa fa-fw fa-mortar-board" title="eLearning Course" /> <a t-att-href="url" class="text-800"><t t-out="record.name" /></a></p>
            <div class="whelpdesk_search_description text-o-color-2 text-break overflow-hidden" t-if="record.description"><t t-out="record.description" /></div>
            <p class="mb-1">
                <t t-foreach="record.tag_ids" t-as="tag">
                    <a t-attf-href="?{{ keep_query('*', tag=tag.name.lower()) }}" class="btn btn-outline-secondary btn-sm" t-out="tag.name"/>
                </t>
            </p>
            <p class="mb-1 text-o-color-2">
                <time t-field="record.slide_last_update" t-options='{"format": "d MMM yyyy"}'/>, by <a t-attf-href="/profile/user/{{record.user_id.id}}" class="font-weight-bold"><t t-out="record.user_id.name" /></a>
                | <t t-out="record.members_count"/> Members
                | <t t-out="record.rating_count"/> Reviews
            </p>
        </div>
    </template>
</odoo>
