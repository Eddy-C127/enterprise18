<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <t t-name="frontdesk.WelcomePage">
        <div class="position-relative o_main_bg_img" t-att-style="'background-image: url(/frontdesk/' + props.stationInfo.id + '/background), url(/frontdesk/static/img/frontdesk.jpg);'">
            <div class="vh-100 container d-flex flex-column justify-content-center align-items-start">
                <div class="display-1 fw-bold">Welcome<br/><div class="display-6">to <t t-out="props.companyName"/></div></div>
                <div class="btn btn-light fs-3 py-2 px-5 mt-3" t-on-click="() => props.showScreen('VisitorForm')">Check in</div>
            </div>
            <div class="pe-none position-absolute start-0 end-0 top-0 bottom-0 p-5 d-flex flex-column justify-content-between">
                <div>
                    <div t-if="props.langs" class="d-flex justify-content-end">
                        <select class="pe-auto form-select form-select-lg bg-white w-auto" t-on-change="(ev) => props.onChangeLang(ev)">
                            <t t-foreach="props.langs" t-as="lang" t-key="lang.code">
                                <option t-att-value="lang.code" t-att-selected="lang.code === props.currentLang ? true : undefined"><t t-out="lang.name"/></option>
                            </t>
                        </select>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-end">
                    <div class="fs-3"><t t-out="state.today"/></div>
                    <img t-if="props.stationInfo.self_check_in" t-att-class="props.stationInfo.theme == 'dark' ? 'bg-white' : ''" t-att-src="state.qrCode" alt="QR Code"/>
                </div>
            </div>
        </div>
    </t>
</templates>
