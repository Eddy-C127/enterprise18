<?xml version="1.0" encoding="UTF-8"?>

<templates>
    <t t-name="frontdesk.Frontdesk">
        <div t-att-class="station.theme === 'light' ? 'o_light' : 'o_dark'">
            <WelcomePage t-if="state.currentComponent.name == 'WelcomePage'" t-props="frontdeskProps"/>
            <div t-elif="['VisitorForm', 'HostPage'].includes(state.currentComponent.name)" class="row gx-2 p-0 m-0">
                <div t-att-class="state.plannedVisitors.length and state.currentComponent.name === 'VisitorForm' ? 'col-md-7 h-auto' : 'col-12 vh-100'" class="col-sm-12 d-flex flex-column">
                    <Navbar t-props="navBarProps"/>
                    <t t-component="state.currentComponent" t-props="frontdeskProps"/>
                </div>
                <div t-if="state.plannedVisitors.length and state.currentComponent.name === 'VisitorForm'" class="col-md-5 col-sm-12 vh-100">
                    <QuickCheckIn t-props="quickCheckInProps"/>
                </div>
            </div>
            <div t-else="" class="row vh-100 g-0">
                <div class="col-md-8 col-sm-12 d-flex flex-column justify-content-between p-5">
                    <t t-component="state.currentComponent" t-props="frontdeskProps"/>
                </div>
                <div t-if="station.description" class="col-md-4 col-sm-12 o_side_panel">
                    <div class="p-5 h-100">
                        <div class="text-break" t-out="markupValue"/>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
