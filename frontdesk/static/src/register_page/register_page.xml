<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <t t-name="frontdesk.RegisterPage">
        <div>
            <h1>You have been registered!</h1>
            <div class="fs-4 fw-medium mt-2 text-break">
                <t t-if="props.plannedVisitorData?.plannedVisitorMessage" t-out="markupValue"/>
                <t t-else="">
                    Please have a seat.
                    <t t-if="props.hostData">
                        <t t-out="props.hostData.hostName"/>
                    </t>
                    <t t-elif="props.plannedVisitorData?.plannedVisitorHosts?.length">
                        <t t-foreach="props.plannedVisitorData.plannedVisitorHosts" t-as="host" t-key="host.id">
                            <t t-out="host.name"/>,
                        </t>
                    </t>
                    <t t-if="props.hostData or props.plannedVisitorData?.plannedVisitorHosts?.length"> will get back to you.</t>
                </t>
            </div>
        </div>
        <div t-if="props.isDrinkVisible" t-att-class="props.isDrinkVisible ? 'flex-grow-1 d-flex align-items-center' : ''">
            <div>
                <div class="fs-3">Do you want something to drink?</div>
                <div class="d-flex gap-2">
                    <button class="btn btn-primary fs-3 py-2 px-3" t-on-click="() => props.showScreen('DrinkPage')">Yes, please</button>
                    <button class="btn btn-secondary fs-3 py-2 px-3" t-on-click="() => props.showScreen('EndPage')">No, thank you</button>
                </div>
            </div>
        </div>
        <div t-if="!props.isMobile">
            <button class="btn fs-3 py-2 px-5" t-att-class="props.theme === 'light' ? 'btn-outline-dark' : 'btn-outline-light'" t-on-click="props.onClose">Close</button>
        </div>
    </t>
</templates>
