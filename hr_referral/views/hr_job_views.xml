<?xml version="1.0"?>
<odoo>
    <record id="view_hr_job_employee_referral_kanban" model="ir.ui.view">
        <field name="name">hr.job.employee.referral.kanban</field>
        <field name="model">hr.job</field>
        <field name="arch" type="xml">
            <kanban create="false" can_open="0" class="o_kanban_dashboard o_kanban_referral_job" js_class="referral_kanban">
                <field name="name"/>
                <field name="department_id"/>
                <field name="website_url"/>
                <field name="max_points"/>
                <field name="description"/>
                <field name="direct_clicks"/>
                <field name="facebook_clicks"/>
                <field name="twitter_clicks"/>
                <field name="linkedin_clicks"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div t-attf-class="o_kanban_card_header justify-content-between border-bottom pb-2 ">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <field name="name"/>
                                    </div>
                                </div>
                                <div class="d-flex align-items-start flex-row">
                                    <div class="mt-2 h6 flex-grow-1">
                                        <field name="no_of_recruitment"/>
                                        <t t-if="record.no_of_recruitment.raw_value > 1">
                                            Open Positions
                                        </t>
                                        <t t-else="">
                                            Open Position
                                        </t>
                                    </div>
                                    <div class="d-flex align-items-center flex-grow-0 mt-1">
                                        <img src="/hr_referral/static/src/img/points.svg" class="me-2" height="20px" alt="Points icon"/>
                                        <span class="text-nowrap"><field name="max_points"/> Points</span>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_content container">
                                <div class="pb-2">
                                    <t t-out="record.description.value" class="text-muted"/>
                                </div>
                                <div class="d-flex flex-column">
                                    <div class="o_button_referral d-flex gap-1">
                                        <a  role="button"
                                            name="%(hr_referral_send_mail_action)d"
                                            type="action"
                                            class="btn btn-secondary w-25 flex-shrink-1">
                                            <span>
                                                <i  class="fa fa-2x fa-envelope-o"
                                                    role="img"
                                                    aria-label="Send by Mail"/>
                                            </span>
                                            <br/>
                                            <span title='Send by Mail'>Send Email</span>
                                        </a>
                                        <a  role="button"
                                            name="%(hr_referral_send_sms_action)d"
                                            type="action"
                                            class="btn btn-secondary w-25 flex-shrink-1">
                                            <span>
                                                <i  class="fa fa-2x fa-mobile"
                                                    role="img"
                                                    aria-label="Send by SMS"/>
                                            </span>
                                            <br/>
                                            <span title='Send by SMS'>Send SMS</span>
                                        </a>
                                        <a  role="button"
                                            t-attf-href="#{record.website_url.raw_value}"
                                            target="_blank"
                                            class="btn btn-secondary w-25 flex-shrink-1">
                                            <span>
                                                <i  class="fa fa-2x fa-globe"
                                                    role="img"
                                                    aria-label="Job Page"/>
                                            </span>
                                            <br/>
                                            <span title='More info'>Job Page</span>
                                        </a>
                                        <div class="w-25 flex-shrink-1"><!--placeholder for whatsapp--></div>
                                    </div>
                                    <div class="o_to_share d-flex gap-1">
                                        <field  name="id"
                                                widget="CopyClipboardReferralButton"
                                                class="w-25 flex-shrink-1"/>
                                        <t t-foreach="
                                            [{
                                                'lower': 'facebook',
                                                'logo': 'facebook',
                                                'name': 'Facebook',
                                                'clicks': record.facebook_clicks.raw_value
                                            },{
                                                'lower': 'twitter',
                                                'logo': 'twitter',
                                                'name': 'Twitter',
                                                'clicks': record.twitter_clicks.raw_value
                                            },{
                                                'lower': 'linkedin',
                                                'logo': 'linkedin',
                                                'name': 'Linkedin',
                                                'clicks': record.linkedin_clicks.raw_value
                                            }]"
                                            t-as="source"
                                            t-key="source.name">
                                            <a role="button"
                                                name="action_share_external"
                                                type="object"
                                                class="btn btn-secondary w-25 flex-shrink-1"
                                                t-attf-context="{'default_channel': '{{source.lower}}'}">
                                                <span t-attf-title="Share on {{ source.name }}">
                                                    <i t-attf-class="fa fa-lg fa-{{source.logo}}"
                                                        role="img"
                                                        t-attf-aria-label="Share on {{source.name}}"/>
                                                </span>
                                                <span class="d-block mt-2 text-primary">
                                                    <t t-if="source.clicks &gt; 0"><t t-esc="source['clicks']"/> click(s)</t>
                                                    <t t-else="">Share Now</t>
                                                </span>
                                            </a>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_hr_job_employee_referral">
        <field name="name">Job Positions</field>
        <field name="res_model">hr.job</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" ref="hr_referral.view_hr_job_employee_referral_kanban"/>
        <field name="domain">[('is_published', '=', True)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_referral_job_kanban">
                No job positions are available to share.
            </p>
        </field>
    </record>
</odoo>
