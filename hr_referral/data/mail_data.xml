<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="mail_template_referral" model="mail.template">
            <field name="name">Job: Warn Employees</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="email_from">${(user.email_formatted) |safe}</field>
            <field name="email_to">${(object.work_email) | safe}</field>
            <field name="subject">New job to share</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello,<br/><br/>
                        <span>
                            New job offer of ${ctx['job_name']} in company. Share it from referral application and earn points!
                        </span>
                        <br/>

                        <div style="margin:16px 0px 16px 0px;">
                            <a href="${ctx['url']}" style="padding: 8px 16px 8px 16px; border-radius: 3px; background-color:#875A7B; text-align:center; text-decoration:none; color: #FFFFFF;">
                                Referral Application
                            </a>
                        </div>
                    </p>
                </div>
            </field>
            <field name="lang">${object.user_id.lang}</field>
            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
