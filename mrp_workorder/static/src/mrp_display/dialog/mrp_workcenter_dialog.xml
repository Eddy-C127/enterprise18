<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mrp_workorder.MrpWorkcenterDialog" owl="1">
        <Dialog size="'md'" title="props.title" modalRef="modalRef" footer="false" withBodyPadding="false">
                <div class="button_list o_mrp_workcenter_dialog">
                <t t-foreach="workcenters" t-as="workcenter" t-key="workcenter.id">
                    <button
                        class="btn"
                        t-att-class="active ? 'btn-primary': 'btn-secondary'"
                        t-att-disabled="disabled"
                        t-esc="workcenter.display_name"
                        t-on-click="() => this.selectWorkcenter(workcenter)"/>
                </t>
                </div>
        </Dialog>
    </t>
</templates>
