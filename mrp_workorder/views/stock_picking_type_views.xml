<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_type_form_inherit_mrp_workorder" model="ir.ui.view">
        <field name="name">Operation Types</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.view_picking_type_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='show_reserved']" position="after">
                <field name="prefill_lot_tablet" groups="stock.group_production_lot" attrs="{'invisible': [('code', '!=', 'mrp_operation')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
