<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hr_contract_history_view_form" model="ir.ui.view">
        <field name="name">hr.contract.history.form</field>
        <field name="model">hr.contract.history</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_history_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_sign_contract_wizard']" position="after">
                <button name="action_credit_time_wizard" string="Credit Time" attrs="{'invisible': ['|', ('contract_id', '=', False), ('time_credit', '=', True)]}" type="object" groups="hr_contract.group_hr_contract_manager"/>
                <button name="action_exit_credit_time_wizard" string="Full Time" attrs="{'invisible': ['|', ('contract_id', '=', False), ('time_credit', '=', False)]}" type="object" groups="hr_contract.group_hr_contract_manager"/>
            </xpath>
            <xpath expr="//button[@name='action_generate_simulation_link']" position="before">
                <field name="work_time_rate" invisible="1"/>
            </xpath>
            <xpath expr="//button[@name='action_generate_simulation_link']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('contract_id', '=', False), '&amp;', ('time_credit', '=', True), ('work_time_rate', '=', 0)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
