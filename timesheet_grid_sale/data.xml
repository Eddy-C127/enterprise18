<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_config_settings_view_form_inherit_timesheet_grid_sale" model="ir.ui.view">
        <field name="name">sale.config.settings.inherit.timesheet.grid</field>
        <field name="model">sale.config.settings</field>
        <field name="inherit_id" ref="sale.sale_config_settings_view_form_inherit_sale"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='msg_module_sale_timesheet']" position="replace">
                <div class="content-group" attrs="{'invisible': [('module_sale_timesheet', '=', False)]}">
                    <div class="mt16">
                        <field name="invoiced_timesheet" class="o_light_label" widget="radio"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
