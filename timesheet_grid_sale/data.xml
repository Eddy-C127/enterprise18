<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_timesheet_config_settings_view_form" model="ir.ui.view">
        <field name="name">hr.timesheet.config.settings.view.form</field>
        <field name="model">hr.timesheet.config.settings</field>
        <field name="inherit_id" ref="sale_timesheet.hr_timesheet_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='timesheet_billing']" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box" attrs="{'invisible': [('module_sale_timesheet','=',False)]}">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label string="Invoicing Policy"/>
                        <div class="text-muted">
                            <field name="invoiced_timesheet" class="o_light_label" widget="radio"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="sale_config_settings_view_form_inherit_timesheet_grid_sale" model="ir.ui.view">
        <field name="name">sale.config.settings.inherit.timesheet.grid</field>
        <field name="model">sale.config.settings</field>
        <field name="inherit_id" ref="sale_timesheet.sale_config_settings_view_form_inherit_sale_timesheet"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='sale_timesheet_box']" position="after">
                <div class="col-xs-12 col-md-6 o_setting_box" attrs="{'invisible': [('module_sale_timesheet','=',False)]}">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label string="Invoicing Policy"/>
                        <div class="text-muted">
                            <field name="invoiced_timesheet" class="o_light_label" widget="radio"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
