<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="account_intrastat.IntrastatReport" t-inherit="account_reports.AccountReportCustomizable" owl="1">
        <xpath expr="//div[@id='warnings_div']" position="inside">
            <t t-if="controller.options.intrastat_warnings">
                <t t-if="controller.options.intrastat_warnings.expired_trans">
                    <div class="alert alert-warning text-center mb-0 no_print">
                        <span>
                            Some lines have expired intrastat
                            <a
                                type="action"
                                t-on-click="(ev) => controller.reportAction(ev, 'action_invalid_code_moves', {option_key: 'expired_trans'})"
                            >
                                transaction codes
                            </a>.
                        </span>
                    </div>
                </t>
                <t t-if="controller.options.intrastat_warnings.premature_trans">
                    <div class="alert alert-warning text-center mb-0 no_print">
                        <span>
                            Some lines have premature intrastat
                            <a
                                type="action"
                                t-on-click="(ev) => controller.reportAction(ev, 'action_invalid_code_moves', {option_key: 'premature_trans'})"
                            >
                                transaction codes
                            </a>.
                        </span>
                    </div>
                </t>
                <t t-if="controller.options['intrastat_warnings']['missing_trans']">
                    <div class="alert alert-warning text-center mb-0 no_print">
                        <span>
                            Some lines have undefined
                            <a
                                type="action"
                                t-on-click="(ev) => controller.reportAction(ev, 'action_invalid_code_moves', {option_key: 'missing_trans'})"
                            >
                                transaction codes
                            </a>.
                        </span>
                    </div>
                </t>
                <t t-if="controller.options['intrastat_warnings']['expired_comm']">
                    <div class="alert alert-warning text-center mb-0 no_print">
                        <span>
                            Check the expired
                            <a
                                type="action"
                                t-on-click="(ev) => controller.reportAction(ev, 'action_invalid_code_products', {option_key: 'expired_comm'})"
                            >
                                product's commodity codes
                            </a>.
                        </span>
                    </div>
                </t>
                <t t-if="controller.options['intrastat_warnings']['premature_comm']">
                    <div class="alert alert-warning text-center mb-0 no_print">
                        <span>
                            Check the premature
                            <a
                                type="action"
                                t-on-click="(ev) => controller.reportAction(ev, 'action_invalid_code_products', {option_key: 'premature_comm'})"
                            >
                                product's commodity codes
                            </a>.
                        </span>
                    </div>
                </t>
                <t t-if="controller.options['intrastat_warnings']['missing_comm']">
                    <div class="alert alert-warning text-center mb-0 no_print">
                        <span>
                            Some products have undefined
                            <a
                                type="action"
                                t-on-click="(ev) => controller.reportAction(ev, 'action_invalid_code_products', {option_key: 'missing_comm'})"
                            >
                                commodity codes
                            </a>.
                        </span>
                    </div>
                </t>
                <t t-if="controller.options['intrastat_warnings']['missing_weight']">
                    <div class="alert alert-warning text-center mb-0 no_print">
                        <span>
                            Some products have undefined
                            <a
                                type="action"
                                t-on-click="(ev) => controller.reportAction(ev, 'action_undefined_weight_products', {option_key: 'missing_weight'})"
                            >
                                weights
                            </a>
                            when they are required.
                        </span>
                    </div>
                </t>
                <t t-if="controller.options['intrastat_warnings']['missing_unit']">
                    <div class="alert alert-warning text-center mb-0 no_print">
                        <span>
                            Some products have undefined
                            <a
                                type="action"
                                t-on-click="(ev) => controller.reportAction(ev, 'action_undefined_units_products', {option_key: 'missing_unit'})"
                            >
                                supplementary units
                            </a>
                            when they are required.
                        </span>
                    </div>
                </t>
            </t>
        </xpath>
    </t>
</templates>
