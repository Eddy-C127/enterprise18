<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_invoice_refund_inherit_helpdesk_account" model="ir.ui.view">
            <field name="name">account.invoice.refund.form</field>
            <field name="model">account.invoice.refund</field>
            <field name="inherit_id" ref="account.view_account_invoice_refund"/>
            <field name="arch" type="xml">
                <group position="before">
                    <field name="ticket_id" invisible="1"/>
                    <group col="2" attrs="{'invisible': [('ticket_id', '=', False)]}">
                        <group>
                            <field name="partner_id" invisible="1"/>
                            <field name="ticket_id" invisible="1"/>
                            <field name="sale_order_id" readonly="1" attrs="{'invisible': [('sale_order_id', '=', False)]}"/>
                            <field name="invoice_id" options="{'no_create': True}" attrs="{'required': [('ticket_id', '!=', False)]}"/>
                        </group>
                    </group>
                </group>
            </field>
        </record>
    </data>
</odoo>
