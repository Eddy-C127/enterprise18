<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="approvals.Approval" owl="1">
        <t t-if="approvalView">
            <div class="o_Approval" t-attf-class="{{ className }}" t-ref="root">
                <t t-if="approvalView.activityViewOwner.activity.approval.status === 'pending'">
                    <t t-if="approvalView.activityViewOwner.activity.approval.isCurrentPartnerApprover">
                        <button class="o_Approval_toolButton o_Approval_approveButton btn btn-success btn-link" t-on-click="approvalView.onClickApprove">
                            <i class="fa fa-check"/> Approve
                        </button>
                        <button class="o_Approval_toolButton o_Approval_refuseButton btn btn-danger btn-link" t-on-click="approvalView.onClickRefuse">
                            <i class="fa fa-times"/> Refuse
                        </button>
                    </t>
                    <t t-else="">
                        <span class="o_Approval_toApproveText text-warning">
                            <i class="fa fa-pencil"/> To Approve
                        </span>
                    </t>
                </t>
            </div>
        </t>
    </t>

</templates>
