<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="appointment_type_1" model="appointment.type">
        <field name="name">Schedule a Demo</field>
        <field name="max_schedule_days">45</field>
        <field name="message_intro" type="xml">
            <p>Get a <strong>customized demo</strong> and an <strong>analysis of your needs</strong>.</p>
        </field>
        <field name="message_confirmation" type="xml">
            <p style="text-align:center;">We thank you for your interest in our products!<br/>
               Please make sure to arrive <strong>10 minutes</strong> before your appointment.</p>
        </field>
        <field name="reminder_ids" eval="[(6, 0, [ref('calendar.alarm_notif_1')])]"/>
        <field name="staff_user_ids" eval="[(6, 0, [ref('base.user_admin')])]"/>
    </record>

    <record id="appointment_type_1_slot_1" model="appointment.slot">
        <field name="appointment_type_id" ref="appointment_type_1"/>
        <field name="weekday">5</field>
        <field name="start_hour">9</field>
        <field name="end_hour">16</field>
    </record>

    <record id="appointment_type_1_slot_2" model="appointment.slot">
        <field name="appointment_type_id" ref="appointment_type_1"/>
        <field name="weekday">3</field>
        <field name="start_hour">9</field>
        <field name="end_hour">16</field>
    </record>

    <record id="appointment_type_1_slot_3" model="appointment.slot">
        <field name="appointment_type_id" ref="appointment_type_1"/>
        <field name="weekday">1</field>
        <field name="start_hour">9</field>
        <field name="end_hour">14</field>
    </record>

    <record id="appointment_type_1_slot_4" model="appointment.slot">
        <field name="appointment_type_id" ref="appointment_type_1"/>
        <field name="weekday">1</field>
        <field name="start_hour">15.5</field>
        <field name="end_hour">16.5</field>
    </record>

    <record id="appointment_type_2" model="appointment.type">
        <field name="name">Doctor Appointment</field>
        <field name="location_id" ref="res_partner_appointment_1"/>
        <field name="appointment_duration">0.5</field>
        <field name="max_schedule_days">45</field>
        <field name="reminder_ids" eval="[(6, 0, [ref('calendar_alarm_data_1h_sms')])]"/>
        <field name="staff_user_ids" eval="[(6, 0, [ref('base.user_admin'), ref('base.user_demo')])]"/>
        <field name="assign_method">chosen</field>
    </record>

    <record id="appointment_type_2_slot_1" model="appointment.slot">
        <field name="appointment_type_id" ref="appointment_type_2"/>
        <field name="weekday">5</field>
        <field name="start_hour">9</field>
        <field name="end_hour">16</field>
    </record>

    <record id="appointment_type_2_slot_2" model="appointment.slot">
        <field name="appointment_type_id" ref="appointment_type_2"/>
        <field name="weekday">3</field>
        <field name="start_hour">9</field>
        <field name="end_hour">16</field>
    </record>

    <record id="appointment_type_2_slot_3" model="appointment.slot">
        <field name="appointment_type_id" ref="appointment_type_2"/>
        <field name="weekday">1</field>
        <field name="start_hour">9</field>
        <field name="end_hour">14</field>
    </record>

    <record id="appointment_type_2_slot_4" model="appointment.slot">
        <field name="appointment_type_id" ref="appointment_type_2"/>
        <field name="weekday">1</field>
        <field name="start_hour">15.5</field>
        <field name="end_hour">16.5</field>
    </record>

    <record id="appointment_type_2_question_1" model="appointment.question">
        <field name="appointment_type_id" ref="appointment_type_2"/>
        <field name="name">Symptoms</field>
        <field name="sequence">10</field>
    </record>
</odoo>
