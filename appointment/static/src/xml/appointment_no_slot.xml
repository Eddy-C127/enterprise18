<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="Appointment.appointment_info_no_slot">
        <div class="mx-auto">
            <p class="text-center">Sorry, we have no availability for an appointment.<br/></p>
            <t t-call="Appointment.appointment_svg"/>
        </div>
    </t>

    <t t-name="Appointment.appointment_info_no_slot_month">
        <p class="text-center">
            Sorry, we have no more slot available for this month.
            Our first availability is<br/>
            <a href="#" id="next_available_slot" t-esc="date_first_availability"/>
        </p>
        <t t-call="Appointment.appointment_svg"/>
    </t>
</templates>
