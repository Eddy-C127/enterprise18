<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="ReceiptScreen" t-inherit="point_of_sale.ReceiptScreen" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('input-group')]" position="inside">
            <button t-if="pos.config.whatsapp_enabled" t-att-disabled="!isValidPhoneNumber(state.input)" t-on-click="() => sendReceipt.call({action:'action_sent_receipt_on_whatsapp', name:'WhatsApp'})" class="btn btn-primary px-5" >
                <i t-attf-class="fa {{sendReceipt.status === 'loading' and sendReceipt.lastArgs?.[0]?.name === 'WhatsApp' ?  'fa-fw fa-spin fa-circle-o-notch' : 'fa-lg fa-whatsapp'}}" aria-hidden="true" />
            </button>
        </xpath>
    </t>
</templates>
