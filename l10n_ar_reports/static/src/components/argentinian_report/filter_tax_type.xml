<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="l10n_ar_reports.L10nArReportsFilterTaxType">
        <Dropdown onStateChanged="(isOpen) => this.applyFilters(isOpen, 'ar_vat_book_tax_types_available')">
            <button class="btn btn-secondary">
                <span class="fa fa-filter me-1"/>Tax Type: <t t-out="selectedTaxType"/>
            </button>

            <t t-set-slot="content">
                <t t-foreach="Object.entries(controller.options.ar_vat_book_tax_types_available)" t-as="taxType" t-key="taxType[0]">
                    <DropdownItem
                        class="{ 'selected': (controller.options.ar_vat_book_tax_type_selected == taxType[0]) }"
                        onSelected="() => this.filterClicked('ar_vat_book_tax_type_selected', taxType[0], true)"
                        closingMode="'none'"
                    >
                        <t t-esc="taxType[1]"/>
                    </DropdownItem>
                </t>
            </t>
        </Dropdown>
    </t>
</templates>
