<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_account_invoice_form_l10n_mx_landing">
        <field name="name">view.account.move.form.l10n_mx_base</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='account_id']" position="after">
                <field name="l10n_mx_edi_customs_number"
                       attrs="{'invisible': [('parent.type', 'not in', ('out_invoice', 'out_refund'))]}"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='account_id']" position="before">
                <field name="l10n_mx_edi_customs_number" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
