<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="web_dashboard.DashboardStatisticTooltip" owl="1">
    <div>
        <div t-if="props.help or env.debug" class="o-tooltip--string">
            <t t-esc="props.displayName" />
        </div>
        <p t-if="props.help" class="o-tooltip--help">
            <t t-esc="props.help"/>
        </p>
        <ul t-if="env.debug" class="o-tooltip--technical">
            <li t-if="props.statisticType === 'aggregate'" data-item="aggregate">
                <span class="o-tooltip--technical--title">Name: </span>
                <t t-esc="props.name"/>
            </li>
            <li t-if="props.statisticType === 'formula' and props.name"
                data-item="formula">
                <span class="o-tooltip--technical--title">Name: </span>
                <t t-esc="props.name"/>
            </li>
            <li data-item="string">
                <span class="o-tooltip--technical--title">String: </span>
                <t t-esc="props.displayName"/>
            </li>
            <li t-if="props.statisticType === 'aggregate'" data-item="field">
                <span class="o-tooltip--technical--title">Field: </span>
                <t t-esc="props.statistic.field"/>
            </li>
            <li t-if="props.statisticType === 'formula'" data-item="value" >
                <span class="o-tooltip--technical--title">Value: </span>
                <t t-esc="props.statistic.operation"/>
            </li>
            <li t-if="props.statisticType === 'aggregate' and props.statistic.domain"
                data-item="domain">
                <span class="o-tooltip--technical--title">Domain: </span>
                <t t-esc="props.statistic.domain"/>
            </li>
            <li t-if="props.statisticType === 'aggregate' and props.statistic.domainLabel"
                data-item="domain_label">
                <span class="o-tooltip--technical--title">Domain Label: </span>
                <t t-esc="props.statistic.domainLabel"/>
            </li>
            <li t-if="props.statisticType === 'aggregate' and props.statistic.groupOperator"
                data-item="group_operator">
                <span class="o-tooltip--technical--title">Group Operator: </span>
                <t t-esc="props.statistic.groupOperator"/>
            </li>
            <li data-item="formatter" t-if="props.formatter" >
                <span class="o-tooltip--technical--title">Widget: </span>
                <t t-esc="props.formatter"/>
            </li>
            <li data-item="modifiers" t-if="props.modifiers" >
                <span class="o-tooltip--technical--title">Modifiers: </span>
                <t t-esc="props.modifiers"/>
            </li>
            <li data-item="value_label" t-if="props.valueLabel">
                <span class="o-tooltip--technical--title">Value Label: </span>
                <t t-esc="props.valueLabel"/>
            </li>
            <li data-item="help" t-if="props.help" >
                <span class="o-tooltip--technical--title">Help: </span>
                <t t-esc="props.help"/>
            </li>
            <li data-item="col" t-if="props.col" >
                <span class="o-tooltip--technical--title">Column: </span>
                <t t-esc="props.col"/>
            </li>
        </ul>
    </div>
</t>

</templates>
