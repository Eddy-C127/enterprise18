<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="line_caret_options" inherit_id="account_reports.line_caret_options" primary="True">
        <xpath expr="//li[@id='res.partner.carret']/a[last()]" position="after">
            <a role="menuitem"
               tabindex="-1"
               t-att-data-id="line['id']"
               t-att-data-model="line.get('model', 'res.partner')"
               data-object="res.partner"
               action="l10n_be_open_invoices"
               class="dropdown-item">
                Audit
            </a>
        </xpath>
    </template>

    <template id="account_reports_sales_report_main_template" inherit_id="account_reports.account_reports_sales_report_main_template">
        <xpath expr="//div[@id='warnings_div']" position="inside">
            <div class="alert alert-warning text-center mb-0 no_print" t-if="options.get('be_tax_cross_check_warning')">
                <span>EC Sales taxes report total does not match Tax Report lines 44 + 46L + 46T - 48s44 - 48s46L - 48s46T.</span>
            </div>
        </xpath>
    </template>
</odoo>
