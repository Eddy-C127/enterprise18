<odoo>
    <div t-name="documents_spreadsheet.ChartConfigurationPanel"
        t-inherit="o-spreadsheet.ChartConfigurationPanel"
        t-inherit-mode="extension"
        owl="1">
        <xpath expr="//div[hasclass('o-sidepanel-error')]"
            position="before">
            <div class="o-section">
                <div class="o-section-title">Link to Odoo Menu</div>
                <IrMenuSelector
                    menuId="odooMenuId"
                    onValueChanged.bind="updateOdooLink"/>
            </div>
        </xpath>
    </div>
</odoo>
