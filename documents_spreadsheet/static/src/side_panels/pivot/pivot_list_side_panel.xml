<?xml version="1.0" encoding="utf-8"?>
<templates>
    <div t-name="documents_spreadsheet.PivotSidePanel" class="o_spreadsheet_pivot_side_panel" owl="1">
        <t t-set="currentPivot" t-value="getters.getSelectedPivot()"/>
        <t t-if="currentPivot">
            <PivotDetailsSidePanel pivotId="currentPivot.id"/>
            <div class="o-sidePanelButtons">
                <button t-on-click="resetSelectedPivot" class="o-sidePanelButton o_pivot_cancel">Back</button>
            </div>
        </t>
        <t t-else="1">
            <div t-on-click="selectPivot(pivot.id)" t-foreach="getters.getPivots()" t-as="pivot" t-key="pivot.id">
                <div class="o_side_panel_select">
                    <span t-esc="getters.getPivotName(pivot.id)"/>
                </div>
            </div>
        </t>
    </div>
</templates>
