<?xml version="1.0" encoding="utf-8"?>
<templates>

    <div t-name="documents_spreadsheet.SpreadsheetSelectorDialog" class="o_spreadsheet_selector_dialog">
        <select id="spreadsheet" name="spreadsheet" class="o_input">
            <option class="o_new" value=''>New Spreadsheet</option>
            <option t-foreach="widget.spreadsheets" t-as="spreadsheet" t-att-value="spreadsheet.id">
                <t t-esc="spreadsheet.name"/>
            </option>
        </select>
        <div>
            <t t-if="widget.type === 'PIVOT'">
                Name of the pivot:
            </t>
            <t t-elif="widget.type === 'LIST'">
                Name of the list:
            </t>
            <t t-else="">
                Name of the link:
            </t>
            <input id="name" type="text" class="o_input o_spreadsheet_name" t-att-value="widget.name"/>
        </div>
        <div t-if="widget.threshold !== undefined and widget.type === 'LIST'">
            Insert the first <input id="threshold" t-att-max="widget.maxThreshold" type="number" class="o_input o_spreadsheet_threshold" t-att-value="widget.threshold"/> records of the list.
        </div>
    </div>

</templates>
