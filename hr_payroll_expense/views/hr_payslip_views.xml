<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_payslip_view_form_inherit_expense" model="ir.ui.view">
        <field name="name">hr.payslip.view.form.expense</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='account_info']" position="after">
                <page string="Reimbursement of Expenses" >
                    <field name="expense_sheet_ids" widget="many2many" domain="[('employee_id','=',employee_id),('state','=','approve'),('payment_mode','=','own_account')]"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
