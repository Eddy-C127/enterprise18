<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_batch_payment_form_inherit" model="ir.ui.view">
            <field name="name">sdd.account.batch.payment.form.inherit</field>
            <field name="model">account.batch.payment</field>
            <field name="inherit_id" ref="account_batch_payment.view_batch_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='print_batch_payment']" position="after">
                    <field name="payment_method_code" invisible="1"/>
                    <button name="generate_sdd_xml" type="object" string="re-Generate XML" attrs="{'invisible':['|', ('payment_method_code', '!=', 'sdd'), ('state', '!=', 'sent')]}"/>
                </xpath>

                <xpath expr="//field[@name='name']" position="after">
                    <field name="sdd_required_collection_date" attrs="{'required': [('payment_method_code','=','sdd')], 'invisible': [('payment_method_code','!=','sdd')]}"/>
                </xpath>

                <xpath expr="//notebook" position="inside">
                    <page string="SDD Information" attrs="{'invisible': ['|', ('state','=','draft'), ('payment_method_code', '!=', 'sdd')]}">
                        <group>
                            <field string="Generation Date" name="sdd_xml_file_generation_date"/>
                            <field name="sdd_xml_filename" invisible="1"/>
                            <field string="XML File" name="sdd_xml_file" filename="sdd_xml_filename"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
