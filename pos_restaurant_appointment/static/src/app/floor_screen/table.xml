<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_restaurant_appointment.Table" t-inherit="pos_restaurant.Table" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('infos')]" position="after">
            <div t-if="firstAppointment" class="appointment-infos">
                <span t-att-style="textStyle">
                    <t t-esc="firstAppointment.start" /> <t t-esc="firstAppointment.customer_name" />
                </span>
            </div>
        </xpath>
    </t>
</templates>
