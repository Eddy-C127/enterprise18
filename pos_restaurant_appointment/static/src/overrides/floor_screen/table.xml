<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_restaurant_appointment.Table" t-inherit="pos_restaurant.Table" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('info')]" position="inside">
            <div t-if="firstAppointment" t-on-click.stop="() => this.pos.manageBookings()" class="appointment-label p-1 d-flex flex-column align-items-center position-absolute w-100 start-50 translate-middle-x top-100" t-att-style="textStyle">
                <div class="w-100 p-0 d-flex justify-content-between">
                    <div class="text-nowrap px-1">
                        <i class="fa fa-clock-o"/> <t t-esc="getFormatedDate(firstAppointment.start)" />
                    </div>
                    <div class="text-nowrap px-1">
                        <i class="fa fa-user-o"/> <t t-esc="firstAppointment.resource_total_capacity_reserved" />
                    </div>
                </div>
                <div class="p-0 mw-100 text-truncate" t-esc="firstAppointment.name" />
            </div>
        </xpath>
    </t>
</templates>
