<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_restaurant_appointment.FloorScreen" t-inherit="pos_restaurant.FloorScreen" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('label')]" position="after">
            <t t-set="firstAppointment" t-value="this.getFirstAppointment(table)"/>
            <div t-if="this.getFirstAppointment(table)" class="table-label position-absolute start-50 top-0 my-4 fw-bolder fs-4 translate-middle" >
                <span class="small">T<t t-esc="table.name" /></span>
            </div>
            <div
                t-if="firstAppointment"
                t-on-click="(ev) => this.onClickAppointment(ev, table)"
                class="appointment-label align-items-center position-absolute w-100 fw-bolder text-bg-dark bg-opacity-25 py-1 justify-content-center start-50 translate-middle-x bottom-0"
                t-attf-class="{{ this.isCustomerLate(table) ? 'text-danger' : 'text-white' }}"
                >
                <div class="p-0" t-attf-style="font-size: {{ table.width &lt; 90 ? 'smaller' : 'small' }};">
                    <div class="text-center text-truncate">
                        <t t-esc="firstAppointment.name" />
                    </div>
                    <div class="text-center">
                        <span>
                            <t t-esc="getFormatedDate(firstAppointment.start)" />
                        </span>
                    </div>
                </div>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('label')]" position="attributes">
            <attribute name="t-if">!this.getFirstAppointment(table)</attribute>
        </xpath>
    </t>
</templates>
