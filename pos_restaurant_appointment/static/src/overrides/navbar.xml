<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_restaurant.Navbar" t-inherit="point_of_sale.Navbar" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('navbar-menu')]" position="inside">
            <button t-if="pos.config.module_pos_restaurant_appointment" class="btn btn-lg lh-lg" t-on-click="() => this.pos.manageBookings()">
                <span class="d-none d-sm-inline">Booking</span>
                <span class="d-inline-block d-sm-none"><i class="fa fa-lg fa-fw fa-calendar"/></span>
            </button>
        </xpath>
    </t>

</templates>
