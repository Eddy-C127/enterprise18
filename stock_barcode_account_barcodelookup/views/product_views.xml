<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_product_view_form_stock_barcode_barcodelookup_inherited" model="ir.ui.view">
        <field name="name">product.product.view.form.stock.barcode.barcodelookup.inherited</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="stock_barcode_barcodelookup.product_product_view_form_stock_barcode_barcodelookup"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='sales_price']" position="inside">
                <field name="tax_string"/>
            </xpath>
            <xpath expr="//div[@name='sales_price']" position="after">
                <field name="taxes_id" widget="many2many_tags"
                       context="{'default_type_tax_use': 'sale', 'search_default_sale': 1}"
                       options="{'create': false, 'create_edit': false}"/>
            </xpath>
        </field>
    </record>

</odoo>
