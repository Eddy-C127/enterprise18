<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.documents</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_documents_right_pane')]" position="inside">
                <label for="sign_folder"/>
                <span class="fa fa-lg fa-folder" title="Folder" role="img" aria-label="Folder"/>
                <div class="row">
                    <div class="text-muted col-md-8">
                        Default destination for the attachments created in Sign.
                    </div>
                </div>
                <div class="content-group">
                    <div class="mt16">
                       <field name="sign_folder"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
