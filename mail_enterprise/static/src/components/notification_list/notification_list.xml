<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail_enterprise.NotificationListView" t-inherit="mail.NotificationListView" t-inherit-mode="extension" owl="1">
        <xpath expr="//NotificationGroupView" position="replace">
            <SwiperView t-if="notificationView and notificationView.swiperView" record="notificationView.swiperView"/>
            <t t-else="">$0</t>
        </xpath>
        <xpath expr="//ThreadNeedactionPreviewView" position="replace">
            <SwiperView t-if="notificationView and notificationView.swiperView" record="notificationView.swiperView"/>
            <t t-else="">$0</t>
        </xpath>
        <xpath expr="//ChannelPreviewView" position="replace">
            <SwiperView t-if="notificationView and notificationView.swiperView" record="notificationView.swiperView"/>
            <t t-else="">$0</t>
        </xpath>
    </t>
</templates>
