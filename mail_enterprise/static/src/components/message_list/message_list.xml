<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail_enterprise.MessageListView" t-inherit="mail.MessageListView" t-inherit-mode="extension" owl="1">
        <xpath expr="//MessageView" position="replace">
            <t t-if="messageView and messageView.swiperView">
                <SwiperView record="messageView.swiperView"/>
            </t>
            <t t-else="">$0</t>
        </xpath>
    </t>
</templates>
