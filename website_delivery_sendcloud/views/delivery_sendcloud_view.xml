<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_delivery_carrier_form" model="ir.ui.view">
        <field name="name">delivery.carrier.sendcloud.locations</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery_sendcloud.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sendcloud_shipping_rules']" position="after">
                <field name="sendcloud_use_locations"/>
                <label for="sendcloud_locations_radius_value" attrs="{'invisible': [('sendcloud_use_locations', '=', False)]}"/>
                <span attrs="{'invisible': [('sendcloud_use_locations', '=', False)]}">
                    <field name="sendcloud_locations_radius_value" style="padding-right: 5px"/>
                    <field name="sendcloud_locations_radius_unit"/>
                </span>
            </xpath>
        </field>
    </record>
</odoo>