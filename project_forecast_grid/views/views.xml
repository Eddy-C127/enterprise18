<openerp>
    <data>
        <record id="action_project_forecast_assign" model="ir.actions.act_window">
            <field name="name">Assign user on a task</field>
            <field name="res_model">project.forecast.assignment</field>
            <field name="target">new</field>
            <field name="view_mode">form</field>
        </record>
        <record id="view_project_forecast_assign" model="ir.ui.view">
            <field name="name">Assign user on a task</field>
            <field name="model">project.forecast.assignment</field>
            <field name="arch" type="xml">
                <form string="Assign user on task">
                    <sheet>
                        <field name="project_id" invisible="1"/>
                        <group col="4">
                            <field name="task_id"/>
                            <field name="user_id"/>
                        </group>
                    </sheet>
                    <footer>
                        <button type="object" string="Assign" name="create_assignment" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="view_project_set_dates" model="ir.ui.view">
            <field name="name">Set dates on project</field>
            <field name="model">project.project</field>
            <field name="priority">5000</field>
            <field name="arch" type="xml">
                <form string="Project Dates">
                    <sheet>
                        <p>
                            Forecasting on a project requires that the project
                            have start and end dates
                            <group col="4">
                                <field name="date_start" required="1"/>
                                <field name="date" required="1"/>
                            </group>
                        </p>
                    </sheet>
                    <footer>
                        <button string="View Forecast"
                                type="object" name="view_monthly_forecast"
                                class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="project_form_forecast_grid_button" model="ir.ui.view">
            <field name="name">project form: link forecast button to grid</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project_forecast.project_view_form_inherit_project_forecast"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='create_forecast']" position="replace"/>
                <xpath expr="//button[@type='action'][@name='%(project_forecast.project_forecast_action_project)d']" position="attributes">
                    <attribute name="type">object</attribute>
                    <attribute name="name">view_monthly_forecast</attribute>
                </xpath>
            </field>
        </record>
        <record id="project_kanban_forecast_grid_button" model="ir.ui.view">
            <field name="name">project kanban: link forecast buttons to grid</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project_forecast.project_view_kanban_inherit_project_forecast"/>
            <field name="arch" type="xml">
                <xpath expr="//div[contains(@class, 'o_kanban_card_manage_section')]/a[@name='%(project_forecast.project_forecast_action_project)d']" position="attributes">
                    <attribute name="type">object</attribute>
                    <attribute name="name">view_monthly_forecast</attribute>
                </xpath>
                <xpath expr="//div[contains(@class, 'o_project_kanban_boxes')]/a[@name='%(project_forecast.project_forecast_action_project)d']" position="attributes">
                    <attribute name="type">object</attribute>
                    <attribute name="name">view_monthly_forecast</attribute>
                </xpath>
            </field>
        </record>

        <record id="project_forecast_grid" model="ir.ui.view">
            <field name="name">Project Forecast: Grid View</field>
            <field name="model">project.forecast</field>
            <field name="arch" type="xml">
                <grid string="Monthly Forecast" create="false" adjustment="object" adjust_name="adjust_grid">
                    <field name="task_id" type="row" section="1"/>
                    <field name="user_id" type="row"/>
                    <field name="start_date" type="col">
                        <range name="project" string="Project" span="project" step="month"/>
                    </field>
                    <field name="resource_hours" type="measure"/>
                    <button string="Assign" type="object" class="btn-primary"
                            name="project_forecast_assign"/>
                </grid>
            </field>
        </record>

        <record id="view_project_forecast_grid_by_user" model="ir.ui.view">
            <field name="name">Project Forecast: grid by user</field>
            <field name="model">project.forecast</field>
            <field name="arch" type="xml">
                <grid string="Project Forecast By User" create="false">
                    <field name="user_id" type="row"/>
                    <field name="start_date" type="col">
                        <range name="week" string="Week" span="week" step="day"/>
                        <range name="month" string="Month" span="month" step="day"/>
                        <range name="year" string="Year" span="year" step="month"/>
                    </field>
                    <field name="resource_hours" type="measure"/>
                </grid>
            </field>
        </record>
        <record id="action_project_forecast_grid_by_user" model="ir.actions.act_window">
            <field name="name">Forecast By User</field>
            <field name="res_model">project.forecast</field>
            <field name="view_mode">grid</field>
            <field name="view_id" ref="view_project_forecast_grid_by_user"/>
            <field name="context">{'grid_range': 'year'}</field>
        </record>

        <record id="view_project_forecast_grid_by_project" model="ir.ui.view">
            <field name="name">Project Forecast: grid by project</field>
            <field name="model">project.forecast</field>
            <field name="arch" type="xml">
                <grid string="Project Forecast By User" create="false">
                    <field name="project_id" type="row"/>
                    <field name="start_date" type="col">
                        <range name="week" string="Week" span="week" step="day"/>
                        <range name="month" string="Month" span="month" step="day"/>
                        <range name="year" string="Year" span="year" step="month"/>
                    </field>
                    <field name="resource_hours" type="measure"/>
                </grid>
            </field>
        </record>
        <record id="action_project_forecast_grid_by_project" model="ir.actions.act_window">
            <field name="name">Forecast By Project</field>
            <field name="res_model">project.forecast</field>
            <field name="view_mode">grid</field>
            <field name="view_id" ref="view_project_forecast_grid_by_project"/>
            <field name="context">{'grid_range': 'year'}</field>
        </record>

        <menuitem id="menu_project_forecast_grid" name="Grid" parent="project_forecast.project_forecast_menu" sequence="10"/>
        <menuitem id="menu_project_forecast_grid_by_user" name="By User"
                  parent="menu_project_forecast_grid"
                  action="action_project_forecast_grid_by_user"
                  sequence="10"/>
        <menuitem id="menu_project_forecast_grid_by_project" name="By Project"
                  parent="menu_project_forecast_grid"
                  action="action_project_forecast_grid_by_project"
                  sequence="10"/>

        <menuitem id="project_forecast_gantt" name="Gantt" parent="project_forecast.project_forecast_menu" sequence="20"/>
        <record id="project_forecast.project_forecast_group_by_user" model="ir.ui.menu">
            <field name="parent_id" ref="project_forecast_gantt"/>
        </record>
        <record id="project_forecast.project_forecast_group_by_project" model="ir.ui.menu">
            <field name="parent_id" ref="project_forecast_gantt"/>
        </record>
    </data>
</openerp>
