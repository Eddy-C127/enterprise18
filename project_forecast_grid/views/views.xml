<openerp>
    <data>
        <record id="action_project_forecast_assign" model="ir.actions.act_window">
            <field name="name">Assign user on a task</field>
            <field name="res_model">project.forecast.assignment</field>
            <field name="target">new</field>
            <field name="view_mode">form</field>
        </record>
        <record id="view_project_forecast_assign" model="ir.ui.view">
            <field name="name">Assign user on a task</field>
            <field name="model">project.forecast.assignment</field>
            <field name="arch" type="xml">
                <form string="Assign user on task">
                    <sheet>
                        <field name="project_id" invisible="1"/>
                        <group col="4">
                            <field name="task_id"/>
                            <field name="user_id"/>
                        </group>
                    </sheet>
                    <footer>
                        <button type="object" string="Assign" name="create_assignment" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="project_form_forecast_grid_button" model="ir.ui.view">
            <field name="name">project form: add forecast grid button</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="after">
                    <button name="view_monthly_forecast" string="Forecast" type="object"/>
                </xpath>
            </field>
        </record>
        <record id="project_forecast_grid" model="ir.ui.view">
            <field name="name">Project Forecast: Grid View</field>
            <field name="model">project.forecast</field>
            <field name="arch" type="xml">
                <grid string="Monthly Forecast" create="false" adjustment="object" adjust_name="adjust_grid">
                    <field name="task_id" type="row" section="1"/>
                    <field name="user_id" type="row"/>
                    <field name="start_date" type="col">
                        <range name="project" string="Project" span="project" step="month"/>
                    </field>
                    <field name="resource_hours" type="measure"/>
                    <button string="Assign" type="object" class="btn-primary"
                            name="project_forecast_assign"/>
                </grid>
            </field>
        </record>
    </data>
</openerp>
