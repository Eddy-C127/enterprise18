<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="l10n_co_dian_certificate_action" model="ir.actions.act_window">
        <field name="name">l10n_co_dian.certificate.action</field>
        <field name="res_model">l10n_co_dian.certificate</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="l10n_co_dian_certificate_view_form" model="ir.ui.view">
        <field name="name">l10n_co_dian.certificate.view.form</field>
        <field name="model">l10n_co_dian.certificate</field>
        <field name="arch" type="xml">
            <form string="certificate Form">
                <sheet>
                    <group>
                        <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                        <field name="certificate"/>
                        <field name="key"/>
                        <label for="date_start" string="Validity"/>
                        <div>
                            <field name="date_start"/> -
                            <field name="date_end"/>
                        </div>
                        <field name="serial_number"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="l10n_co_dian_certificate_view_search" model="ir.ui.view">
        <field name="name">l10n_co_dian.certificate.view.search</field>
        <field name="model">l10n_co_dian.certificate</field>
        <field name="arch" type="xml">
            <search>
                <field name="serial_number"/>
            </search>
        </field>
    </record>

    <record id="l10n_co_dian_certificate_view_tree" model="ir.ui.view">
        <field name="name">l10n_co_dian.certificate.view.list</field>
        <field name="model">l10n_co_dian.certificate</field>
        <field name="arch" type="xml">
            <list string="certificate Tree" delete="false">
                <field name="serial_number"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
                <button string="Delete" icon="fa-remove" name="unlink" type="object" confirm="Are you sure you want to delete this record?"/>
            </list>
        </field>
    </record>
</odoo>
