<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="account_reports.BankReconciliationReport" t-inherit="account_reports.AccountReportCustomizable" owl="1">
        <xpath expr="//div[@id='warnings_div']" position="inside">
            <t t-if="controller.options.inconsistent_statement_ids">
                <div class="alert alert-warning text-center mb-0">
                    <span>
                        There are some
                        <a t-on-click="(ev) => controller.reportAction(ev, 'bank_reconciliation_report_open_inconsistent_statements')">statements</a>
                        having a starting balance different from the previous ending balance.
                    </span>
                </div>
            </t>

            <t t-if="controller.options.has_bank_miscellaneous_move_lines">
                <div class="alert alert-info text-center mb-0">
                    <span>
                        "<t t-out="controller.options.account_names"/>" account balance is affected by
                        <a t-on-click="(ev) => controller.reportAction(ev, 'open_bank_miscellaneous_move_lines')">journal items</a>
                        which doesn't result from a bank statement nor payments.
                    </span>
                </div>
            </t>
        </xpath>
    </t>
</templates>
