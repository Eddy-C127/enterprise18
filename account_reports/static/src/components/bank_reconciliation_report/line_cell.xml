<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="account_reports.BankReconciliationReportLineCell" t-inherit="account_reports.AccountReportLineCellCustomizable" owl="1">
        <xpath expr="//div[hasclass('acc_rep_column_value')]/table/tr" position="before">
            <tr t-if="props.cell.last_statement_id">
                <td class="pt-0 pb-O pe-0 text-nowrap" t-att-class="classes">
                    Last Statement:
                    <a t-on-click="(ev) => controller.reportAction(ev, 'action_redirect_to_bank_statement_widget', { statement_id: props.cell.last_statement_id })">
                        <t t-out="props.cell.last_statement_name"/>
                    </a>
                </td>
            </tr>
            <tr t-elif="props.cell.general_ledger_not_matching">
                <td class="pt-0 pb-O pe-0 text-nowrap" t-att-class="classes" style="color:orange">
                    <span class="fa fa-warning" t-att-title="props.cell.title"/>
                    &nbsp;
                    <t t-out="props.cell.name"/>
                </td>
            </tr>
        </xpath>

        <xpath expr="//div[hasclass('acc_rep_column_value')]/table/tr" position="attributes">
            <attribute name="t-else"/>
        </xpath>
    </t>
</templates>
