<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="account_reports.MulticurrencyRevaluationReport" t-inherit="account_reports.AccountReportCustomizable" owl="1">
        <xpath expr="//div[@id='warnings_div']" position="inside">
            <t t-if="controller.options.custom_rate">
                <div class="alert alert-warning text-center mb-0">
                    <span>You are using custom exchange rates.
                        <button
                           class="btn btn-link p-0 align-baseline"
                           t-on-click="() => this.controller.deleteOption('currency_rates')"
                        >
                            ⇒ Reset to Odoo’s Rate
                        </button>
                    </span>
                </div>
            </t>

            <t t-if="controller.options.warning_multicompany">
                <div class="alert alert-warning text-center mb-0">
                    <span>This report only displays the data of the active company.</span>
                </div>
            </t>
        </xpath>
    </t>
</templates>
