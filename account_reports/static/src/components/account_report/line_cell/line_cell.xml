<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="account_reports.AccountReportLineCell" owl="1">
        <t t-call="{{ env.template('AccountReportLineCell') }}"/>
    </t>

    <t t-name="account_reports.AccountReportLineCellCustomizable" owl="1">
        <div class="acc_rep_column_value">
            <table class="w-100">
                <tr>
                    <t t-if="props.cell.info_popup_data">
                        <td class="p-0 text-start">
                            <a
                                class="acc_rep_popup fa fa-question-circle"
                                t-on-click="(ev) => this.showCarryoverPopover(ev)"
                            />
                        </td>
                    </t>

                    <t t-if="props.cell.edit_popup_data">
                        <td class="p-0 text-start">
                            <a
                                class="acc_rep_popup fa fa-pencil"
                                t-on-click="(ev) => this.editPopover(ev)"
                            />
                        </td>
                    </t>

                    <td
                        t-att-class="classes"
                        t-att-style="props.cell.style || 'text-align:right'"
                    >
                        <t t-if="props.cell.auditable">
                            <a t-on-click="() => this.audit()">
                                <t t-if="props.cell.figure_type === 'boolean'">
                                    <t t-out="(props.cell.name) ? 'Yes' : 'No'"/>
                                </t>
                                <t t-else="">
                                    <t t-out="props.cell.name"/>
                                </t>
                            </a>
                        </t>
                        <t t-else="">
                            <t t-if="props.cell.name">
                                <span class="acc_rep_column_value">
                                    <t t-out="props.cell.name"/>
                                </span>
                            </t>
                        </t>
                    </td>
                </tr>
            </table>
        </div>
    </t>
</templates>
