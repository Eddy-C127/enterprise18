<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="account_reports.AgedPartnerBalanceLineName" t-inherit="account_reports.AccountReportLineNameCustomizable" owl="1">
        <xpath expr="//span[hasclass('o_account_reports_caret_icon')]" position="before">
           <t t-if="props.line.trust === 'good'">
               <span class="fa fa-circle color-green trust-partner" title="Balance is good"/>
           </t>
           <t t-elif="props.line.trust === 'normal'">
               <span class="fa fa-circle color-transparent trust-partner" title="Balance is normal"/>
           </t>
           <t t-elif="props.line.trust === 'bad'">
               <span class="fa fa-circle color-red trust-partner" title="Balance is bad"/>
           </t>
       </xpath>

       <xpath expr="//span[hasclass('acc_rep_line_name')]" position="inside">
          <t t-if="props.line.unfolded">
              <a
                  class="oe_link_reports ms-2"
                  t-on-click="(ev) => controller.reportAction(ev, 'caret_option_open_record_form', { line_id: props.line.id })"
              >
                  Open
              </a>
              <a
                  class="oe_link_reports ms-2"
                  t-on-click="(ev) => controller.reportAction(ev, 'open_journal_items', { line_id: props.line.id })"
              >
                  â‡’ Journal Items
              </a>
          </t>
       </xpath>

       <xpath expr="//div[hasclass('dropdown-menu')]" position="inside">
           <t t-if="controller.groups.account_user">
               <a
                   class="o_change_expected_date dropdown-item"
                   t-on-click="(ev) => this.openExpectedDateDialog(ev)"
               >
                   Change expected payment date
               </a>
           </t>
       </xpath>
    </t>
</templates>
