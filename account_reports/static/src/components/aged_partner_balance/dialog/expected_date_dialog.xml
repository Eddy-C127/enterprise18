<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="account_reports.ExpectedDateDialog" owl="1">
        <Dialog title="props.title" size="props.size">
            <form role="form">
                <DateTimeInput type="'date'" onChange="(date) => this.onDateTimeChanged(date)"/>
            </form>

            <t t-set-slot="footer">
                <button class="btn btn-primary" t-on-click="_save">
                    Save
                </button>
                <button class="btn btn-secondary" t-on-click="_cancel">
                    Cancel
                </button>
            </t>
        </Dialog>
    </t>
</templates>
