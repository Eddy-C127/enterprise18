<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="account_reports.SalesReportFilterCode">
        <Dropdown onStateChanged="(isOpen) => this.applyFilters(isOpen, 'ec_tax_filter_selection')">
            <button class="btn btn-secondary">
                <i class="fa fa-filter me-1"/> Codes: <t t-esc="selectedEcTaxName"/>
            </button>

            <t t-set-slot="content">
                <t t-foreach="controller.options.ec_tax_filter_selection" t-as="ecTax" t-key="ecTax_index">
                    <DropdownItem
                        class="{ 'selected':  ecTax.selected }"
                        onSelected="() => this.filterClicked('ec_tax_filter_selection.'+ ecTax_index + '.selected')"
                        closingMode="'none'"
                        t-out="ecTax.name"
                    />
                </t>
            </t>
        </Dropdown>
    </t>
</templates>
