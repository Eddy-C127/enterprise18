<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="account_reports.GenericTaxReport" t-inherit="account_reports.AccountReportCustomizable" owl="1">
        <xpath expr="//div[@id='warnings_div']" position="inside">
            <t t-if="controller.options.group_by">
                <div class="alert alert-light text-center mb-0 ">
                    <span>Please note that the report may include some rounding differences towards the bookings.</span>
                </div>
            </t>

            <t t-if="controller.report.root_report_id and controller.options.available_tax_units and controller.options.tax_unit === 'company_only'">
                <div class="alert alert-info text-center mb-0">
                    <span>This company is part of a tax unit. You're currently not viewing the whole unit. To change that, use the Tax Unit filter.</span>
                </div>
             </t>
        </xpath>
    </t>
</templates>
