<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="account_reports_sales_report_main_template" inherit_id="account_reports.main_template" primary="True">
            <xpath expr="//div[@id='warnings_div']" position="before">
                <div class="no_print o_country_specific_report_label" t-if="options.get('country_specific_report_label')">
                    <i class="fa fa-globe"></i> <t t-esc="options.get('country_specific_report_label')"></t>
                </div>
            </xpath>
            <xpath expr="//div[@id='warnings_div']" position="inside">
                <div class="alert alert-warning text-center mb-0 no_print" t-if="options.get('missing_vat_warning')">
                    <span>
                        Intra-community taxes are applied on
                        <a type="action" t-att-data-model="'move'" action="get_non_vat_actions_window">invoices</a>
                        addressed to
                        <a type="action" t-att-data-model="'partner'" action="get_non_vat_actions_window">partners</a>
                        without a valid intra-community VAT number.
                    </span>
                </div>
                <div class="alert alert-warning text-center mb-0 no_print" t-if="options.get('same_country_warning')">
                    <span>
                        Intra-community taxes are applied on
                        <a type="action" t-att-data-model="'move'" action="get_same_country_actions_window">invoices</a>
                        addressed to
                        <a type="action" t-att-data-model="'partner'" action="get_same_country_actions_window">partners</a>
                        that are not established abroad.
                    </span>
                </div>
                <div class="alert alert-warning text-center mb-0 no_print" t-if="options.get('non_ec_country_warning')">
                    <span>
                        Intra-community taxes are applied on
                        <a type="action" t-att-data-model="'move'" action="get_non_ec_countries_actions_window">invoices</a>
                        addressed to
                        <a type="action" t-att-data-model="'partner'" action="get_non_ec_countries_actions_window">partners</a>
                        who are not established in any of the EC countries.
                    </span>
                </div>
            </xpath>

        </template>
        <template id="ec_sales_line_caret_options" inherit_id="account_reports.line_caret_options" primary="True">
            <xpath expr="//li[@id='res.partner.carret']/a[last()]" position="after">
                <a
                    role="menuitem"
                    tabindex="-1"
                    t-att-data-id="line['id']"
                    t-att-data-model="line.get('model', 'res.partner')"
                    t-att-data-tax_report_line_ids="line.get('tax_report_line_ids')"
                    data-object="res.partner"
                    action="get_partner_amls"
                    class="dropdown-item"
                >
                    Audit
                </a>
            </xpath>
        </template>
    </data>
</odoo>
