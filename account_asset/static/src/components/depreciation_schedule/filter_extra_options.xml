<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="account_asset.DepreciationScheduleFilterExtraOptions" t-inherit="account_reports.AccountReportFilterExtraOptions">
        <xpath expr="//DropdownItem[contains(@class, 'filter_show_all_hook')]" position="after">
            <DropdownItem
                class="{ 'selected': controller.options.assets_groupby_account }"
                onSelected="() => this.filterClicked({ optionKey: 'assets_groupby_account', reload: true})"
                closingMode="'none'"
            >
                Group By Account
            </DropdownItem>
        </xpath>
    </t>
</templates>
