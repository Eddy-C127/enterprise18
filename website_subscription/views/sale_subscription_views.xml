<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_subscription_template_view_kanban_inherit_website_subscription" model="ir.ui.view">
        <field name="name">sale.subscription.template.kanban</field>
        <field name="model">sale.subscription.template</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_template_view_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//templates" position="before">
                <field name="payment_mandatory"/>
                <field name="user_closable"/>
            </xpath>
            <xpath expr="//div[@class='o_kanban_primary_left']" position="inside">
                <span t-if="record.payment_mandatory.raw_value"><i class="fa fa-check" /> Automatic payments</span>
                <span t-if="record.user_closable.raw_value"><i class="fa fa-check" /> Closable by customer</span>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="sale_subscription_view_form_inherit_sale_subscription">
        <field name="name">sale.subscription.form</field>
        <field name="model">sale.subscription</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@id='settings']/group" position="inside">
                <field name="payment_token_id"/>
            </xpath>
            <xpath expr="//div[@class='oe_button_box']/button[1]" position="before">
                <button class="oe_stat_button" name="open_website_url" type="object" icon="fa-globe" string="Online Preview">
                </button>
            </xpath>
        </field>
    </record>
    
    <record model="ir.ui.view" id="sale_subscription_template_view_form_inherit_sale_subscription">
        <field name="name">sale.subscription.template.form</field>
        <field name="model">sale.subscription.template</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_template_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='online']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//group[@name='online']" position="inside">
                <field name="user_closable"/>
                <field name="payment_mandatory"/>
                <field name="tag_ids" string="Category" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

</odoo>
