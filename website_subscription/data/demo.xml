<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Subscription templates -->
        <record id="sale_subscription.odoo_monthly" model="sale.subscription.template">
            <field name="user_closable">True</field>
            <field name="payment_mandatory">True</field>
            <field name="tag_ids" eval="[(6,0, (ref('sale_subscription.odoo_online_tag'),))]"/>
        </record>

        <record id="sale_subscription.odoo_yearly" model="sale.subscription.template">
            <field name="user_closable">True</field>
            <field name="tag_ids" eval="[(6,0, (ref('sale_subscription.odoo_online_tag'),))]"/>
        </record>

    </data>
</odoo>
