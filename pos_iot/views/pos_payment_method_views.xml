<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_journal_pos_user_form" model="ir.ui.view">
        <field name="name">pos.payment.method.iot.form.inherit</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='split_transactions']" position="after">
                <field name="use_payment_terminal" attrs="{'invisible': [('is_cash_count', '=', True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
