<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_iot_payment_form" model="ir.ui.view">
        <field name="name">pos.payment.iot.form.inherit</field>
        <field name="model">pos.payment</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_method_id']" position="after">
                <field name="card_type" attrs="{'invisible': [('card_type', '=', False)]}"/>
                <field name="transaction_id" attrs="{'invisible': [('transaction_id', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
