<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets" inherit_id="point_of_sale.assets">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/pos_iot/static/src/js/barcode_reader.js"></script>
            <script type="text/javascript" src="/pos_iot/static/src/js/chrome.js"></script>
            <script type="text/javascript" src="/pos_iot/static/src/js/devices.js"></script>
            <script type="text/javascript" src="/pos_iot/static/src/js/iot.js"></script>
            <script type="text/javascript" src="/pos_iot/static/src/js/models.js"></script>
            <script type="text/javascript" src="/pos_iot/static/src/js/payment.js"></script>
            <script type="text/javascript" src="/pos_iot/static/src/js/popups.js"></script>
            <script type="text/javascript" src="/pos_iot/static/src/js/scale.js"></script>
            <script type="text/javascript" src="/pos_iot/static/src/js/printers.js"></script>
            <link rel="stylesheet" href="/pos_iot/static/src/css/pos.css"/>
        </xpath>
    </template>

    <record id="pos_iot_config_view_form" model="ir.ui.view">
        <field name="name">pos.iot.config.form.view</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='proxy_ip']" position="replace">
                <label string="IoT Box" for="iotbox_id" class="col-lg-3 o_light_label"/>
            </xpath>
            <field name="proxy_ip" position="replace">
                <field name="iotbox_id" string="IoT Box"/>
            </field>
            <field name="iface_print_via_proxy" position="after">
                <field name="iface_printer_id"/>
            </field>
            <field name="iface_print_via_proxy" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <!-- add this button before iface_* options -->
            <xpath expr="//field[@name='iotbox_id']/../.." position="after">
                <div attrs="{'invisible' : [('is_posbox', '=', False)]}">
                    <button name="%(iot.iot_box_action)d" icon="fa-arrow-right" type="action" string="IoT Boxes" class="btn-link mt8"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='iface_scan_via_proxy']/.." position="before">
                <div class="row" attrs="{'invisible' : [('is_posbox', '=', False)]}">
                    <label string="Payment terminal" for="iface_payment_terminal" class="col-lg-3 o_light_label"/>
                    <field name="iface_payment_terminal"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
