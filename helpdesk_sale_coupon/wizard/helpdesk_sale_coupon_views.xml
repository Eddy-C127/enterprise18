<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="helpdesk_sale_coupon_view_form" model="ir.ui.view">
        <field name="name">helpdesk.sale.coupon.form</field>
        <field name="model">helpdesk.sale.coupon</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="new,sent,used,expired" context="{'state': state}"/>
                </header>
                <group>
                    <field name="ticket_id" invisible="1"/>
                    <field name="coupon_id" invisible="1"/>
                    <field name="code" widget="CopyClipboardChar"/>
                    <field name="expiration_date"/>
                </group>
                <footer>
                    <button name="action_coupon_send" string="Send" type="object" attrs="{'invisible': [('state', 'not in', ['new', 'sent'])]}" class="btn btn-primary" data-hotkey="v"/>
                    <button name="action_coupon_cancel" type="object" string="Cancel" attrs="{'invisible': [('state', '!=', 'new')]}" class="btn btn-secondary" data-hotkey="w"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
