<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="l10n_mx_edi_pos.AddInfoPopup" owl="1">
        <div class="popup mx-edi-invoice-popup">
            <header class="title">Additional Invoicing Information</header>
            <main class="body">
                <div>
                    <div>
                        <span class="label">Usage: </span>
                        <select class="detail" name="l10n_mx_edi_usage" t-model="state.l10n_mx_edi_usage">
                            <t t-foreach="pos.l10n_mx_edi_usage" t-as="l10n_mx_edi_usage" t-key="l10n_mx_edi_usage.value">
                                <option t-att-value="l10n_mx_edi_usage.value"
                                        t-att-selected="l10n_mx_edi_usage.value === state.l10n_mx_edi_usage ? 'selected' : undefined">
                                    <t t-out="l10n_mx_edi_usage.name"/>
                                </option>
                            </t>
                        </select>
                    </div>
                    <div style="padding-top: 20px">
                        <span class="label">Invoice to public: </span>
                        <select class="detail" name="l10n_mx_edi_cfdi_to_public" t-model="state.l10n_mx_edi_cfdi_to_public">
                            <option t-att-selected="state.l10n_mx_edi_cfdi_to_public ? 'selected' : undefined"
                                    value="1">Yes</option>
                            <option t-att-selected="state.l10n_mx_edi_cfdi_to_public ? undefined : 'selected'"
                                    value="0">No</option>
                        </select>
                    </div>
                </div>
            </main>
            <footer class="footer">
                <div class="button confirm disable highlight" t-on-click="confirm">
                    Confirm
                </div>
                <div class="button cancel" t-on-click="cancel">
                    Discard
                </div>
            </footer>
        </div>
    </t>

</templates>
