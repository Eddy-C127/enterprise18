<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="l10n_mx_edi_pos.PaymentScreen" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('right-content')]" position="inside">
            <div t-if="this.areMxFieldsVisible()"
                 style="border-bottom: solid 1px #C9CCD2; font-size: 16px; box-sizing: border-box">
                <div style="padding: 16px;">
                    Usage: <t t-out="pos.l10n_mx_edi_usage.find((item) => item.value === this.currentOrder.l10n_mx_edi_usage).name"/>
                </div>
                <div style="padding: 16px;">
                    Invoice to public: <t t-out="this.currentOrder.l10n_mx_edi_cfdi_to_public ? 'Yes': 'No'"/>
                </div>
            </div>
        </xpath>
    </t>

</templates>
