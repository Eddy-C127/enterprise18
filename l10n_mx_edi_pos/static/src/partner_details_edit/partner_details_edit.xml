<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PartnerDetailsEdit" t-inherit="point_of_sale.PartnerDetailsEdit" owl="1">
        <xpath expr="//div[hasclass('partner-details-left')]" position="inside">
            <t t-if="pos.globalState.company.country.code === 'MX'">
                <h3>Additional invoicing information</h3>
                <div class="partner-detail div_l10n_mx_edi_additional_fields"
                     t-att-style="state.display_mx_fields ? undefined : 'display: none'">
                    <span class="label">Fiscal Regime</span>
                    <select class="detail" name="l10n_mx_edi_fiscal_regime" t-on-change="captureChange">
                        <t t-foreach="pos.globalState.l10n_mx_edi_fiscal_regime" t-as="fiscal_regime" t-key="fiscal_regime.value">
                            <option t-att-value="fiscal_regime.value"
                                    t-att-selected="props.partner.l10n_mx_edi_fiscal_regime ? ((fiscal_regime.value === props.partner.l10n_mx_edi_fiscal_regime) ? true : undefined) : undefined">
                                <t t-out="fiscal_regime.name" />
                            </option>
                        </t>
                    </select>
                </div>
                <div class="partner-detail">
                    <span class="label">No Tax Breakdown</span>
                    <input type="checkbox" name="l10n_mx_edi_no_tax_breakdown" style="width: 15px; height: 15px" t-on-change="captureChangeNoTaxBreakdown"
                           t-att-checked="props.partner.l10n_mx_edi_no_tax_breakdown ? 'checked': undefined"/>
                </div>
            </t>
        </xpath>
    </t>

</templates>
