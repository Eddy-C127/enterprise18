<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hr_contract_history_view_form" model="ir.ui.view">
        <field name="name">hr.contract.history.form</field>
        <field name="model">hr.contract.history</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_history_view_form"/>
        <field name="arch" type="xml">
            <field name="resource_calendar_id" position="after">
                <field name="time_credit" attrs="{'invisible': True}"/>
                <field string="Reference Working Time" name="standard_calendar_id" attrs="{'invisible': [('time_credit', '!=', True)]}"/>
            </field>
            <field name="resource_calendar_id" position="attributes">
                <attribute name="attrs">{'invisible': [('time_credit', '=', True)]}</attribute>
            </field>
            <page name="contract_history" position="after">
                <page string="Attachment of Salary" name="contract_attachment_of_salary">
                    <group>
                        <field name="wage_type" invisible="1"/>
                        <field name="fiscal_voluntarism" attrs="{'invisible': [('wage_type', '=', 'hourly')]}"/>
                        <label for="fiscal_voluntary_rate" attrs="{'invisible': [('fiscal_voluntarism', '=', False)]}"/>
                        <div class="o_row" attrs="{'invisible': [('fiscal_voluntarism', '=', False)]}">
                            <field name="fiscal_voluntary_rate" nolabel="1"/>
                            <span>%</span>
                        </div>
                        <field name="attachment_salary_ids" attrs="{'invisible': [('attachment_salary_ids', '==', False)]}"/>
                    </group>
                </page>
            </page>
            <xpath expr="//header/button[@name='action_sign_contract_wizard']" position="after">
                <button name="action_credit_time_wizard" string="Credit Time" attrs="{'invisible': ['|', ('contract_id', '=', False), ('time_credit', '=', True)]}" type="object" groups="hr_contract.group_hr_contract_manager"/>
                <button name="action_exit_credit_time_wizard" string="Full Time" attrs="{'invisible': ['|', ('contract_id', '=', False), ('time_credit', '=', False)]}" type="object" groups="hr_contract.group_hr_contract_manager"/>
            </xpath>
        </field>
    </record>
</odoo>
