<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="l10n_be_hr_payroll_credit_time_wizard_view_form" model="ir.ui.view">
        <field name="name">l10n_be.hr.payroll.credit.time.wizard.view.form</field>
        <field name="model">l10n_be.hr.payroll.credit.time.wizard</field>
        <field name="arch" type="xml">
            <form string="Part Time Contract">
                <h1><field name="employee_id" readonly="1"/></h1>
                <group>
                    <group>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="resource_calendar_id"/>
                        <field name="time_credit_type_id"/>
                        <field name="leave_allocation_id" invisible="1"/>
                        <field name="contract_id" invisible="1"/>
                        <field name="company_id" invisible="1" />
                    </group>
                </group>
                <group>
                    <group>
                        <field name="work_time"/>
                        <field name="wage"/>
                    </group>
                </group>
                <separator string="Time Off Rights"/>
                <group>
                    <group>
                        <field name="holiday_status_id"/>
                    </group>
                    <newline/>
                    <group>
                        <label for="time_off_allocation"/>
                        <div>
                            <field name="time_off_allocation" class="oe_inline" nolabel="1" />
                            <span>days</span>
                        </div>
                    </group>
                    <group>
                        <div>
                            <span>(</span>
                            <label for="remaining_allocated_time_off"/>
                            <span>: </span>
                            <field name="remaining_allocated_time_off" nolabel="1"/>
                            <span> days)</span>
                        </div>
                    </group>
                </group>
                <footer>
                    <button name="validate_credit_time" string="Create new contract and new time off allocation" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="l10n_be_hr_payroll_exit_credit_time_wizard_view_form" model="ir.ui.view">
        <field name="name">l10n_be.hr.payroll.exit.credit.time.wizard.view.form</field>
        <field name="model">l10n_be.hr.payroll.exit.credit.time.wizard</field>
        <field name="arch" type="xml">
            <form string="Full Time Contract">
            <h1><field name="employee_id" readonly="1"/></h1>
                <group>
                    <group>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="resource_calendar_id"/>
                        <field name="leave_allocation_id" invisible="1"/>
                        <field name="contract_id" invisible="1"/>
                        <field name="company_id" invisible="1" />
                    </group>
                </group>
                <group>
                    <group>
                        <field name="wage"/>
                        <field name="holiday_status_id" />
                    </group>
                </group>
                <separator string="Time Off Rights"/>
                <group>
                    <group>
                        <label for="time_off_allocation"/>
                        <div>
                            <field name="time_off_allocation" class="oe_inline" nolabel="1" />
                            <span class="ml8">days</span>
                        </div>
                    </group>
                    <group>
                        <div>
                            <span>(</span>
                            <label for="remaining_allocated_time_off"/>
                            <span>: </span>
                            <field name="remaining_allocated_time_off"/>
                            <span> days)</span>
                        </div>
                    </group>
                </group>
                <footer>
                    <button name="validate_full_time" string="Create new contract and new time off allocation" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="credit_time_wizard_action" model="ir.actions.act_window">
        <field name="name">Part Time Contract</field>
        <field name="res_model">l10n_be.hr.payroll.credit.time.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="exit_credit_time_wizard_action" model="ir.actions.act_window">
        <field name="name">Full Time Contract</field>
        <field name="res_model">l10n_be.hr.payroll.exit.credit.time.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
