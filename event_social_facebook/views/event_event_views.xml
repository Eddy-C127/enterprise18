<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <record id="event_event_view_form" model="ir.ui.view">
        <field name="name">event.event.view.form.inherit</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_add_post"
                    type="object"
                    string="Send post"
                    class="oe_highlight"
                    attrs="{'invisible': [('social_event_id','=',False)]}"
                    groups="social.group_social_user"/>
            </xpath>
            <xpath expr="//field[@name='auto_confirm']" position="before">
                <label for="social_event_id" class="font-weight-bold"/>
                <div class="o_row">
                    <field name="social_event_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}" nolabel="1"/>
                    <widget name="synchronize_facebook_events_widget"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="event_event_view_kanban" model="ir.ui.view">
        <field name="name">event.event.kanban.inherit</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_kanban_content')]" position="after">
                <field name="social_event_id" invisible="1"/>
                <div t-if="record.social_event_id.raw_value" class="o_event_facebook_stats border-top m-0 px-2 py-1 d-flex align-items-center justify-content-around">
                    <i class="o_social_stat_facebook_icon text-center p-0 col-sm fa fa-facebook p-1" title="Facebook stats"/>
                    <i class="text-center p-0 col-sm fa fa-check" data-toggle="tooltip" data-placement="bottom" title="Number of people attending"> <field name="social_attending_count"/></i>
                    <i class="text-center p-0 col-sm fa fa-star" data-toggle="tooltip" data-placement="bottom" title="Number of people interested"> <field name="social_interested_count"/></i>
                    <i class="text-center p-0 col-sm fa fa-question" data-toggle="tooltip" data-placement="bottom" title="Number of people who replied 'maybe'"> <field name="social_maybe_count"/></i>
                    <i class="text-center p-0 col-sm fa fa-eye-slash" data-toggle="tooltip" data-placement="bottom" title="Number of people who ignored"> <field name="social_noreply_count"/></i>
                    <i class="text-center p-0 col-sm fa fa-times" data-toggle="tooltip" data-placement="bottom" title="Number of people who declined"> <field name="social_declined_count"/></i>
                </div>
            </xpath>
        </field>
    </record>
</data>
</odoo>
