<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <record id="social_post_view_form" model="ir.ui.view">
        <field name="name">social.post.view.form.inherit.event.social.facebook</field>
        <field name="model">social.post</field>
        <field name="inherit_id" ref="social.social_post_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='account_ids']" position="after">
                <label attrs="{'invisible': [('state', 'in', ['posting', 'posted'])]}" for="social_facebook_event_ids" class="font-weight-bold"/>
                <div attrs="{'invisible': [('state', 'in', ['posting', 'posted'])]}" class="o_row">
                    <field name="social_facebook_event_ids" options="{'no_create': True}" string="Post on Events" widget="many2many_tags"
                        domain="[('date_begin', '&gt;', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"
                        nolabel="1"/>
                    <widget name="synchronize_facebook_events_widget"/>
                </div>
            </xpath>
            <xpath expr="//div[hasclass('o_social_live_post_kanban_account')]/field[@name='account_id']" position="replace">
                <field name="social_facebook_event_id" attrs="{'invisible': [('social_facebook_event_id', '=', False)]}"/>
                <field name="account_id" attrs="{'invisible': [('social_facebook_event_id', '!=', False)]}"/>
            </xpath>
            <xpath expr="//div[hasclass('o_social_post_empty_preview')]" position="attributes">
                <attribute name="attrs">{'invisible': [('message', '!=', False), ('message', '!=', ''), '|', ('account_ids', '!=', []), ('social_facebook_event_ids', '!=', [])]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="social_post_view_kanban" model="ir.ui.view">
        <field name="name">social.post.view.kanban.inherit.event.social.facebook</field>
        <field name="model">social.post</field>
        <field name="inherit_id" ref="social.social_post_view_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='message']" position="after">
                <field name="social_facebook_event_ids" invisible="1"/>
            </xpath>
            <xpath expr="//div[hasclass('o_social_post_media')]" position="inside">
                <i t-if="record.social_facebook_event_ids.raw_value.length" class="fa fa-ticket o_social_post_facebook_color" title="Posted on a event"/>
            </xpath>
        </field>
    </record>
</data>
</odoo>
