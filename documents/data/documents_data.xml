<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Folders -->

        <record id="documents_internal_folder" model="documents.folder" forcecreate="0">
            <field name="name">Internal</field>
        </record>

        <record id="documents_finance_folder" model="documents.folder" forcecreate="0">
            <field name="name">Finance</field>
        </record>

        <record id="documents_hr_folder" model="documents.folder" forcecreate="0">
            <field name="name">HR</field>
        </record>

        <record id="documents_marketing_folder" model="documents.folder" forcecreate="0">
            <field name="name">Marketing</field>
        </record>

        <!-- Facets -->

        <record id="documents_marketing_assets_facet" model="documents.facet" forcecreate="0">
            <field name="name">Assets</field>
            <field name="sequence">5</field>
            <field name="folder_id" ref="documents_marketing_folder"/>
        </record>

        <record id="documents_hr_documents_facet" model="documents.facet" forcecreate="0">
            <field name="name">Documents</field>
            <field name="sequence">6</field>
            <field name="folder_id" ref="documents_hr_folder"/>
        </record>

         <record id="documents_internal_template_facet" model="documents.facet" forcecreate="0">
            <field name="name">Templates</field>
            <field name="sequence">6</field>
            <field name="folder_id" ref="documents_internal_folder"/>
         </record>

        <record id="documents_internal_knowledge_facet" model="documents.facet" forcecreate="0">
            <field name="name">Knowledge</field>
            <field name="sequence">6</field>
            <field name="folder_id" ref="documents_internal_folder"/>
        </record>

        <record id="documents_finance_Fiscal_year_folder" model="documents.facet" forcecreate="0">
            <field name="name">Fiscal years</field>
            <field name="sequence">5</field>
            <field name="folder_id" ref="documents_finance_folder"/>
        </record>

        <record id="documents_finance_Documents_folder" model="documents.facet" forcecreate="0">
            <field name="name">Documents</field>
            <field name="sequence">5</field>
            <field name="folder_id" ref="documents_finance_folder"/>
        </record>

        <record id="documents_finance_status_folder" model="documents.facet" forcecreate="0">
            <field name="name">Status</field>
            <field name="sequence">5</field>
            <field name="folder_id" ref="documents_finance_folder"/>
        </record>

        <!-- Tags -->

        <record id="documents_finance_status_inbox" model="documents.tag" forcecreate="0">
            <field name="name">Inbox</field>
            <field name="facet_id" ref="documents_finance_status_folder"/>
            <field name="sequence">6</field>
        </record>

        <record id="documents_finance_status_tc" model="documents.tag" forcecreate="0">
            <field name="name">To confirm</field>
            <field name="facet_id" ref="documents_finance_status_folder"/>
            <field name="sequence">6</field>
        </record>

        <record id="documents_finance_status_validated" model="documents.tag" forcecreate="0">
            <field name="name">Validated</field>
            <field name="facet_id" ref="documents_finance_status_folder"/>
            <field name="sequence">6</field>
        </record>

        <record id="documents_finance_documents_legal" model="documents.tag" forcecreate="0">
            <field name="name">Legal statements</field>
            <field name="facet_id" ref="documents_finance_Documents_folder"/>
            <field name="sequence">6</field>
        </record>

        <record id="documents_finance_documents_Contracts" model="documents.tag" forcecreate="0">
            <field name="name">Contracts</field>
            <field name="facet_id" ref="documents_finance_Documents_folder"/>
            <field name="sequence">6</field>
        </record>

        <record id="documents_finance_documents_customer_inv" model="documents.tag" forcecreate="0">
            <field name="name">Customer invoices</field>
            <field name="facet_id" ref="documents_finance_Documents_folder"/>
            <field name="sequence">6</field>
        </record>

        <record id="documents_finance_documents_vendor_bill" model="documents.tag" forcecreate="0">
            <field name="name">Vendor Bills</field>
            <field name="facet_id" ref="documents_finance_Documents_folder"/>
            <field name="sequence">6</field>
        </record>

        <record id="documents_finance_fiscal_year_2018" model="documents.tag" forcecreate="0">
            <field name="name">2018</field>
            <field name="facet_id" ref="documents_finance_Fiscal_year_folder"/>
            <field name="sequence">6</field>
        </record>

        <record id="documents_finance_fiscal_year_2017" model="documents.tag" forcecreate="0">
            <field name="name">2017</field>
            <field name="facet_id" ref="documents_finance_Fiscal_year_folder"/>
            <field name="sequence">5</field>
        </record>

        <record id="documents_internal_knowledge_hr_policies" model="documents.tag" forcecreate="0">
            <field name="name">HR policies</field>
            <field name="facet_id" ref="documents_internal_knowledge_facet"/>
            <field name="sequence">9</field>
        </record>

        <record id="documents_internal_knowledge_Sales" model="documents.tag" forcecreate="0">
            <field name="name">Sales</field>
            <field name="facet_id" ref="documents_internal_knowledge_facet"/>
            <field name="sequence">9</field>
        </record>

        <record id="documents_internal_knowledge_other" model="documents.tag" forcecreate="0">
            <field name="name">Other</field>
            <field name="facet_id" ref="documents_internal_knowledge_facet"/>
            <field name="sequence">10</field>
        </record>

        <record id="documents_internal_template_Presentations" model="documents.tag" forcecreate="0">
            <field name="name">Presentations</field>
            <field name="facet_id" ref="documents_internal_template_facet"/>
            <field name="sequence">10</field>
        </record>

        <record id="documents_internal_template_contracts" model="documents.tag" forcecreate="0">
            <field name="name">Contracts</field>
            <field name="facet_id" ref="documents_internal_template_facet"/>
            <field name="sequence">10</field>
        </record>

        <record id="documents_marketing_assets_logos" model="documents.tag" forcecreate="0">
            <field name="name">Logos</field>
            <field name="facet_id" ref="documents_marketing_assets_facet"/>
            <field name="sequence">10</field>
        </record>

        <record id="documents_marketing_assets_brochures" model="documents.tag" forcecreate="0">
            <field name="name">Brochures</field>
            <field name="facet_id" ref="documents_marketing_assets_facet"/>
            <field name="sequence">10</field>
        </record>

        <record id="documents_marketing_assets_ads" model="documents.tag" forcecreate="0">
            <field name="name">Ads</field>
            <field name="facet_id" ref="documents_marketing_assets_facet"/>
            <field name="sequence">10</field>
        </record>

        <record id="documents_marketing_assets_images" model="documents.tag" forcecreate="0">
            <field name="name">Images</field>
            <field name="facet_id" ref="documents_marketing_assets_facet"/>
            <field name="sequence">10</field>
        </record>

        <record id="documents_marketing_assets_Videos" model="documents.tag" forcecreate="0">
            <field name="name">Videos</field>
            <field name="facet_id" ref="documents_marketing_assets_facet"/>
            <field name="sequence">10</field>
        </record>

        <record id="documents_hr_documents_contracts" model="documents.tag" forcecreate="0">
            <field name="name">Contracts</field>
            <field name="facet_id" ref="documents_hr_documents_facet"/>
            <field name="sequence">10</field>
        </record>

        <record id="documents_hr_documents_payslips" model="documents.tag" forcecreate="0">
            <field name="name">Payslips</field>
            <field name="facet_id" ref="documents_hr_documents_facet"/>
            <field name="sequence">10</field>
        </record>

        <record id="documents_hr_documents_absences" model="documents.tag" forcecreate="0">
            <field name="name">Absences</field>
            <field name="facet_id" ref="documents_hr_documents_facet"/>
            <field name="sequence">10</field>
        </record>

        <!-- Chatter messages -->

        <record id="documents_share_changed" model="mail.message.subtype">
            <field name="name">shares changed</field>
            <field name="res_model">ir.attachment</field>
            <field name="default" eval="True"/>
            <field name="relation_field">share_ids</field>
        </record>

        <record id="documents_tags_changed" model="mail.message.subtype">
            <field name="name">tags changed</field>
            <field name="res_model">ir.attachment</field>
            <field name="default" eval="True"/>
            <field name="relation_field">tag_ids</field>
        </record>

    </data>
</odoo>
