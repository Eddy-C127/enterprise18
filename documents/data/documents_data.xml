<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Folders -->

        <record id="documents_internal_folder" model="documents.folder" forcecreate="0">
            <field name="name">Internal</field>
            <field name="sequence">10</field>
        </record>

        <record id="documents_finance_folder" model="documents.folder" forcecreate="0">
            <field name="name">Finance</field>
            <field name="sequence">11</field>
        </record>

        <record id="documents_hr_folder" model="documents.folder" forcecreate="0">
            <field name="name">HR</field>
            <field name="sequence">12</field>
        </record>

        <record id="documents_marketing_folder" model="documents.folder" forcecreate="0">
            <field name="name">Marketing</field>
            <field name="sequence">13</field>
        </record>

        <!-- Facets -->

        <record id="documents_marketing_assets_facet" model="documents.facet" forcecreate="0">
            <field name="name">Assets</field>
            <field name="sequence">5</field>
            <field name="folder_id" ref="documents_marketing_folder"/>
        </record>

        <record id="documents_hr_documents_facet" model="documents.facet" forcecreate="0">
            <field name="name">Documents</field>
            <field name="sequence">6</field>
            <field name="folder_id" ref="documents_hr_folder"/>
        </record>

         <record id="documents_internal_template_facet" model="documents.facet" forcecreate="0">
            <field name="name">Templates</field>
            <field name="sequence">6</field>
            <field name="folder_id" ref="documents_internal_folder"/>
         </record>

        <record id="documents_internal_knowledge_facet" model="documents.facet" forcecreate="0">
            <field name="name">Knowledge</field>
            <field name="sequence">6</field>
            <field name="folder_id" ref="documents_internal_folder"/>
        </record>

        <record id="documents_internal_status_folder" model="documents.facet" forcecreate="0">
            <field name="name">Status</field>
            <field name="sequence">1</field>
            <field name="folder_id" ref="documents_internal_folder"/>
        </record>

        <record id="documents_hr_status_folder" model="documents.facet" forcecreate="0">
            <field name="name">Status</field>
            <field name="sequence">1</field>
            <field name="folder_id" ref="documents_hr_folder"/>
        </record>

        <record id="documents_finance_Fiscal_year_folder" model="documents.facet" forcecreate="0">
            <field name="name">Fiscal years</field>
            <field name="sequence">5</field>
            <field name="folder_id" ref="documents_finance_folder"/>
        </record>

        <record id="documents_finance_Documents_folder" model="documents.facet" forcecreate="0">
            <field name="name">Documents</field>
            <field name="sequence">5</field>
            <field name="folder_id" ref="documents_finance_folder"/>
        </record>

        <record id="documents_finance_status_folder" model="documents.facet" forcecreate="0">
            <field name="name">Status</field>
            <field name="sequence">1</field>
            <field name="folder_id" ref="documents_finance_folder"/>
        </record>

        <!-- Tags -->

        <record id="documents_finance_status_inbox" model="documents.tag" forcecreate="0">
            <field name="name">Inbox</field>
            <field name="facet_id" ref="documents_finance_status_folder"/>
            <field name="sequence">6</field>
        </record>

        <record id="documents_finance_status_tc" model="documents.tag" forcecreate="0">
            <field name="name">To Review</field>
            <field name="facet_id" ref="documents_finance_status_folder"/>
            <field name="sequence">6</field>
        </record>

        <record id="documents_finance_status_validated" model="documents.tag" forcecreate="0">
            <field name="name">Validated</field>
            <field name="facet_id" ref="documents_finance_status_folder"/>
            <field name="sequence">6</field>
        </record>


        <!-- activity types -->

        <record id="mail_documents_activity_data_Inbox" model="mail.activity.type">
            <field name="name">Inbox</field>
        </record>

        <record id="mail_documents_activity_data_tv" model="mail.activity.type">
            <field name="name">To validate</field>
        </record>

        <record id="mail_documents_activity_data_md" model="mail.activity.type">
            <field name="name">Missing document</field>
        </record>

        <!-- -->

        <record id="documents_internal_status_draft" model="documents.tag" forcecreate="0">
            <field name="name">Draft</field>
            <field name="facet_id" ref="documents_internal_status_folder"/>
            <field name="sequence">2</field>
        </record>

        <record id="documents_internal_status_tc" model="documents.tag" forcecreate="0">
            <field name="name">To Review</field>
            <field name="facet_id" ref="documents_internal_status_folder"/>
            <field name="sequence">3</field>
        </record>

        <record id="documents_internal_status_validated" model="documents.tag" forcecreate="0">
            <field name="name">Validated</field>
            <field name="facet_id" ref="documents_internal_status_folder"/>
            <field name="sequence">5</field>
        </record>

        <record id="documents_internal_status_deprecated" model="documents.tag" forcecreate="0">
            <field name="name">Deprecated</field>
            <field name="facet_id" ref="documents_internal_status_folder"/>
            <field name="sequence">6</field>
        </record>

        <!-- -->

        <record id="documents_hr_status_inbox" model="documents.tag" forcecreate="0">
            <field name="name">Inbox</field>
            <field name="facet_id" ref="documents_hr_status_folder"/>
            <field name="sequence">2</field>
        </record>

        <record id="documents_hr_status_tc" model="documents.tag" forcecreate="0">
            <field name="name">To Review</field>
            <field name="facet_id" ref="documents_hr_status_folder"/>
            <field name="sequence">3</field>
        </record>

        <record id="documents_hr_status_validated" model="documents.tag" forcecreate="0">
            <field name="name">Validated</field>
            <field name="facet_id" ref="documents_hr_status_folder"/>
            <field name="sequence">5</field>
        </record>

        <!-- -->

        <record id="documents_finance_documents_legal" model="documents.tag" forcecreate="0">
            <field name="name">Legal statements</field>
            <field name="facet_id" ref="documents_finance_Documents_folder"/>
            <field name="sequence">3</field>
        </record>

        <record id="documents_finance_documents_Contracts" model="documents.tag" forcecreate="0">
            <field name="name">Contracts</field>
            <field name="facet_id" ref="documents_finance_Documents_folder"/>
            <field name="sequence">4</field>
        </record>

        <record id="documents_finance_documents_vendor_bill" model="documents.tag" forcecreate="0">
            <field name="name">Vendor Bills</field>
            <field name="facet_id" ref="documents_finance_Documents_folder"/>
            <field name="sequence">7</field>
        </record>

        <record id="documents_finance_fiscal_year_2018" model="documents.tag" forcecreate="0">
            <field name="name">2018</field>
            <field name="facet_id" ref="documents_finance_Fiscal_year_folder"/>
            <field name="sequence">6</field>
        </record>

        <record id="documents_finance_fiscal_year_2017" model="documents.tag" forcecreate="0">
            <field name="name">2017</field>
            <field name="facet_id" ref="documents_finance_Fiscal_year_folder"/>
            <field name="sequence">5</field>
        </record>

        <record id="documents_internal_knowledge_hr_policies" model="documents.tag" forcecreate="0">
            <field name="name">HR policies</field>
            <field name="facet_id" ref="documents_internal_knowledge_facet"/>
            <field name="sequence">9</field>
        </record>

        <record id="documents_internal_knowledge_Sales" model="documents.tag" forcecreate="0">
            <field name="name">Sales</field>
            <field name="facet_id" ref="documents_internal_knowledge_facet"/>
            <field name="sequence">9</field>
        </record>

        <record id="documents_internal_knowledge_other" model="documents.tag" forcecreate="0">
            <field name="name">Other</field>
            <field name="facet_id" ref="documents_internal_knowledge_facet"/>
            <field name="sequence">10</field>
        </record>

        <record id="documents_internal_template_Presentations" model="documents.tag" forcecreate="0">
            <field name="name">Presentations</field>
            <field name="facet_id" ref="documents_internal_template_facet"/>
            <field name="sequence">10</field>
        </record>

        <record id="documents_internal_template_contracts" model="documents.tag" forcecreate="0">
            <field name="name">Contracts</field>
            <field name="facet_id" ref="documents_internal_template_facet"/>
            <field name="sequence">10</field>
        </record>

        <record id="documents_internal_template_sign" model="documents.tag" forcecreate="0">
            <field name="name">Sign</field>
            <field name="facet_id" ref="documents_internal_template_facet"/>
            <field name="sequence">10</field>
        </record>

        <record id="documents_marketing_assets_logos" model="documents.tag" forcecreate="0">
            <field name="name">Logos</field>
            <field name="facet_id" ref="documents_marketing_assets_facet"/>
            <field name="sequence">10</field>
        </record>

        <record id="documents_marketing_assets_brochures" model="documents.tag" forcecreate="0">
            <field name="name">Brochures</field>
            <field name="facet_id" ref="documents_marketing_assets_facet"/>
            <field name="sequence">10</field>
        </record>

        <record id="documents_marketing_assets_ads" model="documents.tag" forcecreate="0">
            <field name="name">Ads</field>
            <field name="facet_id" ref="documents_marketing_assets_facet"/>
            <field name="sequence">10</field>
        </record>

        <record id="documents_marketing_assets_images" model="documents.tag" forcecreate="0">
            <field name="name">Images</field>
            <field name="facet_id" ref="documents_marketing_assets_facet"/>
            <field name="sequence">10</field>
        </record>

        <record id="documents_marketing_assets_Videos" model="documents.tag" forcecreate="0">
            <field name="name">Videos</field>
            <field name="facet_id" ref="documents_marketing_assets_facet"/>
            <field name="sequence">10</field>
        </record>

        <record id="documents_hr_documents_contracts" model="documents.tag" forcecreate="0">
            <field name="name">Contracts</field>
            <field name="facet_id" ref="documents_hr_documents_facet"/>
            <field name="sequence">10</field>
        </record>

        <record id="documents_hr_documents_payslips" model="documents.tag" forcecreate="0">
            <field name="name">Payslips</field>
            <field name="facet_id" ref="documents_hr_documents_facet"/>
            <field name="sequence">10</field>
        </record>

        <record id="documents_hr_documents_absences" model="documents.tag" forcecreate="0">
            <field name="name">Absences</field>
            <field name="facet_id" ref="documents_hr_documents_facet"/>
            <field name="sequence">10</field>
        </record>

        <!-- Workflow -->

        <!--if to review: validate-->

        <record id="documents_Finance_validate_review" model="documents.workflow.rule">
            <field name="name">Validate reviewed files</field>
            <field name="domain_folder_id" ref="documents_finance_folder"/>
        </record>

        <record id="documents_tc_criteria" model="documents.workflow.tag.criteria">
            <field name="workflow_rule_id" ref="documents_Finance_validate_review"/>
            <field name="operator">contains</field>
            <field name="tag_id" ref="documents_finance_status_tc"/>
        </record>

        <record id="documents_add_validated_review" model="documents.workflow.action">
            <field name="workflow_rule_id" ref="documents_Finance_validate_review"/>
            <field name="action">add</field>
            <field name="tag_id" ref="documents_finance_status_validated"/>
        </record>

        <record id="documents_remove_to_review_add_review" model="documents.workflow.action">
            <field name="workflow_rule_id" ref="documents_Finance_validate_review"/>
            <field name="action">remove</field>
            <field name="tag_id" ref="documents_finance_status_tc"/>
        </record>

        <!-- internal -->

        <record id="documents_internal_validate_review" model="documents.workflow.rule">
            <field name="name">Validate reviewed files</field>
            <field name="domain_folder_id" ref="documents_internal_folder"/>
        </record>

        <record id="documents_tc_criteria_internal" model="documents.workflow.tag.criteria">
            <field name="workflow_rule_id" ref="documents_internal_validate_review"/>
            <field name="operator">contains</field>
            <field name="tag_id" ref="documents_internal_status_tc"/>
        </record>

        <record id="documents_add_validated_review_internal" model="documents.workflow.action">
            <field name="workflow_rule_id" ref="documents_internal_validate_review"/>
            <field name="action">add</field>
            <field name="tag_id" ref="documents_internal_status_validated"/>
        </record>

        <record id="documents_remove_to_review_add_review_internal" model="documents.workflow.action">
            <field name="workflow_rule_id" ref="documents_internal_validate_review"/>
            <field name="action">remove</field>
            <field name="tag_id" ref="documents_internal_status_tc"/>
        </record>

        <!--if inbox: to review-->

        <record id="documents_Finance_validate_inbox_to_review" model="documents.workflow.rule">
            <field name="name">To review</field>
            <field name="domain_folder_id" ref="documents_finance_folder"/>
        </record>

        <record id="documents_inbox_to_review_criteria" model="documents.workflow.tag.criteria">
            <field name="workflow_rule_id" ref="documents_Finance_validate_inbox_to_review"/>
            <field name="operator">contains</field>
            <field name="tag_id" ref="documents_finance_status_inbox"/>
        </record>

        <record id="documents_add_inbox_to_review" model="documents.workflow.action">
            <field name="workflow_rule_id" ref="documents_Finance_validate_inbox_to_review"/>
            <field name="action">add</field>
            <field name="tag_id" ref="documents_finance_status_tc"/>
        </record>

        <record id="documents_remove_inbox_a" model="documents.workflow.action">
            <field name="workflow_rule_id" ref="documents_Finance_validate_inbox_to_review"/>
            <field name="action">remove</field>
            <field name="tag_id" ref="documents_finance_status_inbox"/>
        </record>

        <!--if inbox: validated  -->

        <record id="documents_Finance_validate_inbox_validated" model="documents.workflow.rule">
            <field name="name">Validate inbox</field>
            <field name="domain_folder_id" ref="documents_finance_folder"/>
        </record>

        <record id="documents_inbox_validated_criteria" model="documents.workflow.tag.criteria">
            <field name="workflow_rule_id" ref="documents_Finance_validate_inbox_validated"/>
            <field name="operator">contains</field>
            <field name="tag_id" ref="documents_finance_status_inbox"/>
        </record>

        <record id="documents_add_inbox_validated" model="documents.workflow.action">
            <field name="workflow_rule_id" ref="documents_Finance_validate_inbox_validated"/>
            <field name="action">add</field>
            <field name="tag_id" ref="documents_finance_status_validated"/>
        </record>

        <record id="documents_remove_inbox_b" model="documents.workflow.action">
            <field name="workflow_rule_id" ref="documents_Finance_validate_inbox_validated"/>
            <field name="action">remove</field>
            <field name="tag_id" ref="documents_finance_status_inbox"/>
        </record>

        <!--if inbox: contracts + 2018-->

        <record id="documents_Finance_validate_inbox_contracts" model="documents.workflow.rule">
            <field name="name">Move to 2018 contracts</field>
            <field name="domain_folder_id" ref="documents_finance_folder"/>
        </record>

        <record id="documents_inbox_contracts_criteria" model="documents.workflow.tag.criteria">
            <field name="workflow_rule_id" ref="documents_Finance_validate_inbox_contracts"/>
            <field name="operator">contains</field>
            <field name="tag_id" ref="documents_finance_status_inbox"/>
        </record>

        <record id="documents_add_inbox_contracts" model="documents.workflow.action">
            <field name="workflow_rule_id" ref="documents_Finance_validate_inbox_contracts"/>
            <field name="action">add</field>
            <field name="tag_id" ref="documents_hr_documents_contracts"/>
        </record>

        <record id="documents_add_inbox_2018" model="documents.workflow.action">
            <field name="workflow_rule_id" ref="documents_Finance_validate_inbox_contracts"/>
            <field name="action">add</field>
            <field name="tag_id" ref="documents_finance_fiscal_year_2018"/>
        </record>

        <record id="documents_remove_inbox_c" model="documents.workflow.action">
            <field name="workflow_rule_id" ref="documents_Finance_validate_inbox_contracts"/>
            <field name="action">remove</field>
            <field name="tag_id" ref="documents_finance_status_inbox"/>
        </record>

        <!--internal set to draft-->

        <record id="documents_internal_set_draft" model="documents.workflow.rule">
            <field name="name">Set to Draft</field>
            <field name="condition_type">domain</field>
            <field name="domain_folder_id" ref="documents_internal_folder"/>
            <field name="domain" eval="['|', ('tag_ids', 'in', (ref('documents_internal_status_validated'))), ('tag_ids', 'in', (ref('documents_internal_status_deprecated')))]"/>
        </record>

        <record model="documents.workflow.action">
            <field name="workflow_rule_id" ref="documents_internal_set_draft"/>
            <field name="action">replace</field>
            <field name="facet_id" ref="documents_internal_status_folder"/>
            <field name="tag_id" ref="documents_internal_status_draft"/>
        </record>

        <!--internal set to deprecated-->

        <record id="documents_internal_set_deprecated" model="documents.workflow.rule">
            <field name="name">Deprecate Document</field>
            <field name="domain_folder_id" ref="documents_internal_folder"/>
        </record>

        <record model="documents.workflow.tag.criteria">
            <field name="workflow_rule_id" ref="documents_internal_set_deprecated"/>
            <field name="operator">contains</field>
            <field name="tag_id" ref="documents_internal_status_validated"/>
        </record>

        <record model="documents.workflow.action">
            <field name="workflow_rule_id" ref="documents_internal_set_deprecated"/>
            <field name="action">replace</field>
            <field name="facet_id" ref="documents_internal_status_folder"/>
            <field name="tag_id" ref="documents_internal_status_deprecated"/>
        </record>

        <!--internal set to validated -->

        <record id="documents_internal_set_validated" model="documents.workflow.rule">
            <field name="name">Set to Validated</field>
            <field name="domain_folder_id" ref="documents_internal_folder"/>
        </record>

        <record model="documents.workflow.tag.criteria">
            <field name="workflow_rule_id" ref="documents_internal_set_validated"/>
            <field name="operator">contains</field>
            <field name="tag_id" ref="documents_internal_status_draft"/>
        </record>

        <record model="documents.workflow.action">
            <field name="workflow_rule_id" ref="documents_internal_set_validated"/>
            <field name="action">replace</field>
            <field name="facet_id" ref="documents_internal_status_folder"/>
            <field name="tag_id" ref="documents_internal_status_validated"/>
        </record>

        <!-- base data -->

        <record id="" model="ir.attachment">
            <field name="name">LA landscape</field>
            <field name="datas_fname">LA-landscape.jpg</field>
            <field name="datas" type="base64" file="documents/demo/files/la.jpg"/>
            <field name="folder_id" ref="documents_marketing_folder"/>
            <field name="tag_ids" eval="[(6,0,[ref('documents_marketing_assets_images')])]"/>
        </record>

        <record id="" model="ir.attachment">
            <field name="name">City</field>
            <field name="datas_fname">city.jpg</field>
            <field name="datas" type="base64" file="documents/demo/files/city.jpg"/>
            <field name="folder_id" ref="documents_internal_folder"/>
            <field name="tag_ids" eval="[(6,0,[ref('documents_internal_knowledge_other')])]"/>
        </record>

        <record id="" model="ir.attachment">
            <field name="name">People</field>
            <field name="datas_fname">people.jpg</field>
            <field name="datas" type="base64" file="documents/demo/files/people.jpg"/>
            <field name="folder_id" ref="documents_internal_folder"/>
            <field name="tag_ids" eval="[(6,0,[ref('documents_internal_knowledge_other')])]"/>
        </record>

        <record id="documents_attachment_sorry_netsuite" model="ir.attachment">
            <field name="name">Sorry Netsuite</field>
            <field name="datas_fname">Sorry-Netsuite.jpg</field>
            <field name="datas" type="base64" file="documents/demo/files/sorry_netsuite.jpg"/>
            <field name="folder_id" ref="documents_marketing_folder"/>
            <field name="tag_ids" eval="[(6,0,[ref('documents_marketing_assets_ads')])]"/>
        </record>

        <record id="documents_attachment_video_studio" model="ir.attachment">
            <field name="name">Video: Odoo Studio</field>
            <field name="datas_fname">Odoo Studio</field>
            <field name="type">url</field>
            <field name="url">https://www.youtube.com/watch?v=xCvFZrrQq7k</field>
            <field name="folder_id" ref="documents_internal_folder"/>
            <field name="tag_ids" eval="[(6,0,[ref('documents_internal_template_Presentations')])]"/>
        </record>

        <record id="documents_vendor_bill_clean" model="ir.attachment">
            <field name="name">preview_clean</field>
            <field name="datas_fname">invoice_preview_clean.pdf</field>
            <field name="datas" type="base64" file="documents/demo/files/preview_clean.pdf"/>
            <field name="folder_id" ref="documents_finance_folder"/>
            <field name="tag_ids" eval="[(6,0,[ref('documents_finance_status_inbox'), ref('documents_finance_fiscal_year_2018'), ref('documents_finance_documents_vendor_bill')])]"/>
        </record>

        <record id="documents_vendor_bill_backgorund" model="ir.attachment">
            <field name="name">preview_background</field>
            <field name="datas_fname">invoice_preview_background.pdf</field>
            <field name="datas" type="base64" file="documents/demo/files/preview_background.pdf"/>
            <field name="folder_id" ref="documents_finance_folder"/>
            <field name="tag_ids" eval="[(6,0,[ref('documents_finance_status_inbox'), ref('documents_finance_fiscal_year_2018'), ref('documents_finance_documents_vendor_bill')])]"/>
        </record>

    </data>
</odoo>
