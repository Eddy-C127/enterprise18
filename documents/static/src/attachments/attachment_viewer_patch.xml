<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="documents.AttachmentViewer" owl="1" t-inherit="mail.AttachmentViewer" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o-mail-AttachmentViewer-download')]" position="before">
            <div t-if="hasSplitPdf" class="o-mail-AttachmentViewer-headerButton d-flex align-items-center px-3 cursor-pointer" t-on-click.stop="onClickPdfSplit" role="button" title="Split PDF">
                <i class="fa fa-scissors fa-fw" t-att-class="{ 'o-hasLabel me-2': !env.isSmall }" role="img"/>
                <t t-if="!env.isSmall">
                    <span>Split PDF</span>
                </t>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('o-mail-AttachmentViewer-download')]" position="replace">
            <t t-if="!withDownload">$0</t>   
        </xpath>
        <xpath expr="//div[hasclass('o-mail-AttachmentViewer-navigation')][@aria-label='Previous']" position="attributes">
            <attribute name="class" add="bg-dark" separator=" "/>
        </xpath>
        <xpath expr="//div[hasclass('o-mail-AttachmentViewer-navigation')][@aria-label='Next']" position="attributes">
            <attribute name="class" add="bg-dark" separator=" "/>
        </xpath>
        <xpath expr="//span[hasclass('fa-chevron-left')]" position="attributes">
            <attribute name="class" add="pe-1 text-white" separator=" "/>
        </xpath>
        <xpath expr="//span[hasclass('fa-chevron-right')]" position="attributes">
            <attribute name="class" add="ps-1 text-white" separator=" "/>
        </xpath>
    </t>
</templates>
