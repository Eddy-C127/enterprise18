<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <div t-name="documents.DocumentsViews.ControlPanel" owl="1" class="o_cp_buttons d-lg-flex gap-1" role="toolbar" aria-label="Control panel buttons" t-ref="cpButtons">
        <t t-set="disabled" t-value="hasDisabledButtons()"/>
        <t t-set="isShareable" t-value="hasShareDocuments()"/>
        <div class="btn-group">
            <button type="button" class="btn btn-primary o_documents_kanban_upload" t-att-disabled="disabled"
                    t-on-click.stop.prevent="() => this.uploadFileInputRef.el.click()" data-hotkey="a">
                    Upload
            </button>
            <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false" t-att-disabled="disabled" data-hotkey="c">
                    <span class="visually-hidden">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu">
                <button type="button" class="btn btn-link dropdown-item o_documents_kanban_request" t-att-disabled="disabled"
                    t-on-click.stop.prevent="onClickDocumentsRequest" data-hotkey="r">
                    Request
                </button>
                <button type="button" class="btn btn-link dropdown-item o_documents_kanban_url" t-att-disabled="disabled"
                    t-on-click.stop.prevent="onClickDocumentsAddUrl" data-hotkey="l">
                    Add a Link
                </button>
                <button type="button" class="btn btn-link dropdown-item o_documents_kanban_share_domain" title="Share this domain" t-att-disabled="isShareable" groups="documents.group_documents_user"
                    t-on-click.stop.prevent="onClickShareDomain" data-hotkey="s">
                    Share
                </button>
            </ul>
        </div>
        <input type="file" multiple="true" t-ref="uploadFileInput" class="o_input_file o_hidden" t-on-change.stop="onFileInputChange"/>
    </div>
</templates>
