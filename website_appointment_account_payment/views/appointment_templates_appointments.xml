<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="appointment_progress_bar" inherit_id="website_appointment.appointment_progress_bar">
    <xpath expr="//li[contains(@t-att-class, 'step==STEP_FORM')]" position="after">
        <t t-set="STEP_PAYMENT" t-value="35"/>
        <li t-if="appointment_type.has_payment_step and appointment_type.product_id"
            t-att-class="'position-relative float-start m-0 ' + (step==STEP_PAYMENT and 'o_current_stage' or step&gt;STEP_PAYMENT and 'o_passed_stage bg-transparent' or 'o_future_stage bg-transparent text-muted')">
            Payment <span class="chevron position-absolute d-block"></span>
        </li>
    </xpath>
</template>

<template id="appointments_cards" inherit_id="website_appointment.appointments_cards">
    <xpath expr="//div[hasclass('o_wappointment_card_message_intro')]" position="before">
        <div t-if="appointment.has_payment_step and appointment.product_id" class="mb-3">
            <span t-esc="appointment.product_id.lst_price"
                t-options="{'widget': 'monetary', 'display_currency': appointment.product_id.currency_id}"/>
        </div>
    </xpath>
</template>
</odoo>
