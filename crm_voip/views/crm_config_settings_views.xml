<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="crm_config_settings_view_form_inherit_crm_voip" model="ir.ui.view">
        <field name="name">crm.config.settings.inherit.crm.voip</field>
        <field name="model">crm.config.settings</field>
        <field name="inherit_id" ref="crm.crm_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='crm_voip']" position="after">
                <div class="content-group">
                    <div class="row mt16" attrs="{'invisible': [('module_crm_voip','=',False)]}">
                        <label for="pbx_ip" class="col-md-4 o_light_label"/>
                        <field name="pbx_ip" class="col-md-8 oe_inline"/>
                    </div>
                    <div class="row" attrs="{'invisible': [('module_crm_voip','=',False)]}">
                        <label for="wsServer" class="col-md-4 o_light_label"/>
                        <field name="wsServer" class="col-md-8 oe_inline"/>
                    </div>
                    <div class="row" attrs="{'invisible': [('module_crm_voip','=',False)]}">
                        <label for="mode" class="col-md-4 o_light_label"/>
                        <field name="mode" class="col-md-8 oe_inline"/>
                    </div>
                 </div>
             </xpath>
        </field>
    </record>

</odoo>
