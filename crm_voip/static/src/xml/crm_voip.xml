<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="crm_voip.switch_panel_top_button">
  <li title='Display Dialing Panel'>
    <a href="#">
      <i class="fa fa-phone fa-fw"></i>
    </a>
  </li>
</t>

<t t-name="crm_voip.PhonecallWidget">
  <div rel='popover' data-trigger="hover" data-placement='right' class="o_dial_phonecall" t-att-data-state="widget.state" t-att-data-id="widget.id">
    <table class="o_form_group">
      <tr class="o_form_group_row">
        <td class="o_form_group_cell o_form_group_cell_label">
          <t t-if="widget.partner_name != 'Unknown'">
            <span class="o_dial_phonecall_clip">
              <img t-att-src="'data:image/jpg;base64,'+widget.image_small" class="o_dial_phonecall_avatar"/>
            </span>
          </t>
          <t t-if="widget.partner_name == 'Unknown'">
            <span class="o_dial_phonecall_clip">
              <img t-att-src='_s + "/base/static/src/img/avatar.png"' class="o_dial_phonecall_avatar"/>
            </span>
          </t>
        </td>
        <td style="width: 100%;" class="o_form_group_cell">
          <span class="o_dial_phonecall_partner_name"><strong><t t-esc="widget.partner_name"/></strong></span>
          <t t-if="widget.state == 'in_call'">
            <i style='margin-left:2px;' class='fa fa-microphone o_dial_icon_inCall'></i>
          </t>
          <span class="o_dial_status_span pull-right">
            <t t-if="widget.state == 'done'">
              <i class="fa fa-check o_dial_state_icon o_dial_state_icon_done"></i>
            </t>
            <t t-if="widget.state == 'pending'">
              <i class="fa fa-stack o_dial_state_icon o_dial_state_icon_pending" style="width:13px; height:15px;line-height: 13px;">
                <i class="fa fa-phone fa-stack-1x o_dial_state_icon"></i>
                <i class="fa fa-times fa-stack-1x o_dial_state_icon" style="color: LightCoral;font-size: 8px;left: 4px;position: relative;bottom: 4px;"></i>
              </i>
            </t>
            <a href="#">
              <t t-if="widget.state == 'done'">
                <i title="Remove from the queue" class="o_dial_remove_phonecall fa fa-times"></i>
              </t>
              <t t-if="widget.state != 'done'">
                <i title="Cancel the call" class="o_dial_remove_phonecall fa fa-times"></i>
              </t>
            </a>
          </span><br/>
          <span class="o_dial_phonecall_partner_phone"><small><t t-esc="widget.name"/></small></span>
        </td>
      </tr>
    </table>   
  </div>
</t>

<t t-name="crm_voip.DialingPanel">
  <div class="o_dial">
    <div class="o_dial_fold text-center">
        <i class="fa fa-angle-down fa-2x mt4 mb4 o_dial_fold_icon"></i>
    </div>
    <div class="o_dial_display_pannel">
        <div class="o_dial_search_input">
            <input class="o_dial_searchbox" placeholder="Search Phone Calls..."/>
            <span class="fa fa-search" title="Refresh the Panel"/>
        </div>
        <div class="o_dial_phonecalls"></div>
        <div class="o_dial_buttons o_dial_main_buttons">
            <button class="o_dial_keypad_button o_dial_keypad_icon text-gray-light"><i class="fa fa-table"></i></button>
            <div class="btn-group dropup o_dial_split_call_button o_dial_keypad_button">
                <button type="button" class="o_dial_call_button o_dial_big_call_button"><i class="fa fa-phone"></i></button>
                <button type="button" class="dropdown-toggle o_call_dropdown" data-toggle="dropdown">
                    <span class="caret"></span>
                    <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="#" class="o_dial_autocall_button">Call All</a></li>
                    <li><a href="#" class="o_dial_call_button">Call Next One</a></li>
                </ul>
            </div>
            <button type="button" class="o_dial_call_button o_dial_stop_autocall_button"><i class="fa fa-phone"></i><br/>Stop</button>
            <button class="o_dial_keypad_button o_dial_refresh_icon text-gray-light"><i class="fa fa-refresh"></i></button>
        </div>
        <div class="o_dial_buttons o_dial_keypad_buttons">
            <div class="col-xs-4 text-center">
                <button type="button" class="o_dial_keypad_button_small o_dial_transfer_button">
                    <i class="fa fa-arrows-h"></i><small class="feature">Transfer</small>
                </button>
            </div>
            <div class="col-xs-4 text-center">
                <button type="button" class="o_dial_keypad_button_small o_dial_hangup_button">
                    <i class="fa fa-phone"></i>
                </button>
            </div>
            <div class="col-xs-4 text-center">
                <button type="button" class="o_dial_keypad_button_small o_dial_schedule_call">
                        <i class="fa fa-clock-o"></i><small class="feature">Reschedule</small>
                </button>
            </div>
            <div class="col-xs-4 text-center">
                <button type="button" class="o_dial_keypad_button_small o_dial_email">
                    <i class="fa fa-send-o"></i><small class="feature">Send mail</small>
                </button>
            </div>
            <div class="col-xs-4 text-center">
                <button type="button" class="o_dial_keypad_button_small o_dial_to_client">
                    <i class="fa fa-user"></i><small class="feature">Customer</small>
                </button>
            </div>
            <div class="col-xs-4 text-center">
                <button type="button" class="o_dial_keypad_button_small o_dial_to_lead">
                    <i class="fa fa-lightbulb-o"></i><small class="feature">Opportunity</small>
                </button>
            </div>
        </div>
    </div>
    <div class="o_dial_keypad">
        <div class="o_dial_keypad_input_div o_dial_keypad_optional">
            <input class="o_dial_keypad_input" placeholder="Enter the number..."/>
            <div class="o_dial_keypad_backspace fa fa-long-arrow-left" title="Backspace"/>
        </div>
        <div class="clearfix o_dial_keypad_buttons mt16 mb16">
            <button class="o_dial_keypad_button text-primary">1</button>
            <button class="o_dial_keypad_button text-primary">2</button>
            <button class="o_dial_keypad_button text-primary">3</button>
            <button class="o_dial_keypad_button text-primary">4</button>
            <button class="o_dial_keypad_button text-primary">5</button>
            <button class="o_dial_keypad_button text-primary">6</button>
            <button class="o_dial_keypad_button text-primary">7</button>
            <button class="o_dial_keypad_button text-primary">8</button>
            <button class="o_dial_keypad_button text-primary">9</button>
            <button class="o_dial_keypad_button text-primary">*</button>
            <button class="o_dial_keypad_button text-primary">0</button>
            <button class="o_dial_keypad_button text-primary">#</button>
        </div>
        <div class="o_dial_main_buttons">
            <button class="o_dial_keypad_button o_dial_keypad_icon text-gray-light"><i class="fa fa-table"></i></button>
            <button class="o_dial_keypad_button o_dial_keypad_optional o_dial_keypad_call_button"><i class="fa fa-phone"></i></button>
            <button class="o_dial_keypad_button o_dial_refresh_icon text-gray-light"><i class="fa fa-refresh"></i></button>
        </div>
    </div>
  </div>
</t>

<t t-name="crm_voip_Tooltip">
  <div class="o_crm_voip_popover">
    <div style="font-weight: bold;">
      <span class="o_form_field o_form_field_char"><t t-esc="partner_name"/></span>
    </div>
    <t t-if="display_opp_name">
      <div style="font-weight: bold;">
        <span class="o_form_field o_form_field_char"><t t-esc="opportunity"/></span>
      </div>
    </t>
    <div>
      <span class="o_form_field o_form_field_char">Scheduled Date: <t t-esc="date"/></span>
    </div>
    <div style="font-style: italic;">
      <t t-if="phone">
        <span class="o_form_field o_form_field_char"><t t-esc="phone"/></span><br/>
      </t>
    </div>
    <t t-if="email">
      <div>
        <span class="o_form_field o_form_field_char"><t t-esc="email"/></span>
      </div>
    </t>
    <t t-if="description">
      <div style="margin-top:7px;margin-bottom:7px;">
        <span class=" o_form_label o_align_right"> Description: </span><br/>
        <span class="o_form_field o_form_field_char"><t t-esc="description"/></span>
      </div>
    </t>
    <t t-if="title_action">
      <div style="margin-top:7px;margin-bottom:7px;">
        <span class=" o_form_label o_align_right"> Next Action: </span><br/>
        <span class="o_form_field o_form_field_char"><t t-esc="title_action"/></span>
      </div>
    </t>
    <t t-if="planned_revenue">
      <div>
        <span class=" o_form_label o_align_right"> Expected Revenue: </span><br/>
        <t t-esc="planned_revenue"/> at <t t-esc="probability"/> %
      </div>
    </t>
  </div>
</t>

<t t-name="crm_voip_Tooltip_title">
      <span style="display:inline-block; max-width: 210px"><t t-esc="name"/></span>
      <span class="pull-right">
        <t t-foreach="priority" t-as="prior">
          <i class="fa fa-star"></i>
        </t>
        <t t-foreach="empty_star" t-as="empty">
          <i class="fa fa-star-o"></i>
        </t>
      </span>
</t>

<t t-name="FieldPhone">
  <span class="o_form_field o_form_field_email" t-att-style="widget.node.attrs.style">
    <t t-if="widget.get('effective_readonly')">
      <a href="#" class="o_form_uri"/>
    </t>
    <t t-if="!widget.get('effective_readonly')">
      <div>
        <input type="text"
          t-att-id="widget.id_for_label"
          t-att-tabindex="widget.node.attrs.tabindex"
          t-att-autofocus="widget.node.attrs.autofocus"
          t-att-placeholder="widget.node.attrs.placeholder"
          t-att-maxlength="widget.field.size"
        />
      </div>
    </t>
  </span>
</t>

</templates>
