                    <field name="l10n_br_source_origin" attrs="{'invisible': [('fiscal_country_codes', 'not ilike', 'BR')]}"/>
                    <field name="l10n_br_sped_type" attrs="{'invisible': [('fiscal_country_codes', 'not ilike', 'BR')]}"/>
                    <field name="l10n_br_use_type" attrs="{'invisible': [('fiscal_country_codes', 'not ilike', 'BR')]}"/>
                    <field name="l10n_br_transport_cost_type" attrs="{'invisible': ['|', ('type', '!=', 'service'), ('fiscal_country_codes', 'not ilike', 'BR')]}"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
