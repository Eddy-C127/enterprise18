<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="notify_approval">
        <t t-foreach="partner_ids" t-as="partner"><a t-att-href="'/odoo/res.partner/%s' % partner.id" t-att-data-oe-id="partner.id" data-oe-model="res.partner" class="o_mail_redirect" target="_blank">@<t t-esc="partner.name"/></a>, </t>
        <span t-if="approved"><t t-esc="target_name"/> approved by <t t-esc="user_name"/> <i class="fa fa-thumbs-up text-success"/></span>
        <span t-else=""><t t-esc="target_name"/> rejected by <t t-esc="user_name"/> <i class="fa fa-thumbs-down text-danger"/></span>
    </template>
</odoo>
