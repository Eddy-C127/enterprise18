<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

<t t-name="wowl.FileUploader.Input" owl="1">
  <input 
    type="file" 
    class="o_input_file"
    t-att="{'multiple': props.multiUpload ? true : false, 'accept': props.acceptedFileExtensions || '*'}"
    t-ref="fileInput"
    t-on-change="_onChangedFiles"
    style="display: none !important;" 
  />
</t>

<t t-name="wowl.FileUploader" owl="1">
  <div class="o_file_uploader">
    <label t-if="props.withLabel"><t t-slot="default" />
      <t t-call="wowl.FileUploader.Input" />
    </label>
    <t t-else="">
      <t t-call="wowl.FileUploader.Input" />
    </t>
  </div>
</t>

</templates>
