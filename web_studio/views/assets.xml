<?xml version="1.0" encoding="utf-8"?>
<odoo>

<data>

    <template id="web_studio.compiled_assets_studio" name="Web Studio Bundle" groups="base.group_system">
        <t t-call-assets="web_studio.studio_assets"/>
    </template>

    <template id="webclient_bootstrap" inherit_id="web.webclient_bootstrap">
        <xpath expr="//t[@t-call-assets='web.assets_backend'][@t-css='false']" position="after">
            <t t-call-assets="web_studio.assets" groups="base.group_system"/>
        </xpath>
    </template>

    <!-- Reports -->
    <template id="web_studio.report_layout" inherit_id="web.report_layout">
        <xpath expr="//head" position="inside">
            <t t-if="studio" t-call-assets="web_studio.report_assets"/>
        </xpath>
    </template>

    <!-- Tests -->
    <template id="web_studio.qunit_suite" inherit_id="web.qunit_suite">
        <xpath expr="//t[@t-call-assets='web.qunit_suite_tests'][@t-js='false']" position="before">
            <t t-call-assets="web_studio.assets"/>
            <t t-call-assets="web_studio.studio_assets"/>
        </xpath>
    </template>

    </data>

</odoo>
