<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mass_mailing_offer_free_trial" model="mail.mass_mailing">
        <field name="name">Offer free trial</field>
        <field name="use_in_marketing_automation">True</field>
        <field name="mailing_model_id" ref="base.model_res_partner"/>
        <field name="body_html" type="xml">
            <div class="o_layout o_default_theme">
                <table class="o_mail_wrapper" style="text-align: center;">
                    <tbody>
                        <tr>
                            <td class="o_mail_no_resize"></td>
                            <td class="o_mail_no_resize o_mail_wrapper_td oe_structure">
                                <div class="o_mail_block_header_logo mb16">
                                    <div class="o_mail_snippet_general">
                                        <table align="center" cellspacing="0" cellpadding="0" border="0" class="o_mail_table_styles o_mail_h_padding">
                                            <tbody>
                                                <tr>
                                                    <td width="20%"></td>
                                                    <td valign="center" width="60%" class="o_mail_logo_container text-center o_mail_v_padding">
                                                        <a href="http://www.example.com">
                                                            <img border="0" src="/mass_mailing/static/src/img/theme_default/s_default_image_logo.png" style="max-width:400px;" alt="Your Logo"/>
                                                        </a>
                                                    </td>
                                                    <td width="20%" style="text-align:right"></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="o_mail_block_title_text">
                                    <div class="o_mail_snippet_general">
                                        <table align="center" cellspacing="0" cellpadding="0" border="0" class="o_mail_table_styles">
                                            <tbody>
                                                <tr>
                                                    <td width="100%" class="o_mail_h_padding o_mail_v_padding">
                                                        <h2 class="mt0 o_default_snippet_text">Thank you for joining us!</h2>
                                                        <p class="">We want to take this opportunity to welcome you to our ever-growing community!<br/></p>
                                                        <p class="">Here is your free trial.</p>
                                                        <p class=""><a href="/" class="btn btn-primary" data-original-title="" title="">Subscribe</a></p>
                                                        <p class=""><br/></p>
                                                        <p class="o_default_snippet_text">Enjoy,</p>
                                                        <img src="/mass_mailing/static/src/img/theme_default//demo/signature.png" style="width:125px; margin-top:8px;margin-bottom:-25px;" alt="Demo Signature"/>
                                                        <p>
                                                            <small>
                                                                <strong class="o_default_snippet_text">Michael Fletcher</strong>
                                                                <br/><small class="">Community Manager</small>
                                                            </small>
                                                        </p>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td width="100%" class="o_mail_h_padding o_mail_v_padding"><br/></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </td>
                            <td class="o_mail_no_resize"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </field>
    </record>

