<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="mail_mass_mailing_view_search" model="ir.ui.view" >
        <field name="name">mail.mass_mailing.view.search.inherit.marketing.automation</field>
        <field name="model">mail.mass_mailing</field>
        <field name="inherit_id" ref="mass_mailing.view_mail_mass_mailing_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='inactive']" position='after'>
                <separator/>
                <filter name="marketing_automation" string="Used in Marketing Automation" domain="[('use_in_marketing_automation', '=', True)]"/>
            </xpath>
        </field>
    </record>

    <record id="mass_mailing_view_form_marketing_activity" model="ir.ui.view">
        <field name="name">mail.mass_mailing.view.marketing.activity</field>
        <field name="model">mail.mass_mailing</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
        <form string="Mail Template">
            <sheet>
                <group>
                    <field name="name" string="Subject"/>
                    <field name="email_from"/>
                    <label for="mailing_model_id" string="Recipients" invisible="1"/>
                    <field name="mailing_model_id" invisible="1"/>
                    <field name="mailing_model_real" invisible="1"/>
                    <field name="use_in_marketing_automation" invisible="1"/>
                    <field name="campaign_id" invisible="1"/>
                    <field name="state" invisible="1"/>
                </group>
                <notebook>
                    <page string="Mail Body">
                        <field name="body_html" widget="html_frame" options="{'editor_url': '/mass_mailing/field/email_template'}"/>
                    </page>
                    <page string="Options">
                        <group>
                            <group string="Mailing">
                                <field name="attachment_ids" widget="many2many_binary" string="Attach a file" class="oe_inline"/>
                                <field name="keep_archives" groups="base.group_no_one"/>
                                <label for="reply_to"/>
                                <div>
                                    <field name="reply_to_mode" widget="radio" attrs="{'invisible': [('mailing_model_real', '=', 'mail.mass_mailing.contact')]}"/>
                                    <field name="reply_to" attrs="{'required': [('reply_to_mode', '=', 'email')], 'invisible': [('reply_to_mode', '!=', 'email')]}"/>
                                </div>
                            </group>
                        </group>
                    </page>
                </notebook>
            </sheet>
        </form>
        </field>
    </record>

    <record id="mass_mailing.action_view_mass_mailings" model="ir.actions.act_window">
        <field name="domain">[('use_in_marketing_automation', '=', False)]</field>
    </record>

    <record id="mail_mass_mailing_action_marketing_automation" model="ir.actions.act_window">
        <field name="name">Marketing Automation Mailings</field>
        <field name="res_model">mail.mass_mailing</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form,graph</field>
        <field name="context">{
            'search_default_assigned_to_me': 1,
            'default_user_id': uid,
            'default_use_in_marketing_automation': True,
        }</field>
        <field name="domain">[('use_in_marketing_automation', '=', True)]</field>
    </record>

</odoo>
