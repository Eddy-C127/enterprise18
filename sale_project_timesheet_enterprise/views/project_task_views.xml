<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_task_view_form" model="ir.ui.view">
        <field name="name">project.task.view.form.inherit.sale.project.timesheet.enterprise</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position='inside'>
                <button name="action_make_billable" string="Create Sales Order" type="object" attrs="{'invisible': ['|', '|', ('billable_type', '!=', 'no'), ('partner_id', '=', False), ('sale_order_id', '!=', False)]}"/>
            </xpath>
        </field>
    </record>

</odoo>
