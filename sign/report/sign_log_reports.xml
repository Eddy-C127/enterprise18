<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="sign_request_logs_user">
        <t t-call="web.html_container">
            <t t-set="print_date" t-value="datetime.datetime.now()"/>
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <br/>
                    <h3>
                        Access history of:
                    </h3>
                    <h4 class="text-right">
                        <span t-field="o.reference"/>
                    </h4>
                    <div class="text-right text-muted">(Sign Request # <t t-esc="o.id"/>)</div>
                    <div class="text-right text-muted">Printed on <t t-esc="print_date"/></div>
                    <br/>
                    <table class="table table-sm o_main_table table-bordered">
                        <thead>
                            <tr>
                                <th class="text-left">Access Date</th>
                                <th class="text-left">Action</th>
                                <th class="text-left">By</th>
                                <th class="text-left">Document state</th>
                                <th class="text-left" groups="sign.group_sign_manager">Latitude</th>
                                <th class="text-left" groups="sign.group_sign_manager">Longitude</th>
                                <th class="text-left" groups="sign.group_sign_manager">IP</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.sign_log_ids" t-as="log">
                                <td> <span t-field="log.log_date"/> </td>
                                <td> <span t-field="log.action"/> </td>
                                <td> <span t-field="log.partner_id"/> </td>
                                <td> <span t-field="log.request_state"/> </td>
                                <td groups="sign.group_sign_manager"> <span t-if="log.latitude" t-field="log.latitude"/> </td>
                                <td groups="sign.group_sign_manager"> <span t-if="log.longitude" t-field="log.longitude"/> </td>
                                <td groups="sign.group_sign_manager"> <span t-field="log.IP"/> </td>
                            </tr>
                        </tbody>
                    </table>
                </t>
            </t>
        </t>
    </template>

    <report id="action_sign_request_print_logs"
        string="Access Logs"
        model="sign.request"
        name="sign.sign_request_logs_user"
        file="sign.sign_request_logs_user"
        report_type="qweb-pdf"/>

</odoo>
