<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sign_template_share_view_form" model="ir.ui.view">
        <field name="name">sign.template.share.view.form</field>
        <field name="model">sign.template.share</field>
        <field name="arch" type="xml">
            <form string="Multiple Signature Requests">
                <span class="text-muted">Share this link and Odoo will create a new document per person who clicks on the link. The link is private, only those that receive the link will be able to sign it.</span>
                <group>
                    <field name="template_id" invisible="1"/>
                    <field name="url" widget="CopyClipboardChar" attrs="{'invisible': [('url', '=', False)]}" readonly="1"/>
                </group>
                <span attrs="{'invisible': [('url', '!=', False)]}">To be able to share, there must be only one responsible for all fields!</span>
                <footer>
                    <button string="Ok" class="btn-primary" special="cancel"/>
                    <button string="Open" name="open" type="object" class="btn-primary" attrs="{'invisible': [('url', '=', False)]}"/> 
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sign_template_share" model="ir.actions.act_window">
        <field name="name">Multiple Signature Requests</field>
        <field name="res_model">sign.template.share</field>
        <field name="target">new</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
    </record>
</odoo>
