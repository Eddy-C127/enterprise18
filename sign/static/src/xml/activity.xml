<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-extend="mail.activity_thread_message_tools">
        <t t-jquery="span.o_mark_as_done:first" t-operation="attributes">
            <attribute name="t-if" value="activity.activity_category !== 'upload_file' &amp; activity.activity_category !== 'sign_request'" />
        </t>
        <t t-jquery="span.o_mark_as_done:first" t-operation="after">
            <span t-if="activity.activity_category == 'sign_request'" class="o_mark_as_done_request_sign" t-att-data-activity-id="activity.id" t-att-data-force-next-activity="activity.force_next" t-att-data-previous-activity-type-id="activity.activity_type_id[0]">
                <a role="button" href="#" class="btn btn-link btn-success text-muted o_activity_link mr8">
                <i class="fa fa-pencil-square-o"/> Request Signature </a>
            </span>
        </t>
    </t>

    <t t-extend="mail.activities-list-group-item">
        <t t-jquery="a.o_mark_as_done" t-operation="attributes">
            <attribute name="t-if" value="log.activity_category !== 'sign_request'" />
        </t>
        <t t-jquery="a.o_mark_as_done" t-operation="after">
            <a  t-if="log.activity_category == 'sign_request'"
                t-att-data-force-next-activity="log.force_next"
                t-att-data-previous-activity-type-id="log.activity_type_id[0]"
                t-att-data-activity-id="log.id"
                t-attf-href="#o_mark_done_form{{log.id}}"
                class="o_mark_as_done_request_sign o_activity_link o_activity_link_kanban fa fa-pencil-square-o"
                data-toggle="collapse" title="Request Signature" role="img" aria-label="Request Signature"/>
        </t>
    </t>
</templates>
