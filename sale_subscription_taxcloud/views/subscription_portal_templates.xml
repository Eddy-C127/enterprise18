<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Warn of possible tax update in case of a Taxcloud customer since they will be recomputed for each invoice -->
    <template id="portal_subscription" name="Portal : subscription amounts" inherit_id="sale_subscription.subscription">
        <xpath expr="//div[@name='total']//table" position="inside">
            <tfoot>
                <tr t-if="account.fiscal_position_id.is_taxcloud">
                    <td colspan="2">
                        <p class="small">
                            <a href="#" t-if="account.fiscal_position_id.is_taxcloud" role="button"
                               class="text-muted text-left" data-toggle="collapse"
                               data-target=".taxcloud-details">
                            Taxes are subject to change
                            </a>
                        </p>
                        <p class="small collapse taxcloud-details alert alert-info">
                            We use <a target="_blank" href="https://taxcloud.com">TaxCloud</a> to
                            automatically compute appropriate sales taxes upon payment depending on
                            invoice date, address, etc. Taxes on your next invoice may be slightly
                            different than the amount currently displayed.</p>
                    </td>
                </tr>
            </tfoot>
        </xpath>
    </template>

</odoo>
