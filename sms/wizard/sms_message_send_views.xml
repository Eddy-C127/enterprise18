<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add action entry in the Action Menu for Partners -->
    <act_window id="sms_message_send_action_res_partner"
        name="Send SMS"
        src_model="res.partner"
        res_model="sms.message.send"
        view_type="form"
        view_mode="form"
        key2="client_action_multi"
        target="new"/>

    <record id="sms_message_send_view_form" model="ir.ui.view">
        <field name="name">sms.message.send.form</field>
        <field name="model">sms.message.send</field>
        <field name="arch" type="xml">
            <form string="Send an SMS">
                <sheet>
                    <group>
                        <field name="provider_id" options="{'no_create': True}"/>
                        <field name="message" widget="text"/>
                    </group>
                </sheet>
                <footer>
                    <group>
                        <span>
                            <button string="Send" type="object" class="oe_highlight" name="action_send_sms"/>
                            <button string="Cancel" class="oe_link" special="cancel" />
                        </span>
                    </group>
                </footer>
            </form>
        </field>
    </record>

</odoo>
