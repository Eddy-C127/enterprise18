<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="base_config_settings_view_form_inherit_sms" model="ir.ui.view">
        <field name="name">base.config.settings.inherit</field>
        <field name="model">base.config.settings</field>
        <field name="inherit_id" ref="base_setup.base_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='emails']" position="after">
                <h2>SMS</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label string="Default SMS Provider"/>
                            <div class="text-muted">
                                By default, SMS text messages generated by Odoo will use this provider.
                            </div>
                            <div class="content-group">
                                <div class="mt16 row">
                                    <label for="default_sms_provider_id" string="Provider" class="col-xs-3 col-md-3 o_light_label"/>
                                    <field name="default_sms_provider_id" class="oe_inline"/>
                                    <button name="action_sms_test" string="Send me a Test" type="object" class="oe_inline" attrs="{'invisible': [('default_sms_provider_id','=',False)]}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
