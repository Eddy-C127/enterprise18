<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <t t-name="social_push_notifications.NotificationRequestPopup">
        <div class="dropdown o_social_push_notifications_permission_request">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"></a>
            <div class="dropdown-menu" t-name="">
                <i class="fa fa-remove" />
                <div class="row">
                    <div class="col-3">
                        <img t-att-src="widget.notificationIcon" alt="Notification Request Icon"/>
                    </div>
                    <div class="col-9">
                        <div class="o_social_push_notifications_permission_content">
                            <div class="o_social_push_notifications_permission_content_title text-primary mt4 mb4"
                                t-esc="widget.notificationTitle" />
                            <div class="o_social_push_notifications_permission_content_body text-muted small"
                                t-esc="widget.notificationBody"></div>
                        </div>
                        <div class="pull-right">
                            <button class="o_social_push_notifications_permission_deny btn btn-default">Deny</button>
                            <button class="o_social_push_notifications_permission_allow btn btn-primary">Allow</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</odoo>
