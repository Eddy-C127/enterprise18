<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_urban_piper.OrderWidget" t-inherit="point_of_sale.OrderWidget" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('order-container')]/t" position="after">
            <div t-if="this.props.delivery_note" class="mx-2 py-2 border-bottom border-top">
                <div class="d-flex align-items-center">
                    <i class="fa fa-sticky-note me-2 mb-2"/><h5>Instructions</h5>
                </div>
                <span>
                    <t t-esc="this.props.delivery_note"/>
                </span>
            </div>
        </xpath>
    </t>
</templates>
