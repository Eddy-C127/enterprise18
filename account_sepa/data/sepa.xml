<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="account_payment_method_sepa_ct" model="account.payment.method">
            <field name="name">SEPA Credit Transfer</field>
            <field name="code">sepa_ct</field>
            <field name="payment_type">outbound</field>
        </record>

        <function model="account.journal" name="_enable_payment_method_on_bank_journals">
            <value model="account.payment.method" eval="obj().browse(ref('account_payment_method_sepa_ct'))"/>
            <value eval="'EUR'"/>
        </function>
    </data>
</odoo>
