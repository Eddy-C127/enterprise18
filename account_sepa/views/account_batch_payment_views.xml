<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_batch_payment_form_inherit" model="ir.ui.view">
            <field name="name">sct.account.batch.payment.form.inherit</field>
            <field name="model">account.batch.payment</field>
            <field name="inherit_id" ref="account_batch_payment.view_batch_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='print_batch_payment']" position="after">
                    <field name="payment_method_code" invisible="1"/>
                    <button name="generate_sct_xml" type="object" string="re-Generate XML" attrs="{'invisible':['|', ('payment_method_code', '!=', 'sepa_ct'), ('state', '!=', 'sent')]}"/>
                </xpath>

                <xpath expr="//notebook" position="inside">
                    <page string="SCT Information" attrs="{'invisible': ['|', ('state','=','draft'), ('payment_method_code', '!=', 'sepa_ct')]}">
                        <group>
                            <field name="sct_xml_filename" invisible="1"/>
                            <field string="XML File" name="sct_xml_file" filename="sct_xml_filename"/>
                        </group>
                    </page>
                </xpath>

                <xpath expr="//field[@name='payment_ids']//form//group/group" position="inside">
                    <field name="payment_method_code" invisible="1"/>
                    <field name="partner_bank_account_id" attrs="{'invisible': ['|', ('payment_method_code', '!=', 'sepa_ct'), '|', ('partner_id', '=', False), ('payment_type', '=', 'transfer')], 'required': [('payment_method_code', '=', 'sepa_ct')]}" domain="[('partner_id', '=', partner_id)]" context="{'default_partner_id': partner_id}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
