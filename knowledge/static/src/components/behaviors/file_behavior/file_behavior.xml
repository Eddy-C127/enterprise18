<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <!-- /file template -->
    <t t-name="knowledge.FileBehavior" owl="1">
        <div class="d-flex justify-content-between flex-wrap w-100">
            <div class="d-flex flex-wrap">
                <div class="o_knowledge_file_image d-flex align-items-center" t-on-click="onClickDownload"
                    data-prop-name="fileImage" t-out="props.fileImage"/>
                <div class="o_knowledge_file_description d-block ps-2 text-break">
                    <div class="o_knowledge_file_name" t-out="props.fileName"/>
                    <div class="o_knowledge_file_extension text-uppercase small" t-out="props.fileExtension"/>
                </div>
            </div>
            <BehaviorToolbar>
                <t t-set-slot="buttons">
                    <BehaviorToolbarButton
                        hidden="!targetRecordInfo?.withChatter"
                        icon="'fa-envelope'"
                        label="env._t('Send as Message')"
                        onClick.bind="onClickAttachToMessage"
                    />
                    <BehaviorToolbarButton
                        hidden="!targetRecordInfo?.withChatter"
                        icon="'fa-paperclip'"
                        label="env._t('Use as Attachment')"
                        onClick.bind="onClickUseAsAttachment"
                    />
                    <BehaviorToolbarButton
                        icon="'fa-download'"
                        label="env._t('Download')"
                        onClick.bind="onClickDownload"
                    />
                </t>
            </BehaviorToolbar>
        </div>
    </t>
    <t t-name="knowledge.WysiwygFileBehavior">
        <div t-attf-class="o_knowledge_behavior_anchor #{behaviorType}" t-att-data-behavior-props="behaviorProps" data-oe-protected="true">
            <div class="o_knowledge_file_image"
                data-prop-name="fileImage" t-out="fileImage"/>
            <div class="o_knowledge_file_description">
                <div class="o_knowledge_file_name" t-out="fileName"/>
                <div class="o_knowledge_file_extension" t-out="fileExtension"/>
            </div>
        </div>
    </t>
</templates>
