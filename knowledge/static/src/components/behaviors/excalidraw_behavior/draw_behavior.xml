<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="knowledge.DrawBehavior">
        <div t-if="state.isError" data-oe-transient-content="true"
        class="d-flex flex-column flex-grow-1 position-relative pb-3 align-items-center
            justify-content-center bg-white border">
                <p class="o_view_nocontent_empty_folder m-0"></p>
                <p class="display-6">Something went wrong!</p>
                <p>The Excalidraw URL is not valid.</p>
                <button t-if="!props.readonly" t-on-click="openUpdateSource" class="btn btn-link">
                    Click here to update the source
                </button>
        </div>
        <div t-else="" t-attf-style="width: #{this.state.width}; height: #{this.state.height}"
            t-attf-class="{{ this.state.isResizing ? 'pe-none' : '' }} d-flex flex-row o_knowledge_draw_container">
            <div t-on-mousedown.prevent="onHandleMouseDown" 
                t-attf-class="{{ this.state.isResizing ? 'visible' : '' }} o_knowledge_draw_handle o_knowledge_draw_handle_left align-self-end"/>
            <iframe class="flex-grow-1 pb-3" t-att-src="state.source" allowfullscreen="true"/>
            <div t-on-mousedown.prevent="onHandleMouseDown"
                t-attf-class="{{ this.state.isResizing ? 'visible' : '' }} o_knowledge_draw_handle o_knowledge_draw_handle_right align-self-end"/>
        </div>
    </t>
</templates>
