<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="Chatter" t-inherit="mail.Chatter" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('o_ChatterTopbar_rightSection')]/child::*" position="before">
            <button class="btn btn-light o_ChatterTopbar_button" type="button" t-att-disabled="!isTemporary and !hasReadAccess" t-on-click="onClickChatterSearchArticle" title="Search Knowledge Articles">
                <i class="fa fa-book"/>
            </button>
        </xpath>
    </t>
</templates>
