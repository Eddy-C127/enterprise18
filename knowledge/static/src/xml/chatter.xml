<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="Chatter" t-inherit="mail.Chatter" t-inherit-mode="extension" owl="1">
        <xpath expr="//*[hasclass('o-mail-Chatter-topbarGrow')]" position="after">
            <button class="btn btn-light my-2" t-att-disabled="!state.thread.isTemporary and !state.thread.hasReadAccess" t-on-click="onClickChatterSearchArticle" title="Search Knowledge Articles">
                <i class="fa fa-book"/>
            </button>
        </xpath>
    </t>
</templates>
