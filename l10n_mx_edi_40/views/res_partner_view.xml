<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="l10n_mx_edi_inh_40_res_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form40.inherit.l10n_mx_edi</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="l10n_mx_edi.l10n_mx_edi_inh_res_partner_form"/>
            <field name="arch" type="xml">
                <page name="addenda" position="attributes">
                    <attribute name="string">MX EDI</attribute>
                    <attribute name="attrs">{'invisible': [('fiscal_country_codes', 'not ilike', 'MX')]}</attribute>
                </page>
                <xpath expr="//page[@name='addenda']/group" position="inside">
                    <field name="country_code" invisible="1"/>
                    <field name="l10n_mx_edi_fiscal_regime"/>
                    <field name="l10n_mx_edi_no_tax_breakdown"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
