<odoo>

    <record id="project_worksheet_template_view_form" model="ir.ui.view">
        <field name="name">project.worksheet.template.view.form</field>
        <field name="model">project.worksheet.template</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="model_id" invisible="True"/>
                    <widget name="open_studio_button" attrs="{'invisible': [('model_id', '=', False)]}" groups="base.group_system"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_worksheets" type="object" class="oe_stat_button" icon="fa-archive">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="worksheet_count"/></span>
                                <span class="o_stat_text"> Worksheet(s)</span>
                            </div>
                        </button>
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive" >
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="model_id" invisible="True"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="project_worksheet_template_view_list" model="ir.ui.view">
        <field name="name">project.worksheet.template.view.form</field>
        <field name="model">project.worksheet.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Template name"/>
                <field name="worksheet_count" string="Worksheets"/>
            </tree>
        </field>
    </record>

    <record id="action_fsm_worksheets" model="ir.actions.act_window">
        <field name="name">Worksheet Templates</field>
        <field name="res_model">project.worksheet.template</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,graph,pivot</field>
    </record>

    <menuitem id="project_worksheet_template_menu" name="Worksheet templates" action="action_fsm_worksheets"
        sequence="10" parent="project.menu_project_config"
        groups="project.group_project_user"/>

    <record id="project_project_view_form_simplified_inherit" model="ir.ui.view">
        <field name="name">project.project.view.form.simplified.inherit.industry.fsm.report</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="industry_fsm.project_view_form_simplified_inherit"/>
        <field name="arch" type="xml">
            <field name="allow_planning" position="after">
                <field name="allow_worksheets"/>
                <field name="worksheet_template_id"  attrs="{'invisible': [('allow_worksheets', '=', False)]}"/>
            </field>
        </field>
    </record>

    <record id="project_project_form_inherit_industry_fsm_report" model="ir.ui.view">
        <field name="name">project.project.form.inherit.industry.fsm.report</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="industry_fsm.project_view_form_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='extra_settings']" position="inside">
                <field name="allow_worksheets"/>
                <field name="worksheet_template_id"  attrs="{'invisible': [('allow_worksheets', '=', False)]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_task_form2_inherit" model="ir.ui.view">
        <field name="name">task.form.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_fsm_view_material']" position="before">
                <field name="allow_worksheets" invisible="1"/>
                <field name="worksheet_count" invisible="1"/>
                <button class="oe_stat_button" name="action_fsm_worksheet"
                    type="object" groups="project.group_project_user" help="Worksheet from this task"
                    attrs="{'invisible': ['|', ('allow_worksheets', '=', False), ('worksheet_template_id', '=', False)]}">
                    <div class="row">
                        <div class="col-4 align-self-center ml-3" style="font-size:2rem;">
                            <i class="fa fa-check text-success" aria-label="Edit" title="Edit worksheet" attrs="{'invisible': [('worksheet_count', '=', 0)]}" />
                            <i class="fa fa-circle text-danger" aria-label="Create" title="Create worksheet" attrs="{'invisible': [('worksheet_count', '!=', 0)]}" />
                        </div>
                        <span class="o_stat_info align-self-center">Worksheet</span>
                    </div>
                </button>
            </xpath>
            <field name="sale_line_id" position="after">
                <field name="worksheet_template_id" attrs="{'invisible': [('allow_worksheets', '=', False)]}"/>
            </field>
        </field>
    </record>

    <record id="project_task_view_form_fsm_inherit" model="ir.ui.view">
        <field name="name">task.form.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="industry_fsm.project_task_view_form_fsm"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_fsm_view_material']" position="before">
                <field name="allow_worksheets" invisible="1"/>
                <field name="worksheet_count" invisible="1"/>
                <field name="worksheet_template_id" invisible="1"/>
                <button class="oe_stat_button" name="action_fsm_worksheet"
                    type="object" groups="project.group_project_user" help="Worksheet from this task"
                    attrs="{'invisible': ['|', ('allow_worksheets', '=', False), ('worksheet_template_id', '=', False)]}">
                    <div class="row">
                        <div class="col-4 align-self-center ml-3" style="font-size:2rem;">
                            <i class="fa fa-check text-success" aria-label="Edit" title="Edit worksheet" attrs="{'invisible': [('worksheet_count', '=', 0)]}" />
                            <i class="fa fa-circle text-danger" aria-label="Create" title="Create worksheet" attrs="{'invisible': [('worksheet_count', '!=', 0)]}" />
                        </div>
                        <span class="o_stat_info align-self-center">Worksheet</span>
                    </div>
                </button>
            </xpath>
            <field name="project_id" position="after">
                <label class="oe_edit_only" for="worksheet_template_id"/>
                <field class="oe_edit_only" name="worksheet_template_id" nolabel="1"/>
            </field>
            <xpath expr="//field[@name='project_id']" position="attributes">
                <attribute name="context">{
                    'default_allow_planning': True,
                    'default_allow_billable': True,
                    'default_allow_worksheets': True
                    }
                </attribute>
            </xpath>
        </field>
    </record>

</odoo>
