<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <template id="worksheet_custom_page">
            <t t-call="web.external_layout">
                <div class="page">
                    <table class="w-100">
                        <tr>
                            <th class="pr-2"><strong>Contact: </strong></th>
                            <td class="w-40">
                                <div t-esc="doc.user_id" t-options='{
                                    "widget": "contact",
                                    "fields": ["name", "address", "phone", "email"]
                                    }'/>
                            </td>
                            <t t-if="doc.partner_id">
                                <th class="pr-2">Client: </th>
                                <td><t t-esc="doc.partner_id" t-options='{
                                        "widget": "contact",
                                        "fields": ["name", "address", "phone", "email"]
                                        }'/>
                                </td>
                            </t>
                        </tr>
                    </table>

                    <h1 class="mt-4 mb-4"> Task: <span t-field="doc.name"/></h1>
                    <table class="w-100 mb-4">
                        <thead>
                            <tr>
                                <th class="w-33">Start Date</th>
                                <th class="w-33">End Date</th>
                                <th>Performed Hours</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><span t-field="doc.planned_date_begin"/></td>
                                <td><span t-field="doc.planned_date_end"/></td>
                                <td><span t-field="doc.total_hours_spent" t-options="{'widget': 'float_time'}"/> hours</td>
                            </tr>
                        </tbody>
                    </table>
                    <t t-if="doc.allow_timesheets and doc.timesheet_ids">
                        <h2>Timesheets</h2>
                        <table class="table table-sm o_main_table">
                            <thead>
                                <tr>
                                    <th class="text-left">Date</th>
                                    <th class="text-left">Employee</th>
                                    <th class="text-right">Description</th>
                                    <th class="text-right">Time Spent</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-foreach="doc.timesheet_ids" t-as="line">
                                    <tr>
                                        <td>
                                            <span t-field="line.date"/>
                                        </td>
                                        <td>
                                            <span t-field="line.employee_id.name"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.display_name"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.unit_amount" t-options="{'widget': 'float_time'}"/> hour(s)
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                    <t groups="sales_team.group_sale_salesman">
                        <t t-set="order" t-value="doc.sale_order_id"/>
                        <t t-set="timesheet_product" t-value="doc.sale_line_id"/>
                        <t t-if="doc.is_fsm and order">
                            <h2>Time &amp; Material</h2>
                            <table class="table table-sm o_main_table">
                                <thead>
                                    <tr>
                                        <th class="text-left">Description</th>
                                        <th class="text-right">Quantity</th>
                                        <th t-if="order.amount_total != 0" class="text-right">Unit Price</th>
                                        <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                            <span>Disc.%</span>
                                        </th>
                                        <th class="text-right">
                                            <t t-if="order.amount_total != 0" groups="account.group_show_line_subtotals_tax_excluded">Amount</t>
                                            <t  t-if="order.amount_total != 0" groups="account.group_show_line_subtotals_tax_included">Total Price</t>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="sale_tbody">

                                    <t t-set="current_subtotal" t-value="0"/>

                                    <t t-foreach="order.order_line" t-as="line">

                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                            <t t-if="not line.display_type and not line.is_downpayment">
                                                <td><span t-field="line.name"/></td>
                                                <td class="text-right">
                                                    <span t-field="line.product_uom_qty"/>
                                                    <span t-field="line.product_uom" groups="uom.group_uom"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-if="line.price_total != 0" t-field="line.price_unit"/>
                                                </td>
                                                <td t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                                                    <span t-field="line.discount"/>
                                                </td>
                                                <td class="text-right o_price_total">
                                                    <span t-if="line.price_subtotal != 0" t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                                    <span  t-if="line.price_total != 0" t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                                </td>
                                            </t>
                                            <t t-if="line.display_type == 'line_section'">
                                                <td colspan="99">
                                                    <span t-field="line.name"/>
                                                </td>
                                                <t t-set="current_section" t-value="line"/>
                                                <t t-set="current_subtotal" t-value="0"/>
                                            </t>
                                            <t t-if="line.display_type == 'line_note'">
                                                <td colspan="99">
                                                    <span t-field="line.name"/>
                                                </td>
                                            </t>
                                        </tr>

                                        <t t-if="current_section and (line_last or doc.sale_order_id.order_line[line_index+1].display_type == 'line_section')">
                                            <tr class="is-subtotal text-right">
                                                <td colspan="99">
                                                    <strong class="mr16">Subtotal</strong>
                                                    <span
                                                        t-esc="current_subtotal"
                                                        t-options='{"widget": "monetary", "display_currency": doc.sale_order_id.pricelist_id.currency_id}'
                                                    />
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </tbody>
                            </table>

                            <div class="clearfix" name="so_total_summary">
                                <div id="total" class="row" name="total">
                                    <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                        <table t-if="order.amount_untaxed != 0" class="table table-sm">
                                            <tr class="border-black o_subtotal" style="">
                                                <td><strong>Subtotal</strong></td>
                                                <td class="text-right">
                                                    <span t-field="doc.sale_order_id.amount_untaxed"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </t>
                    <div t-if="doc.worksheet_template_id.report_view_id and worksheet_map.get(doc.id)" style="page-break-inside: avoid">
                        <t t-set="worksheet" t-value="worksheet_map.get(doc.id)"/>
                        <h2>Summary</h2>
                        <t t-call="#{doc.worksheet_template_id.report_view_id.xml_id}"/>
                        <br/>
                    </div>
                    <div t-if="doc.worksheet_signature" class="row mt-4">
                        <div t-attf-class="#{'col-3' if report_type != 'html' else 'col-sm-7 col-md-4'} ml-auto text-center">
                            <h5>Signature</h5>
                            <img t-att-src="image_data_uri(doc.worksheet_signature)" style="max-height: 6rem; max-width: 100%;"/>
                            <span t-field="doc.worksheet_signed_by"/>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="worksheet_custom">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="industry_fsm_report.worksheet_custom_page" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>

    </data>
</odoo>
