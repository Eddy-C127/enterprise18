<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="appointment_info" inherit_id="appointment.appointment_info">
    <xpath expr="//div[contains(@t-attf-class, 'o_appointment_details_column')]/*[1]/*[1]" position="before">
        <div t-if="appointment_type.product_id" class="d-flex text-muted fs-6 lh-lg w-100 ps-0 py-1 mb-1">
            <i class="fa fa-credit-card o_appointment_fa_width text-center fs-5 me-2 mt-1"/>
            <span t-esc="appointment_type.product_id.lst_price"
                t-options="{'widget': 'monetary', 'display_currency': appointment_type.product_id.currency_id}"/>
        </div>
    </xpath>
</template>
</odoo>
