<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- share links -->

        <record id="share_account_folder" model="documents.share">
            <field name="name">Inbox documents</field>
            <field name="alias_name">inbox-financial</field>
            <field name="type">domain</field>
            <field name="folder_id" ref="documents.documents_finance_status_inbox"/>
            <field name="action">downloadupload</field>
            <field name="tag_ids" eval="[(6,0,[ref('documents.documents_finance_status_inbox')])]"/>
            <field name="email_drop">True</field>
            <field name="activity_option">True</field>
            <field name="activity_type_id" ref="documents.mail_documents_activity_data_Inbox"/>
            <field name="activity_date_deadline_range">7</field>
            <field name="activity_date_deadline_range_type">days</field>
        </record>

        <!-- Workflow Rules -->

        <record id="vendor_bill_rule" model="documents.workflow.rule" forcecreate="0">
            <field name="name">Create a vendor bill</field>
            <field name="create_model">account.invoice.in_invoice</field>
            <field name="domain_folder_id" ref="documents.documents_finance_folder"/>
        </record>

        <record id="credit_note_rule" model="documents.workflow.rule" forcecreate="0">
            <field name="name">Create a credit note</field>
            <field name="create_model">account.invoice.out_refund</field>
            <field name="domain_folder_id" ref="documents.documents_finance_folder"/>
        </record>

        <!-- activity types -->

        <record id="mail_documents_activity_data_vat" model="mail.activity.type">
            <field name="name">Tax Statement</field>
            <field name="delay_count">3</field>
            <field name="delay_unit">months</field>
            <field name="delay_from">previous_activity</field>
        </record>

        <record id="mail_documents_activity_data_vat" model="mail.activity.type">
            <field name="force_next">True</field>
            <field name="default_next_type_id" ref="mail_documents_activity_data_vat"/>
        </record>


        <record id="mail_documents_activity_data_fs" model="mail.activity.type">
            <field name="name">Fiscal Statement</field>
            <field name="delay_count">12</field>
            <field name="delay_unit">months</field>
            <field name="delay_from">previous_activity</field>
        </record>

        <record id="mail_documents_activity_data_fs" model="mail.activity.type">
            <field name="force_next">True</field>
            <field name="default_next_type_id" ref="mail_documents_activity_data_fs"/>
        </record>
    </data>
</odoo>
