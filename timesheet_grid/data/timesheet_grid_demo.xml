<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Validate timesheets if older than 10 days -->
        <function model="hr.employee" name="write">
            <value model="hr.employee" eval="obj().search([('timesheet_validated', '=', False)]).ids"/>
            <value eval="{'timesheet_validated': (DateTime.now() + relativedelta(days=-10)).strftime('%Y-%m-%d')}"/>
        </function>
    </data>
</odoo>
