<odoo>
    <t t-inherit="web.ActionInstallKioskPWA" t-inherit-mode="extension">
        <xpath expr="//div/*[last()]" position="after">
            <br/>
            <div class="fs-2 mb-2">Or select your Kiosk IoT Boxes to start:</div>
            <div>
                <TagsList tags="this.state.tags"/>
            </div>
        </xpath>
        <xpath expr="//footer/*[last()]" position="after">
            <button class="btn btn-primary" t-on-click="actionOpenKioskIot" t-out="'Open on IoT Box' + (this.state.tags.length > 1 ? 'es' : '')"/>
        </xpath>
    </t>
</odoo>
