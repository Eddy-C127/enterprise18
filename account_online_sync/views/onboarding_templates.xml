<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- bank account step -->
    <template id="onboarding_bank_account_step">
        <t t-call="base.onboarding_step">
            <t t-set="title">Bank Account</t>
            <t t-set="description">Synchronize with your bank to easily track payments.</t>
            <t t-set="btn_text">I'm ready</t>
            <t t-set="done_text">Step Completed!</t>
            <t t-set="method" t-value="'setting_init_bank_account_action'" />
            <t t-set="model" t-value="'res.company'" />
            <t t-set="done" t-value="company.account_setup_bank_data_done" />
        </t>
    </template>
    <!-- add it in the account invoice onboarding panel -->
    <template id="account_dashboard_bank_account_onboarding"
              name="account dashbaord bank account onboarding"
              inherit_id="account.account_dashboard_onboarding_panel">
        <xpath expr="//t[@name='company_step']" position="after">
            <t t-call="account_online_sync.onboarding_bank_account_step" name="bank_account_step" />
         </xpath>
    </template>
</odoo>