<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_preparation_display.PreparationDisplay">
        <div t-if="!preparationDisplay.posHasProducts and this.preparationDisplay.loadingProducts" class="block-top-header position-absolute top-0 start-0 bg-black opacity-50 w-100 h-100 z-1000">
            <div class="d-flex h-100 w-100 text-white flex-row align-items-center justify-content-center">
                <div class="o_spinner d-flex flex-column mb-4">
                    <img src="/web/static/img/spin.svg" alt="Loading..."/>
                    Loading...
                </div>
            </div>
        </div>
        <div class="o_pdis_main_screen d-flex flex-column vh-100 w-100 bg-view overflow-hidden user-select-none">
            <div class="o_pdis_navbar d-flex justify-content-between">
                <div class="d-flex align-items-center justify-content-start">
                    <button
                        t-attf-class="btn position-relative h-100 px-4 rounded-0 border-end shadow-none {{ !this.preparationDisplay.showCategoryFilter ? 'border-bottom' : ''}}" 
                        t-on-click="() => { this.toggleCategoryFilter(); this.showSidebar = !this.showSidebar }">
                        <div class="position-relative px-1">
                            <i class="d-block oi fa-fw" t-att-class="showSidebar ? ' oi-panel-right fa-rotate-180' : 'oi-close oi-larger'" role="img"/>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill text-bg-info fs-6 fw-bolder" t-if="this.filterSelected and this.showSidebar" t-esc="this.filterSelected" />
                        </div>
                    </button>
                </div>
                <Stages stages="this.preparationDisplay.stages" />
                <div class="d-flex align-items-center h-100 justify-content-end border-bottom">
                    <button class="btn rounded-0 border-start px-4 h-100 shadow-none" t-on-click="() => this.preparationDisplay.exit()">
                        <span class="o_pdis_close d-none d-lg-inline-block px-2">Close</span>
                        <i class="fa fa-sign-out oi-large" role="img"/>
                    </button>
                </div>
            </div>
            <div class="o_pdis_content d-flex w-100">
                <div class="o_pdis_sidebar d-flex flex-column text-800" t-att-class="{'hide-category d-none': !this.preparationDisplay.showCategoryFilter}">
                    <div t-if="this.filterSelected" class="btn btn-info btn-lg mt-2 mb-0 ms-3 me-2" t-on-click="() => this.resetFilter()">
                        Clear All Filters
                    </div>
                    <div class="o_pdis_categories mh-100 overflow-auto px-3 mb-auto">
                        <t t-foreach="this.preparationDisplay.categories" t-as="category" t-key="category">
                            <Category category="category_value" />
                        </t>
                    </div>
                    <div class="o_pdis_logo d-flex justify-content-center py-1 border-top">
                        <img src="/web/static/img/logo.png" />
                    </div>
                </div>

                <div class="o_pdis_main_area w-100 h-100 overflow-hidden">
                    <t t-set="isLastStage" t-value="this.preparationDisplay.selectedStageId === this.preparationDisplay.lastStage.id"/>
                    <t t-set="hasOrders" t-value="this.preparationDisplay.lastStage.orderCount and !this.env.debug"/>
                    <t t-set="isDebug" t-value="this.env.debug"/>
                    <div t-attf-class="o_pdis_actions  {{ (this.filterSelected and this.showSidebar) or (isLastStage and hasOrders) or isDebug ? 'd-flex' : 'd-none'}} align-items-center border-start">
                        <div
                            t-if="this.filterSelected and this.showSidebar"
                            t-attf-class="{{ (this.filterSelected and this.showSidebar) or isLastStage or isDebug ? 'd-flex' : 'd-none'}} align-items-center flex-grow-1 overflow-hidden">
                            <t t-set="filters" t-value="this.getFilters()"/>
                            <div class="tags d-flex flex-nowrap ps-3 pe-2 overflow-auto">
                                <t t-foreach="filters.categoryFilters" t-as="category"  t-key="category.id">
                                    <div class="btn btn-info me-1 flex-shrink-0" t-on-click="() => this.preparationDisplay.toggleCategory(category)">
                                        <t t-esc="category.name"/>
                                        <i class="oi oi-close ps-2" aria-hidden="true"/>
                                    </div>
                                </t>
                                <t t-foreach="filters.productFilters" t-as="product" t-key="product.id">
                                    <div class="btn btn-info me-1 flex-shrink-0" t-on-click="() => this.preparationDisplay.toggleProduct(product)">
                                        <t t-esc="product.name"/>
                                        <i class="oi oi-close ps-2" aria-hidden="true"/>
                                    </div>
                                </t>
                            </div>
                            <div class="btn btn-link text-info fw-bold rounded flex-shrink-0" t-on-click="() => this.resetFilter()">
                                Clear All Filters
                            </div>
                        </div>
                        <div t-if="isLastStage and hasOrders" class="o_pdis_orders_actions--archive px-3 d-flex align-items-center flex-shrink-0">
                            <div class="btn btn-dark flex-shrink-0"
                                t-on-click="() => this.archiveAllVisibleOrders()">
                                <i class="fa fa-archive pe-2" aria-hidden="true"></i> Archive all
                            </div>
                        </div>
                        <div t-if="isDebug" class="o_pdis_orders_actions--archive px-3 d-flex align-items-center flex-shrink-0">
                            <div class="btn btn-dark flex-shrink-0"
                                t-on-click="() => this.preparationDisplay.resetOrders()">
                                <i class="fa fa-archive" aria-hidden="true"></i> Archive all
                            </div>
                        </div>
                    </div>
                    <div t-if="!preparationDisplay.posHasProducts" t-attf-class="o_pdis_no_products position-relative text-center d-flex justify-content-center align-items-start flex-grow-1 gap-3 text-reset p-3 overflow-auto {{ this.filterSelected and this.showSidebar or isLastStage and hasOrders  ? 'o_pdis_action_bar' : 'h-100'}}">
                        <div t-if="!this.preparationDisplay.loadingProducts" class="mt-5">
                            <p class="text-larger">No products available. Explore <a role="button" class="button-no-demo fw-bold" t-on-click="() => this.preparationDisplay.loadDemoDataProducts()">demo data</a> or <a role="button" class="button-no-demo fw-bold" t-on-click="createNewProducts">create your own</a>.</p>
                        </div>
                    </div>
                    <div t-else="" t-attf-class="o_pdis_orders position-relative d-grid flex-grow-1 gap-3 text-reset p-3 overflow-auto {{ this.filterSelected and this.showSidebar or isLastStage and hasOrders  ? 'o_pdis_action_bar' : 'h-100'}}">
                        <t t-foreach="this.preparationDisplay.filteredOrders" t-as="order" t-key="order.id">
                            <Order order="order" />
                        </t>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
