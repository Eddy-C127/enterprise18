<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="knowledge_base_forum_card" inherit_id="website_helpdesk.knowledge_base">
        <xpath expr="//div[@id='o_knowledge_base_sections']" position="inside">
            <t t-set="hide_community_button" t-value="True"/>
            <div class="col" style="display: grid;" t-if="team.show_knowledge_base_forum">
                <div class="pt16 pb16 text-center o_colored_level help-section">
                    <i class="fa fa-3x rounded bg-secondary m-3 fa-comments fa-3x rounded bg-secondary m-3 help-icon">â€‹</i>
                    <h3 class="h5-fs help-title">Community</h3>
                    <p class="h5-fs help-description">Ask questions and discuss tips with fellow members in a forum</p>
                    <div t-if="team.top_forum_posts" class="top-item-list-container">
                        <h3 class="item-list-title">
                            <t t-if="len(team.top_forum_posts) &gt; 4">
                                Most Voted
                            </t>
                            <t t-else="">
                                Quick Links
                            </t>
                        </h3>
                        <div class="item-list">
                            <t t-foreach="team.top_forum_posts" t-as="post">
                                <a t-attf-href="/forum/#{slug(post.forum_id)}/#{slug(post)}" t-attf-title="{{post.name}}" target="_blank" class="list-item">
                                    <t t-out="post.name"/>
                                </a>
                            </t>
                        </div>
                    </div>
                    <a t-attf-href="/helpdesk/{{ slug(team) }}/forums" class="btn btn-outline-primary item-button" target="_blank" data-bs-original-title="" title="">Ask the Community</a>
                </div>
            </div>
        </xpath>
    </template>

    <template id="footer" inherit_id="website_helpdesk.footer">
        <xpath expr="//p[@id='footer_buttons']" position="inside">
            <a class="btn btn-secondary btn-lg mb-2" href="/forum" t-if="team.use_website_helpdesk_forum and not hide_community_button">Ask the Community</a>
        </xpath>
    </template>
</odoo>
